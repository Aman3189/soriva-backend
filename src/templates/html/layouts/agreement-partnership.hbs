{{!-- 
  SORIVA - Partnership Agreement/Deed Template
  Type: partnership
  Use: Partnership firm formation between 2+ partners
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{agreementTitle}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400;0,600;0,700;1,400&family=Nunito+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#7c3aed{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}08{{else}}#7c3aed08{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#6d28d9{{/if}};
      --text-dark: #1e1b4b;
      --text-muted: #64748b;
      --border: #e2e8f0;
      --bg-light: #f8fafc;
      --bg-purple: #f5f3ff;
      --gold: #d97706;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    @page {
      size: A4;
      margin: 18mm;
    }

    body {
      font-family: 'Nunito Sans', sans-serif;
      font-size: 11pt;
      line-height: 1.65;
      color: var(--text-dark);
      background: #f1f5f9;
      padding: 20px;
    }

    .document {
      max-width: 210mm;
      margin: 0 auto;
      background: white;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    /* Header */
    .header {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
      color: white;
      padding: 35px 50px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .header::before {
      content: 'üë•';
      position: absolute;
      font-size: 150pt;
      opacity: 0.1;
      right: -30px;
      top: -30px;
    }

    .header-badge {
      display: inline-block;
      background: rgba(255,255,255,0.2);
      padding: 5px 20px;
      border-radius: 20px;
      font-size: 9pt;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 12px;
    }

    .document-title {
      font-family: 'Crimson Pro', serif;
      font-size: 28pt;
      font-weight: 700;
      margin-bottom: 8px;
      text-transform: uppercase;
      letter-spacing: 3px;
    }

    .firm-name-display {
      font-size: 16pt;
      font-weight: 600;
      opacity: 0.95;
      margin-bottom: 15px;
    }

    .header-meta {
      display: flex;
      justify-content: center;
      gap: 25px;
      font-size: 10pt;
      opacity: 0.9;
    }

    .header-meta-item {
      display: flex;
      align-items: center;
      gap: 5px;
    }

    /* Content */
    .content {
      padding: 40px 50px;
    }

    /* Preamble */
    .preamble {
      background: var(--bg-purple);
      border-left: 5px solid var(--accent);
      padding: 20px 25px;
      margin-bottom: 30px;
      text-align: justify;
      line-height: 1.8;
    }

    .preamble strong {
      color: var(--accent);
    }

    /* Section */
    .section {
      margin-bottom: 30px;
    }

    .section-header {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 18px;
    }

    .section-number {
      background: var(--accent);
      color: white;
      width: 32px;
      height: 32px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 14pt;
    }

    .section-title {
      font-family: 'Crimson Pro', serif;
      font-size: 15pt;
      font-weight: 700;
      color: var(--text-dark);
    }

    .section-underline {
      flex: 1;
      height: 2px;
      background: linear-gradient(90deg, var(--accent) 0%, transparent 100%);
    }

    /* Partners Grid */
    .partners-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
      margin-bottom: 20px;
    }

    .partner-card {
      border: 2px solid var(--border);
      border-radius: 12px;
      overflow: hidden;
      transition: all 0.3s;
    }

    .partner-card:hover {
      border-color: var(--accent);
    }

    .partner-card-header {
      background: linear-gradient(90deg, var(--accent) 0%, var(--accent-dark) 100%);
      color: white;
      padding: 12px 18px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .partner-label {
      font-weight: 700;
      font-size: 11pt;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .partner-share-badge {
      background: rgba(255,255,255,0.25);
      padding: 3px 12px;
      border-radius: 12px;
      font-size: 10pt;
      font-weight: 700;
    }

    .partner-card-body {
      padding: 18px;
      background: var(--bg-light);
    }

    .partner-name {
      font-family: 'Crimson Pro', serif;
      font-size: 15pt;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 10px;
    }

    .partner-detail {
      font-size: 10pt;
      color: var(--text-muted);
      margin-bottom: 5px;
      display: flex;
    }

    .partner-detail-label {
      width: 70px;
      font-weight: 600;
      color: var(--text-dark);
    }

    /* Firm Details Box */
    .firm-box {
      background: white;
      border: 2px solid var(--accent);
      border-radius: 12px;
      overflow: hidden;
      margin-bottom: 20px;
    }

    .firm-box-header {
      background: var(--accent);
      color: white;
      padding: 15px 20px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .firm-box-icon {
      font-size: 24pt;
    }

    .firm-box-title {
      font-family: 'Crimson Pro', serif;
      font-size: 18pt;
      font-weight: 700;
    }

    .firm-box-body {
      padding: 20px;
    }

    .firm-details-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .firm-detail-item {
      background: var(--bg-light);
      padding: 12px 15px;
      border-radius: 8px;
      border-left: 3px solid var(--accent);
    }

    .firm-detail-label {
      font-size: 9pt;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .firm-detail-value {
      font-size: 12pt;
      font-weight: 600;
      color: var(--text-dark);
      margin-top: 3px;
    }

    /* Capital Table */
    .capital-table {
      width: 100%;
      border-collapse: collapse;
      margin: 15px 0;
      font-size: 10pt;
    }

    .capital-table th {
      background: linear-gradient(90deg, var(--accent) 0%, var(--accent-dark) 100%);
      color: white;
      padding: 12px 15px;
      text-align: left;
      font-weight: 700;
      text-transform: uppercase;
      font-size: 9pt;
      letter-spacing: 0.5px;
    }

    .capital-table td {
      padding: 12px 15px;
      border-bottom: 1px solid var(--border);
    }

    .capital-table tr:nth-child(even) {
      background: var(--bg-light);
    }

    .capital-table .amount {
      font-weight: 700;
      color: var(--accent);
      font-size: 11pt;
    }

    .capital-table .percentage {
      background: var(--bg-purple);
      color: var(--accent);
      padding: 3px 10px;
      border-radius: 12px;
      font-weight: 700;
      font-size: 10pt;
    }

    .capital-table tfoot {
      background: var(--bg-purple);
      font-weight: 700;
    }

    .capital-table tfoot td {
      border-bottom: none;
      border-top: 2px solid var(--accent);
    }

    /* Profit/Loss Cards */
    .ratio-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      margin: 20px 0;
    }

    .ratio-card {
      background: var(--bg-light);
      border: 2px solid var(--border);
      border-radius: 12px;
      padding: 20px;
      text-align: center;
    }

    .ratio-card.profit {
      border-color: #10b981;
      background: #ecfdf5;
    }

    .ratio-card.loss {
      border-color: #ef4444;
      background: #fef2f2;
    }

    .ratio-icon {
      font-size: 28pt;
      margin-bottom: 8px;
    }

    .ratio-label {
      font-size: 10pt;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 5px;
    }

    .ratio-value {
      font-family: 'Crimson Pro', serif;
      font-size: 22pt;
      font-weight: 700;
      color: var(--text-dark);
    }

    /* Management Roles */
    .roles-list {
      margin: 15px 0;
    }

    .role-item {
      display: flex;
      gap: 15px;
      padding: 15px;
      background: var(--bg-light);
      border-radius: 10px;
      margin-bottom: 12px;
      border-left: 4px solid var(--accent);
    }

    .role-icon {
      width: 45px;
      height: 45px;
      background: var(--accent);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18pt;
      flex-shrink: 0;
    }

    .role-content {
      flex: 1;
    }

    .role-partner {
      font-weight: 700;
      font-size: 12pt;
      color: var(--text-dark);
    }

    .role-title {
      color: var(--accent);
      font-size: 10pt;
      font-weight: 600;
      margin-bottom: 5px;
    }

    .role-responsibilities {
      font-size: 10pt;
      color: var(--text-muted);
    }

    /* Info Boxes */
    .info-row {
      display: flex;
      gap: 20px;
      margin: 15px 0;
    }

    .info-box {
      flex: 1;
      background: var(--bg-light);
      padding: 15px;
      border-radius: 8px;
      border-left: 4px solid var(--accent);
    }

    .info-box-label {
      font-size: 9pt;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .info-box-value {
      font-size: 12pt;
      font-weight: 600;
      color: var(--text-dark);
      margin-top: 3px;
    }

    /* Clause */
    .clause {
      margin-bottom: 15px;
      text-align: justify;
    }

    .clause-number {
      font-weight: 700;
      color: var(--accent);
    }

    .clause-title {
      font-weight: 700;
    }

    .clause-list {
      margin: 10px 0 10px 20px;
      padding-left: 0;
    }

    .clause-list li {
      margin-bottom: 8px;
      padding-left: 10px;
      list-style-type: lower-alpha;
    }

    /* Registration Notice */
    .registration-notice {
      background: linear-gradient(135deg, var(--bg-purple) 0%, #ede9fe 100%);
      border: 1px dashed var(--accent);
      border-radius: 10px;
      padding: 18px 22px;
      margin: 25px 0;
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .registration-notice-icon {
      font-size: 28pt;
    }

    .registration-notice-text {
      font-size: 10pt;
      color: var(--text-dark);
      line-height: 1.6;
    }

    .registration-notice-text strong {
      color: var(--accent);
    }

    /* Signature Section */
    .signature-section {
      margin-top: 40px;
      padding-top: 30px;
      border-top: 2px solid var(--border);
      page-break-inside: avoid;
    }

    .signature-intro {
      text-align: center;
      font-size: 11pt;
      margin-bottom: 30px;
      font-style: italic;
    }

    .signatures-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }

    .signature-block {
      text-align: center;
      padding: 15px;
      background: var(--bg-light);
      border-radius: 10px;
    }

    .signature-label {
      font-size: 10pt;
      font-weight: 700;
      color: var(--accent);
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 12px;
    }

    .signature-line {
      border-bottom: 1px solid var(--text-dark);
      height: 50px;
      margin: 0 20px 8px;
      display: flex;
      align-items: flex-end;
      justify-content: center;
    }

    .signature-line img {
      max-height: 45px;
      max-width: 140px;
      object-fit: contain;
    }

    .signature-name {
      font-weight: 700;
      font-size: 11pt;
    }

    .signature-date {
      font-size: 10pt;
      color: var(--text-muted);
      margin-top: 5px;
    }

    /* Witness Section */
    .witness-section {
      margin-top: 35px;
      padding-top: 25px;
      border-top: 1px dashed var(--border);
    }

    .witness-title {
      font-family: 'Crimson Pro', serif;
      font-size: 13pt;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 20px;
      text-align: center;
    }

    .witness-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px;
    }

    .witness-block {
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 15px;
      background: var(--bg-light);
    }

    .witness-number {
      font-size: 9pt;
      font-weight: 700;
      color: var(--accent);
      text-transform: uppercase;
      margin-bottom: 10px;
    }

    .witness-line {
      border-bottom: 1px dashed var(--text-muted);
      height: 35px;
      margin-bottom: 8px;
    }

    .witness-field {
      font-size: 10pt;
      color: var(--text-muted);
      margin-bottom: 4px;
    }

    /* Footer */
    .document-footer {
      background: var(--bg-light);
      padding: 20px 50px;
      border-top: 1px solid var(--border);
      font-size: 9pt;
      color: var(--text-muted);
      text-align: center;
    }

    /* Watermark */
    {{#if showWatermark}}
    .watermark {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-30deg);
      font-size: 70pt;
      color: var(--accent);
      opacity: 0.03;
      pointer-events: none;
      white-space: nowrap;
    }
    {{/if}}

    @media print {
      body { background: white; padding: 0; }
      .document { box-shadow: none; }
    }
  </style>
</head>
<body>
  <div class="document">
    {{#if showWatermark}}
    <div class="watermark">{{#if watermark}}{{watermark}}{{else}}PARTNERSHIP DEED{{/if}}</div>
    {{/if}}

    <!-- Header -->
    <div class="header">
      <div class="header-badge">Legal Document</div>
      <h1 class="document-title">{{agreementTitle}}</h1>
      {{#if partnership.firmName}}
      <div class="firm-name-display">„Äå {{partnership.firmName}} „Äç</div>
      {{/if}}
      <div class="header-meta">
        {{#if agreementNumber}}
        <div class="header-meta-item">
          <span>üìÑ</span>
          <span>{{agreementNumber}}</span>
        </div>
        {{/if}}
        <div class="header-meta-item">
          <span>üìÖ</span>
          <span>{{effectiveDate}}</span>
        </div>
        {{#if placeOfExecution}}
        <div class="header-meta-item">
          <span>üìç</span>
          <span>{{placeOfExecution}}</span>
        </div>
        {{/if}}
      </div>
    </div>

    <!-- Content -->
    <div class="content">
      <!-- Preamble -->
      <div class="preamble">
        This <strong>Partnership Deed</strong> (hereinafter referred to as the "Deed") is made and executed on 
        <strong>{{effectiveDate}}</strong>{{#if placeOfExecution}} at <strong>{{placeOfExecution}}</strong>{{/if}}, 
        by and between the Partners named herein, who have mutually agreed to form a Partnership Firm under the Indian Partnership Act, 1932, 
        subject to the terms and conditions set forth below.
      </div>

      <!-- Partners Section -->
      <div class="section">
        <div class="section-header">
          <div class="section-number">1</div>
          <div class="section-title">Partners</div>
          <div class="section-underline"></div>
        </div>

        <div class="partners-grid">
          <div class="partner-card">
            <div class="partner-card-header">
              <span class="partner-label">First Partner</span>
              {{#if partnership.capitalContribution.[0].percentage}}
              <span class="partner-share-badge">{{partnership.capitalContribution.[0].percentage}}% Share</span>
              {{/if}}
            </div>
            <div class="partner-card-body">
              <div class="partner-name">{{firstParty.name}}</div>
              <div class="partner-detail">
                <span class="partner-detail-label">Address:</span>
                <span>{{firstParty.address}}</span>
              </div>
              {{#if firstParty.email}}
              <div class="partner-detail">
                <span class="partner-detail-label">Email:</span>
                <span>{{firstParty.email}}</span>
              </div>
              {{/if}}
              {{#if firstParty.pan}}
              <div class="partner-detail">
                <span class="partner-detail-label">PAN:</span>
                <span>{{firstParty.pan}}</span>
              </div>
              {{/if}}
            </div>
          </div>

          <div class="partner-card">
            <div class="partner-card-header">
              <span class="partner-label">Second Partner</span>
              {{#if partnership.capitalContribution.[1].percentage}}
              <span class="partner-share-badge">{{partnership.capitalContribution.[1].percentage}}% Share</span>
              {{/if}}
            </div>
            <div class="partner-card-body">
              <div class="partner-name">{{secondParty.name}}</div>
              <div class="partner-detail">
                <span class="partner-detail-label">Address:</span>
                <span>{{secondParty.address}}</span>
              </div>
              {{#if secondParty.email}}
              <div class="partner-detail">
                <span class="partner-detail-label">Email:</span>
                <span>{{secondParty.email}}</span>
              </div>
              {{/if}}
              {{#if secondParty.pan}}
              <div class="partner-detail">
                <span class="partner-detail-label">PAN:</span>
                <span>{{secondParty.pan}}</span>
              </div>
              {{/if}}
            </div>
          </div>
        </div>

        {{#if additionalParties}}
        <div class="partners-grid">
          {{#each additionalParties}}
          <div class="partner-card">
            <div class="partner-card-header">
              <span class="partner-label">Partner {{@indexPlusTwo}}</span>
            </div>
            <div class="partner-card-body">
              <div class="partner-name">{{this.name}}</div>
              <div class="partner-detail">
                <span class="partner-detail-label">Address:</span>
                <span>{{this.address}}</span>
              </div>
              {{#if this.pan}}
              <div class="partner-detail">
                <span class="partner-detail-label">PAN:</span>
                <span>{{this.pan}}</span>
              </div>
              {{/if}}
            </div>
          </div>
          {{/each}}
        </div>
        {{/if}}
      </div>

      <!-- Firm Details -->
      {{#if partnership}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">2</div>
          <div class="section-title">Firm Details</div>
          <div class="section-underline"></div>
        </div>

        <div class="firm-box">
          <div class="firm-box-header">
            <span class="firm-box-icon">üè¢</span>
            <span class="firm-box-title">{{partnership.firmName}}</span>
          </div>
          <div class="firm-box-body">
            <div class="firm-details-grid">
              <div class="firm-detail-item">
                <div class="firm-detail-label">Nature of Business</div>
                <div class="firm-detail-value">{{partnership.businessNature}}</div>
              </div>
              {{#if partnership.businessAddress}}
              <div class="firm-detail-item">
                <div class="firm-detail-label">Business Address</div>
                <div class="firm-detail-value">{{partnership.businessAddress}}</div>
              </div>
              {{/if}}
              {{#if partnership.accountingYear}}
              <div class="firm-detail-item">
                <div class="firm-detail-label">Accounting Year</div>
                <div class="firm-detail-value">{{partnership.accountingYear}}</div>
              </div>
              {{/if}}
              {{#if terms.duration}}
              <div class="firm-detail-item">
                <div class="firm-detail-label">Duration</div>
                <div class="firm-detail-value">{{terms.duration}}</div>
              </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{/if}}

      <!-- Capital Contribution -->
      {{#if partnership.capitalContribution}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">3</div>
          <div class="section-title">Capital Contribution</div>
          <div class="section-underline"></div>
        </div>

        <table class="capital-table">
          <thead>
            <tr>
              <th style="width: 5%;">S.No</th>
              <th style="width: 40%;">Partner Name</th>
              <th style="width: 30%;">Contribution (‚Çπ)</th>
              <th style="width: 25%;">Percentage</th>
            </tr>
          </thead>
          <tbody>
            {{#each partnership.capitalContribution}}
            <tr>
              <td>{{@indexPlusOne}}</td>
              <td><strong>{{this.partner}}</strong></td>
              <td class="amount">‚Çπ{{this.amount}}</td>
              <td><span class="percentage">{{this.percentage}}%</span></td>
            </tr>
            {{/each}}
          </tbody>
          <tfoot>
            <tr>
              <td colspan="2"><strong>Total Capital</strong></td>
              <td class="amount">‚Çπ{{totalCapital}}</td>
              <td><span class="percentage">100%</span></td>
            </tr>
          </tfoot>
        </table>
      </div>
      {{/if}}

      <!-- Profit & Loss Sharing -->
      <div class="section">
        <div class="section-header">
          <div class="section-number">4</div>
          <div class="section-title">Profit & Loss Sharing</div>
          <div class="section-underline"></div>
        </div>

        <div class="ratio-grid">
          <div class="ratio-card profit">
            <div class="ratio-icon">üìà</div>
            <div class="ratio-label">Profit Sharing Ratio</div>
            <div class="ratio-value">{{#if partnership.profitSharingRatio}}{{partnership.profitSharingRatio}}{{else}}Equal{{/if}}</div>
          </div>
          <div class="ratio-card loss">
            <div class="ratio-icon">üìâ</div>
            <div class="ratio-label">Loss Sharing Ratio</div>
            <div class="ratio-value">{{#if partnership.lossSharingRatio}}{{partnership.lossSharingRatio}}{{else}}{{partnership.profitSharingRatio}}{{/if}}</div>
          </div>
        </div>
      </div>

      <!-- Management Roles -->
      {{#if partnership.managementRoles}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">5</div>
          <div class="section-title">Management & Responsibilities</div>
          <div class="section-underline"></div>
        </div>

        <div class="roles-list">
          {{#each partnership.managementRoles}}
          <div class="role-item">
            <div class="role-icon">üë§</div>
            <div class="role-content">
              <div class="role-partner">{{this.partner}}</div>
              <div class="role-title">{{this.role}}</div>
              {{#if this.responsibilities}}
              <div class="role-responsibilities">
                Responsibilities: {{#each this.responsibilities}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
              </div>
              {{/if}}
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- Banking Arrangements -->
      {{#if partnership.bankingArrangements}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">{{#if partnership.managementRoles}}6{{else}}5{{/if}}</div>
          <div class="section-title">Banking Arrangements</div>
          <div class="section-underline"></div>
        </div>

        <div class="info-box" style="margin: 0;">
          <div class="info-box-label">Banking Operations</div>
          <div class="info-box-value">{{partnership.bankingArrangements}}</div>
        </div>
      </div>
      {{/if}}

      <!-- Terms & Conditions -->
      <div class="section">
        <div class="section-header">
          <div class="section-number">{{#if partnership.managementRoles}}{{#if partnership.bankingArrangements}}7{{else}}6{{/if}}{{else}}{{#if partnership.bankingArrangements}}6{{else}}5{{/if}}{{/if}}</div>
          <div class="section-title">Terms & Conditions</div>
          <div class="section-underline"></div>
        </div>

        <div class="clause">
          <span class="clause-number">7.1</span>
          <span class="clause-title">CONDUCT OF BUSINESS:</span>
          All partners shall devote their attention and efforts to the partnership business and shall act in good faith towards each other.
        </div>

        <div class="clause">
          <span class="clause-number">7.2</span>
          <span class="clause-title">BOOKS OF ACCOUNTS:</span>
          Proper books of accounts shall be maintained at the principal place of business and shall be accessible to all partners.
        </div>

        <div class="clause">
          <span class="clause-number">7.3</span>
          <span class="clause-title">DRAWINGS:</span>
          Partners may draw amounts for personal use as mutually agreed, subject to availability of funds.
        </div>

        <div class="clause">
          <span class="clause-number">7.4</span>
          <span class="clause-title">ADMISSION OF NEW PARTNER:</span>
          No new partner shall be admitted without the unanimous consent of all existing partners.
        </div>

        <div class="clause">
          <span class="clause-number">7.5</span>
          <span class="clause-title">RETIREMENT:</span>
          A partner may retire from the firm by giving {{#if terms.terminationNoticePeriod}}{{terms.terminationNoticePeriod}}{{else}}three months'{{/if}} prior written notice to other partners.
        </div>

        {{#if terms.termination}}
        <div class="clause">
          <span class="clause-number">7.6</span>
          <span class="clause-title">DISSOLUTION:</span>
          {{terms.termination}}
        </div>
        {{else}}
        <div class="clause">
          <span class="clause-number">7.6</span>
          <span class="clause-title">DISSOLUTION:</span>
          The partnership may be dissolved by mutual consent of all partners or as per the provisions of the Indian Partnership Act, 1932.
        </div>
        {{/if}}

        {{#if terms.disputeResolution}}
        <div class="clause">
          <span class="clause-number">7.7</span>
          <span class="clause-title">DISPUTE RESOLUTION:</span>
          {{terms.disputeResolution}}
        </div>
        {{else}}
        <div class="clause">
          <span class="clause-number">7.7</span>
          <span class="clause-title">DISPUTE RESOLUTION:</span>
          Any dispute between the partners shall be resolved through mutual discussion. Failing which, the matter shall be referred to arbitration as per the Arbitration and Conciliation Act, 1996.
        </div>
        {{/if}}

        <div class="clause">
          <span class="clause-number">7.8</span>
          <span class="clause-title">GOVERNING LAW:</span>
          This Deed shall be governed by and construed in accordance with the {{#if governingLaw}}{{governingLaw}}{{else}}Indian Partnership Act, 1932 and laws of India{{/if}}.
          {{#if jurisdiction}} The courts at {{jurisdiction}} shall have exclusive jurisdiction.{{/if}}
        </div>
      </div>

      <!-- Registration Notice -->
      <div class="registration-notice">
        <div class="registration-notice-icon">üìã</div>
        <div class="registration-notice-text">
          <strong>Important:</strong> This Partnership Deed should be executed on appropriate stamp paper as per state laws and may be registered with the Registrar of Firms for legal benefits including the right to sue third parties.
        </div>
      </div>

      <!-- Signature Section -->
      <div class="signature-section">
        <div class="signature-intro">
          IN WITNESS WHEREOF, the Partners have hereunto set their hands and signatures on the date first mentioned above.
        </div>

        <div class="signatures-grid">
          <div class="signature-block">
            <div class="signature-label">First Partner</div>
            <div class="signature-line">
              {{#if signatures.[0].signature}}
              <img src="{{signatures.[0].signature}}" alt="Signature">
              {{/if}}
            </div>
            <div class="signature-name">{{firstParty.name}}</div>
            <div class="signature-date">Date: {{#if signatures.[0].date}}{{signatures.[0].date}}{{else}}_____________{{/if}}</div>
          </div>

          <div class="signature-block">
            <div class="signature-label">Second Partner</div>
            <div class="signature-line">
              {{#if signatures.[1].signature}}
              <img src="{{signatures.[1].signature}}" alt="Signature">
              {{/if}}
            </div>
            <div class="signature-name">{{secondParty.name}}</div>
            <div class="signature-date">Date: {{#if signatures.[1].date}}{{signatures.[1].date}}{{else}}_____________{{/if}}</div>
          </div>
        </div>
      </div>

      <!-- Witness Section -->
      {{#if witnesses}}
      <div class="witness-section">
        <div class="witness-title">WITNESSES</div>
        <div class="witness-grid">
          {{#each witnesses}}
          <div class="witness-block">
            <div class="witness-number">Witness {{@indexPlusOne}}</div>
            <div class="witness-line"></div>
            <div class="witness-field">Name: {{#if this.name}}{{this.name}}{{else}}_______________________{{/if}}</div>
            <div class="witness-field">Address: {{#if this.address}}{{this.address}}{{else}}_______________________{{/if}}</div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}
    </div>

    <!-- Footer -->
    <div class="document-footer">
      <p>This Partnership Deed is generated for reference. Execute on appropriate stamp paper and consider registration for full legal validity.</p>
      {{#if agreementNumber}}<p style="margin-top: 5px;">Reference: {{agreementNumber}}</p>{{/if}}
    </div>
  </div>
</body>
</html>
