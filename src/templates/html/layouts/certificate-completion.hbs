{{!-- 
  SORIVA - Certificate of Completion Template
  Type: completion
  Use: Course, program, bootcamp, training completion
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{certificateTitle}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@600;700&family=Great+Vibes&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#0284c7{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}12{{else}}#0284c712{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#0369a1{{/if}};
      --secondary: {{#if secondaryColor}}{{secondaryColor}}{{else}}#1e293b{{/if}};
      --text-dark: #1e293b;
      --text-muted: #64748b;
      --success: #10b981;
      --bg-light: #f8fafc;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'Poppins', sans-serif;
      background: #e2e8f0;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .certificate {
      width: 900px;
      min-height: 650px;
      background: white;
      position: relative;
      overflow: hidden;
      {{#if showBorder}}
      border: 1px solid #e2e8f0;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      {{/if}}
    }

    /* Top Accent Bar */
    .top-bar {
      height: 6px;
      background: linear-gradient(90deg, var(--accent) 0%, var(--success) 100%);
    }

    /* Left Decorative Strip */
    .left-strip {
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 80px;
      background: linear-gradient(180deg, var(--accent) 0%, var(--accent-dark) 100%);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 20px 0;
    }

    .left-strip-text {
      writing-mode: vertical-rl;
      text-orientation: mixed;
      transform: rotate(180deg);
      color: white;
      font-size: 11px;
      letter-spacing: 4px;
      text-transform: uppercase;
      font-weight: 500;
      opacity: 0.9;
    }

    .content {
      margin-left: 80px;
      padding: 35px 45px;
      min-height: 620px;
      display: flex;
      flex-direction: column;
    }

    /* Header */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 25px;
    }

    .org-info {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    {{#if showLogo}}
    .logo {
      width: 50px;
      height: 50px;
      border-radius: 8px;
      overflow: hidden;
      background: var(--bg-light);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .logo img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    {{/if}}

    .org-details {
      text-align: left;
    }

    .org-name {
      font-size: 16px;
      font-weight: 600;
      color: var(--text-dark);
    }

    .org-website {
      font-size: 11px;
      color: var(--accent);
    }

    .cert-number {
      font-size: 10px;
      color: var(--text-muted);
      text-align: right;
    }

    /* Title Section */
    .title-section {
      text-align: center;
      margin: 15px 0;
    }

    .certificate-label {
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 3px;
      color: var(--text-muted);
      margin-bottom: 5px;
    }

    .certificate-title {
      font-family: 'Playfair Display', serif;
      font-size: 34px;
      font-weight: 700;
      color: var(--accent);
      margin-bottom: 5px;
    }

    .subtitle {
      font-size: 13px;
      color: var(--text-muted);
    }

    /* Recipient Section */
    .recipient-section {
      text-align: center;
      margin: 25px 0;
    }

    .presented-to {
      font-size: 12px;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .recipient-name {
      font-family: 'Great Vibes', cursive;
      font-size: 48px;
      color: var(--secondary);
      margin: 8px 0;
      line-height: 1.2;
    }

    /* Course Info Box */
    .course-box {
      background: var(--bg-light);
      border-radius: 10px;
      padding: 20px 25px;
      margin: 20px 0;
      border-left: 4px solid var(--accent);
    }

    .course-label {
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: var(--accent);
      font-weight: 600;
      margin-bottom: 6px;
    }

    .course-name {
      font-size: 18px;
      font-weight: 600;
      color: var(--text-dark);
      margin-bottom: 10px;
    }

    .course-details {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      font-size: 12px;
      color: var(--text-muted);
    }

    .course-detail {
      display: flex;
      align-items: center;
      gap: 5px;
    }

    .course-detail-icon {
      font-size: 14px;
    }

    .course-detail strong {
      color: var(--text-dark);
      font-weight: 500;
    }

    /* Grade Badge */
    .grade-section {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin: 15px 0;
    }

    .grade-badge {
      background: linear-gradient(135deg, var(--success) 0%, #059669 100%);
      color: white;
      padding: 8px 20px;
      border-radius: 20px;
      font-size: 13px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .grade-badge-icon {
      font-size: 14px;
    }

    .percentage-badge {
      background: var(--bg-light);
      border: 2px solid var(--accent);
      color: var(--accent);
      padding: 6px 18px;
      border-radius: 20px;
      font-size: 13px;
      font-weight: 600;
    }

    /* Skills Section */
    {{#if course.skills}}
    .skills-section {
      margin: 15px 0;
    }

    .skills-label {
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: var(--text-muted);
      margin-bottom: 10px;
      text-align: center;
    }

    .skills-list {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 8px;
    }

    .skill-tag {
      background: var(--accent-light);
      color: var(--accent-dark);
      padding: 5px 14px;
      border-radius: 15px;
      font-size: 11px;
      font-weight: 500;
    }
    {{/if}}

    /* Description */
    .description {
      font-size: 13px;
      line-height: 1.8;
      color: var(--text-muted);
      text-align: center;
      max-width: 580px;
      margin: 15px auto;
      flex-grow: 1;
    }

    /* Footer Section */
    .footer-section {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      margin-top: auto;
      padding-top: 20px;
    }

    /* Verification */
    {{#if showQR}}
    .verification {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .qr-code {
      width: 60px;
      height: 60px;
      background: var(--bg-light);
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 10px;
      color: var(--text-muted);
    }

    .qr-code img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      border-radius: 6px;
    }

    .verification-info {
      font-size: 10px;
      color: var(--text-muted);
    }

    .verification-code {
      font-family: monospace;
      font-size: 11px;
      color: var(--text-dark);
      font-weight: 600;
      margin-top: 3px;
    }

    .verification-url {
      color: var(--accent);
      font-size: 9px;
    }
    {{/if}}

    /* Signatory */
    .signatory {
      text-align: center;
      min-width: 160px;
    }

    .signature-line {
      width: 140px;
      border-bottom: 1px solid var(--text-dark);
      margin: 0 auto 6px;
      height: 35px;
      display: flex;
      align-items: flex-end;
      justify-content: center;
    }

    .signature-line img {
      max-width: 100px;
      max-height: 30px;
      object-fit: contain;
    }

    .signatory-name {
      font-size: 12px;
      font-weight: 600;
      color: var(--text-dark);
    }

    .signatory-designation {
      font-size: 10px;
      color: var(--text-muted);
    }

    /* Issue Date */
    .issue-info {
      text-align: center;
    }

    .issue-date {
      font-size: 11px;
      color: var(--text-muted);
    }

    .issue-date strong {
      color: var(--text-dark);
    }

    /* Seal */
    {{#if showSeal}}
    .seal {
      width: 65px;
      height: 65px;
    }

    .seal-inner {
      width: 100%;
      height: 100%;
      border: 2px solid var(--accent);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: white;
    }

    .seal-check {
      font-size: 28px;
      color: var(--success);
    }
    {{/if}}

    /* Watermark */
    .watermark {
      position: absolute;
      bottom: 50px;
      right: 30px;
      font-size: 100px;
      color: var(--accent);
      opacity: 0.03;
      font-weight: 700;
      pointer-events: none;
    }

    @media print {
      body { background: white; padding: 0; }
      .certificate { box-shadow: none; }
    }
  </style>
</head>
<body>
  <div class="certificate">
    <!-- Top Bar -->
    <div class="top-bar"></div>

    <!-- Left Strip -->
    <div class="left-strip">
      <div class="left-strip-text">Certificate of Completion</div>
    </div>

    <!-- Watermark -->
    <div class="watermark">‚úì</div>

    <div class="content">
      <!-- Header -->
      <div class="header">
        <div class="org-info">
          {{#if showLogo}}
          {{#if organizationLogo}}
          <div class="logo">
            <img src="{{organizationLogo}}" alt="Logo">
          </div>
          {{/if}}
          {{/if}}
          <div class="org-details">
            <div class="org-name">{{organizationName}}</div>
            {{#if organizationWebsite}}
            <div class="org-website">{{organizationWebsite}}</div>
            {{/if}}
          </div>
        </div>
        {{#if certificateNumber}}
        <div class="cert-number">
          Certificate ID<br>
          <strong>{{certificateNumber}}</strong>
        </div>
        {{/if}}
      </div>

      <!-- Title Section -->
      <div class="title-section">
        <div class="certificate-label">This is to certify that</div>
        <h1 class="certificate-title">{{certificateTitle}}</h1>
        {{#if subtitle}}
        <div class="subtitle">{{subtitle}}</div>
        {{/if}}
      </div>

      <!-- Recipient -->
      <div class="recipient-section">
        <div class="presented-to">has been awarded to</div>
        <div class="recipient-name">{{#if recipientTitle}}{{recipientTitle}} {{/if}}{{recipientName}}</div>
      </div>

      <!-- Course Box -->
      {{#if course}}
      <div class="course-box">
        <div class="course-label">Successfully Completed</div>
        <div class="course-name">{{course.courseName}}</div>
        <div class="course-details">
          {{#if course.courseCode}}
          <div class="course-detail">
            <span class="course-detail-icon">üìã</span>
            <span>Code: <strong>{{course.courseCode}}</strong></span>
          </div>
          {{/if}}
          {{#if course.duration}}
          <div class="course-detail">
            <span class="course-detail-icon">‚è±Ô∏è</span>
            <span>Duration: <strong>{{course.duration}}</strong></span>
          </div>
          {{/if}}
          {{#if course.startDate}}
          <div class="course-detail">
            <span class="course-detail-icon">üìÖ</span>
            <span>Period: <strong>{{course.startDate}} - {{course.endDate}}</strong></span>
          </div>
          {{/if}}
          {{#if course.credits}}
          <div class="course-detail">
            <span class="course-detail-icon">üéØ</span>
            <span>Credits: <strong>{{course.credits}}</strong></span>
          </div>
          {{/if}}
        </div>
      </div>
      {{/if}}

      <!-- Grade Section -->
      {{#if course.grade}}
      <div class="grade-section">
        <div class="grade-badge">
          <span class="grade-badge-icon">üèÖ</span>
          Grade: {{course.grade}}
        </div>
        {{#if course.percentage}}
        <div class="percentage-badge">
          Score: {{course.percentage}}%
        </div>
        {{/if}}
      </div>
      {{/if}}

      <!-- Skills -->
      {{#if course.skills}}
      <div class="skills-section">
        <div class="skills-label">Skills Acquired</div>
        <div class="skills-list">
          {{#each course.skills}}
          <span class="skill-tag">{{this}}</span>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- Description -->
      {{#if description}}
      <div class="description">{{description}}</div>
      {{/if}}

      <!-- Footer Section -->
      <div class="footer-section">
        <!-- Verification -->
        {{#if showQR}}
        <div class="verification">
          <div class="qr-code">
            {{#if qrCode}}
            <img src="{{qrCode}}" alt="QR Code">
            {{else}}
            QR
            {{/if}}
          </div>
          <div class="verification-info">
            Verify this certificate
            {{#if verificationCode}}
            <div class="verification-code">{{verificationCode}}</div>
            {{/if}}
            {{#if verificationUrl}}
            <div class="verification-url">{{verificationUrl}}</div>
            {{/if}}
          </div>
        </div>
        {{/if}}

        <!-- Issue Info -->
        <div class="issue-info">
          <div class="issue-date">
            Issued on <strong>{{issueDate}}</strong>
          </div>
          {{#if showSeal}}
          <div class="seal" style="margin: 10px auto 0;">
            <div class="seal-inner">
              <span class="seal-check">‚úì</span>
            </div>
          </div>
          {{/if}}
        </div>

        <!-- Signatory -->
        {{#if primarySignatory}}
        <div class="signatory">
          <div class="signature-line">
            {{#if primarySignatory.signature}}
            <img src="{{primarySignatory.signature}}" alt="Signature">
            {{/if}}
          </div>
          <div class="signatory-name">{{primarySignatory.name}}</div>
          <div class="signatory-designation">{{primarySignatory.designation}}</div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</body>
</html>
