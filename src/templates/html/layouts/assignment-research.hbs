          {{#each research.limitations}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </section>
  {{/if}}

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       CONCLUSION
  â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  {{#if research.conclusion}}
  <section class="research-section">
    <div class="section-header">
      <div class="section-number">9</div>
      <div class="section-title">Conclusion</div>
    </div>
    <div class="section-content">
      <div class="conclusion-box">
        <p>{{research.conclusion}}</p>
      </div>
      
      {{#if research.futureScope}}
      <div class="future-scope-box">
        <div class="fs-title">ğŸ”® Future Scope</div>
        <p>{{research.futureScope}}</p>
      </div>
      {{/if}}
    </div>
  </section>
  {{else if conclusion}}
  <section class="research-section">
    <div class="section-header">
      <div class="section-number">9</div>
      <div class="section-title">Conclusion</div>
    </div>
    <div class="section-content">
      <div class="conclusion-box">
        <p>{{conclusion}}</p>
      </div>
    </div>
  </section>
  {{/if}}

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       REFERENCES
  â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  {{#if references}}
  <section class="references-section">
    <h2>References {{#if citationStyle}}<span class="citation-style-tag">{{citationStyle}}</span>{{/if}}</h2>
    {{#each references}}
    <div class="reference-item">
      <span class="ref-num">[{{math @index "+" 1}}]</span> {{this}}
    </div>
    {{/each}}
  </section>
  {{else if citations}}
  <section class="references-section">
    <h2>References {{#if citationStyle}}<span class="citation-style-tag">{{citationStyle}}</span>{{/if}}</h2>
    {{#each citations}}
    <div class="reference-item">
      <span class="ref-num">[{{math @index "+" 1}}]</span>
      {{#if this.authors}}{{#each this.authors}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}{{/if}}
      {{#if this.year}} ({{this.year}}).{{/if}}
      {{#if this.title}} {{this.title}}.{{/if}}
      {{#if this.source}} {{this.source}}.{{/if}}
      {{#if this.url}} Available at: {{this.url}}{{/if}}
      {{#if this.accessDate}} [Accessed: {{this.accessDate}}]{{/if}}
    </div>
    {{/each}}
  </section>
  {{/if}}

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       APPENDIX
  â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  {{#if appendix}}
  <section class="appendix-section">
    <h2>Appendix</h2>
    {{#each appendix}}
    <div class="appendix-item">
      <div class="appendix-label">{{this.label}}: {{this.title}}</div>
      {{#if this.content}}
      <p>{{this.content}}</p>
      {{/if}}
      {{#if this.imageUrl}}
      <img src="{{this.imageUrl}}" alt="{{this.title}}" style="max-width: 100%;">
      {{/if}}
    </div>
    {{/each}}
  </section>
  {{/if}}

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       DECLARATION
  â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  {{#if declaration}}
  <div class="declaration-section">
    <h3>Declaration</h3>
    <p>{{declaration}}</p>
    
    <div class="signature-area">
      <div class="signature-box">
        <div class="signature-line">{{#if signature}}{{signature}}{{else}}{{studentName}}{{/if}}</div>
        <div class="signature-label">Student's Signature</div>
      </div>
      <div class="signature-box">
        <div class="signature-line">{{#if signatureDate}}{{formatDate signatureDate}}{{else}}{{formatDate submissionDate}}{{/if}}</div>
        <div class="signature-label">Date</div>
      </div>
    </div>
  </div>
  {{/if}}

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       FOOTER
  â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  <footer class="research-footer">
    <div>{{studentName}} | {{rollNumber}}</div>
    <div>{{institution}}</div>
  </footer>

</body>
</html>
