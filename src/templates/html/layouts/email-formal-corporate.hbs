      }
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
       Responsive Styles
    â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    @media screen and (max-width: 640px) {
      body {
        padding: 10px;
      }

      .company-header,
      .document-banner,
      .email-meta,
      .email-body,
      .disclaimer-section,
      .email-footer {
        padding-left: 20px;
        padding-right: 20px;
      }

      .company-header-content {
        flex-direction: column;
        text-align: center;
      }

      .document-banner {
        flex-direction: column;
        align-items: flex-start;
      }

      .document-meta {
        text-align: left;
      }

      .meta-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="email-container">
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         COMPANY HEADER SECTION
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="company-header">
      <div class="company-header-content">
        <!-- Company Logo -->
        <div class="company-logo">
          {{#if corporate.companyLogo}}
          <img src="{{corporate.companyLogo}}" alt="{{corporate.companyName}}">
          {{else}}
          <span class="company-logo-placeholder">
            {{#if corporate.companyName}}{{substring corporate.companyName 0 2}}{{else}}CO{{/if}}
          </span>
          {{/if}}
        </div>
        
        <!-- Company Info -->
        <div class="company-info">
          <div class="company-name">{{#if corporate.companyName}}{{corporate.companyName}}{{else}}{{senderCompany}}{{/if}}</div>
          {{#if senderDepartment}}
          <div class="company-department">{{senderDepartment}}</div>
          {{/if}}
        </div>
      </div>
    </div>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         DOCUMENT TYPE BANNER
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="document-banner">
      <div class="document-type">
        <!-- Email Type Badge -->
        <span class="type-badge {{#if corporate.emailType}}{{corporate.emailType}}{{else}}announcement{{/if}}">
          {{#if corporate.emailType}}
            {{#ifEquals corporate.emailType "announcement"}}ğŸ“¢ Announcement{{/ifEquals}}
            {{#ifEquals corporate.emailType "memo"}}ğŸ“ Memo{{/ifEquals}}
            {{#ifEquals corporate.emailType "circular"}}ğŸ“‹ Circular{{/ifEquals}}
            {{#ifEquals corporate.emailType "notice"}}ğŸ“Œ Notice{{/ifEquals}}
            {{#ifEquals corporate.emailType "policy-update"}}ğŸ“œ Policy Update{{/ifEquals}}
            {{#ifEquals corporate.emailType "newsletter"}}ğŸ“° Newsletter{{/ifEquals}}
          {{else}}
            ğŸ“¢ Announcement
          {{/if}}
        </span>

        <!-- Priority Badge -->
        {{#if corporate.priority}}
        {{#ifNotEquals corporate.priority "normal"}}
        <span class="priority-badge {{corporate.priority}}">
          {{#ifEquals corporate.priority "high"}}âš¡ High Priority{{/ifEquals}}
          {{#ifEquals corporate.priority "urgent"}}ğŸš¨ Urgent{{/ifEquals}}
          {{#ifEquals corporate.priority "confidential"}}ğŸ”’ Confidential{{/ifEquals}}
        </span>
        {{/ifNotEquals}}
        {{/if}}
      </div>

      <!-- Reference & Date -->
      <div class="document-meta">
        {{#if corporate.referenceNumber}}
        <div class="reference-number">Ref: {{corporate.referenceNumber}}</div>
        {{/if}}
        <div>Date: {{emailDate}}</div>
        {{#if corporate.effectiveDate}}
        <div>Effective: {{corporate.effectiveDate}}</div>
        {{/if}}
      </div>
    </div>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         EMAIL META SECTION
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="email-meta">
      <div class="meta-grid">
        <!-- From -->
        <div class="meta-item">
          <span class="meta-label">From</span>
          <span class="meta-value">
            {{senderName}}{{#if senderDesignation}}, {{senderDesignation}}{{/if}}
            {{#if senderEmail}}<br><a href="mailto:{{senderEmail}}">{{senderEmail}}</a>{{/if}}
          </span>
        </div>

        <!-- To -->
        <div class="meta-item">
          <span class="meta-label">To</span>
          <span class="meta-value">{{#if recipients}}{{recipients}}{{else}}{{recipientName}}{{/if}}</span>
        </div>

        <!-- Subject -->
        <div class="meta-item full-width">
          <span class="meta-label">Subject</span>
          <span class="meta-value subject">{{emailSubject}}</span>
        </div>
      </div>
    </div>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         EMAIL BODY SECTION
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="email-body">
      <!-- Salutation -->
      <div class="salutation">
        {{salutation}} {{#if recipients}}{{recipients}}{{else}}{{recipientName}}{{/if}},
      </div>

      <!-- Email Content -->
      <div class="email-content">
        {{{emailBody}}}
      </div>

      <!-- Action Required Box -->
      {{#if corporate.actionRequired}}
      <div class="action-required-box">
        <div class="action-header">
          <svg class="action-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
          <span class="action-title">Action Required</span>
        </div>
        <div class="action-content">
          {{{corporate.actionRequired}}}
        </div>
      </div>
      {{/if}}

      <!-- Contact Person Box -->
      {{#if corporate.contactPerson}}
      <div class="contact-box">
        <div class="contact-label">For Queries, Contact</div>
        <div class="contact-value">{{corporate.contactPerson}}</div>
      </div>
      {{/if}}

      <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
           Closing & Signature
      â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
      <div class="email-closing">
        <div class="closing-phrase">{{closing}},</div>
        
        <div class="signature-block">
          <div class="sender-name">{{senderName}}</div>
          
          {{#if senderDesignation}}
          <div class="sender-designation">{{senderDesignation}}</div>
          {{/if}}
          
          {{#if senderDepartment}}
          <div class="sender-department">{{senderDepartment}}</div>
          {{/if}}
          
          {{#if senderCompany}}
          <div class="sender-company">{{senderCompany}}</div>
          {{/if}}

          {{#if includeSignature}}
          <div class="extended-signature">
            <div class="contact-info">
              {{#if senderEmail}}
              <div class="contact-item">
                <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
                <a href="mailto:{{senderEmail}}" class="contact-link">{{senderEmail}}</a>
              </div>
              {{/if}}
              
              {{#if senderPhone}}
              <div class="contact-item">
                <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
                <span>{{senderPhone}}</span>
              </div>
              {{/if}}
            </div>
          </div>
          {{/if}}
        </div>
      </div>
    </div>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         DISCLAIMER SECTION
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    {{#if corporate.disclaimer}}
    <div class="disclaimer-section">
      <p class="disclaimer-text">{{corporate.disclaimer}}</p>
    </div>
    {{/if}}

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         FOOTER SECTION
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="email-footer">
      <p class="footer-company">{{#if corporate.companyName}}{{corporate.companyName}}{{else}}{{senderCompany}}{{/if}}</p>
    </div>
  </div>
</body>
</html>
