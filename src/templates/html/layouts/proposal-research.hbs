{{!-- 
  SORIVA - Research Proposal Template
  Type: research
  Use: Academic research, scientific studies, market research
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{proposalTitle}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400;0,600;0,700;1,400&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#7c3aed{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}08{{else}}#7c3aed08{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#6d28d9{{/if}};
      --text-dark: #1e1b4b;
      --text-muted: #6b7280;
      --border: #e5e7eb;
      --bg-light: #f9fafb;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    @page { size: A4; margin: 20mm; }

    body {
      font-family: 'Inter', sans-serif;
      font-size: 11pt;
      line-height: 1.7;
      color: var(--text-dark);
      background: #f3f4f6;
    }

    .document {
      max-width: 210mm;
      margin: 0 auto;
      background: white;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    /* Cover Page */
    {{#if showCoverPage}}
    .cover-page {
      min-height: 297mm;
      padding: 50px;
      display: flex;
      flex-direction: column;
      position: relative;
      page-break-after: always;
    }

    .cover-top-bar {
      height: 8px;
      background: linear-gradient(90deg, var(--accent), var(--accent-dark));
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
    }

    .cover-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding-top: 20px;
    }

    .cover-logo {
      width: 80px;
      height: 80px;
      background: var(--bg-light);
      border-radius: 10px;
      padding: 10px;
    }

    .cover-logo img { width: 100%; height: 100%; object-fit: contain; }

    .cover-meta {
      text-align: right;
      font-size: 10pt;
      color: var(--text-muted);
    }

    .cover-main {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      text-align: center;
      padding: 40px 0;
    }

    .cover-badge {
      display: inline-block;
      background: var(--accent);
      color: white;
      padding: 8px 25px;
      border-radius: 20px;
      font-size: 10pt;
      font-weight: 600;
      letter-spacing: 2px;
      text-transform: uppercase;
      margin-bottom: 25px;
    }

    .cover-title {
      font-family: 'Crimson Pro', serif;
      font-size: 28pt;
      font-weight: 700;
      line-height: 1.3;
      color: var(--text-dark);
      max-width: 600px;
      margin: 0 auto 30px;
    }

    .cover-divider {
      width: 80px;
      height: 3px;
      background: var(--accent);
      margin: 0 auto 30px;
    }

    .cover-researcher {
      margin-bottom: 10px;
    }

    .cover-researcher-label {
      font-size: 10pt;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .cover-researcher-name {
      font-family: 'Crimson Pro', serif;
      font-size: 16pt;
      font-weight: 600;
      margin-top: 5px;
    }

    .cover-researcher-title {
      font-size: 11pt;
      color: var(--text-muted);
    }

    .cover-institution {
      margin-top: 30px;
      padding-top: 30px;
      border-top: 1px solid var(--border);
    }

    .cover-institution-name {
      font-size: 14pt;
      font-weight: 600;
    }

    .cover-institution-address {
      font-size: 10pt;
      color: var(--text-muted);
      margin-top: 5px;
    }

    .cover-footer {
      display: flex;
      justify-content: center;
      gap: 50px;
      padding-top: 30px;
      border-top: 1px solid var(--border);
    }

    .cover-footer-item { text-align: center; }
    .cover-footer-label { font-size: 9pt; color: var(--text-muted); text-transform: uppercase; }
    .cover-footer-value { font-size: 12pt; font-weight: 600; margin-top: 3px; }
    {{/if}}

    /* Content */
    .content-page { padding: 40px 50px; }

    /* Section */
    .section { margin-bottom: 35px; }

    .section-header {
      display: flex;
      align-items: center;
      gap: 15px;
      margin-bottom: 18px;
    }

    .section-number {
      font-family: 'Crimson Pro', serif;
      font-size: 24pt;
      font-weight: 700;
      color: var(--accent);
      opacity: 0.3;
    }

    .section-title {
      font-family: 'Crimson Pro', serif;
      font-size: 16pt;
      font-weight: 700;
      color: var(--text-dark);
    }

    .section-line {
      flex: 1;
      height: 1px;
      background: var(--border);
    }

    /* Abstract Box */
    .abstract-box {
      background: var(--accent-light);
      border: 1px solid var(--accent);
      border-radius: 10px;
      padding: 25px;
    }

    .abstract-label {
      font-size: 9pt;
      font-weight: 700;
      color: var(--accent);
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 10px;
    }

    .abstract-text {
      font-size: 11pt;
      line-height: 1.9;
      text-align: justify;
    }

    /* Hypothesis Box */
    .hypothesis-box {
      background: linear-gradient(135deg, var(--accent), var(--accent-dark));
      color: white;
      border-radius: 12px;
      padding: 25px;
      position: relative;
      overflow: hidden;
    }

    .hypothesis-box::before {
      content: 'H';
      position: absolute;
      right: 20px;
      top: -20px;
      font-family: 'Crimson Pro', serif;
      font-size: 120pt;
      font-weight: 700;
      opacity: 0.1;
    }

    .hypothesis-label {
      font-size: 10pt;
      text-transform: uppercase;
      letter-spacing: 2px;
      opacity: 0.8;
      margin-bottom: 10px;
    }

    .hypothesis-text {
      font-family: 'Crimson Pro', serif;
      font-size: 14pt;
      font-style: italic;
      line-height: 1.6;
      position: relative;
      z-index: 1;
    }

    /* Literature Review */
    .literature-content {
      font-size: 11pt;
      line-height: 2;
      text-align: justify;
      column-count: 1;
    }

    .literature-content p { margin-bottom: 15px; }

    /* Methodology */
    .methodology-content {
      font-size: 11pt;
      line-height: 1.9;
      text-align: justify;
    }

    .methodology-steps {
      margin: 20px 0;
    }

    .methodology-step {
      display: flex;
      gap: 15px;
      padding: 15px 0;
      border-bottom: 1px dashed var(--border);
    }

    .methodology-step:last-child { border-bottom: none; }

    .step-number {
      width: 35px;
      height: 35px;
      background: var(--accent);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      flex-shrink: 0;
    }

    .step-content { flex: 1; }
    .step-title { font-weight: 700; margin-bottom: 5px; }
    .step-desc { font-size: 10pt; color: var(--text-muted); }

    /* Timeline */
    .timeline-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 10pt;
    }

    .timeline-table th {
      background: var(--accent);
      color: white;
      padding: 12px 15px;
      text-align: left;
    }

    .timeline-table th:first-child { border-radius: 8px 0 0 0; }
    .timeline-table th:last-child { border-radius: 0 8px 0 0; }

    .timeline-table td {
      padding: 12px 15px;
      border-bottom: 1px solid var(--border);
    }

    .timeline-table tr:nth-child(even) { background: var(--bg-light); }

    .phase-name { font-weight: 600; }
    .phase-duration {
      background: var(--accent-light);
      color: var(--accent);
      padding: 3px 10px;
      border-radius: 10px;
      font-size: 9pt;
      font-weight: 600;
    }

    /* Budget */
    .budget-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 10pt;
    }

    .budget-table th {
      background: var(--text-dark);
      color: white;
      padding: 12px 15px;
      text-align: left;
    }

    .budget-table th:last-child { text-align: right; }

    .budget-table td {
      padding: 12px 15px;
      border-bottom: 1px solid var(--border);
    }

    .budget-table td:last-child { text-align: right; font-weight: 600; }

    .budget-total {
      background: var(--accent);
      color: white;
    }

    .budget-total td {
      font-weight: 700;
      font-size: 12pt;
      border-bottom: none;
    }

    .budget-summary {
      display: flex;
      gap: 20px;
      margin-top: 20px;
    }

    .budget-card {
      flex: 1;
      background: var(--bg-light);
      border-radius: 10px;
      padding: 20px;
      text-align: center;
    }

    .budget-card-label { font-size: 10pt; color: var(--text-muted); }
    .budget-card-value {
      font-size: 20pt;
      font-weight: 700;
      color: var(--accent);
      margin-top: 5px;
    }

    /* Expected Outcomes */
    .outcomes-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .outcome-card {
      background: var(--bg-light);
      border-left: 4px solid var(--accent);
      border-radius: 0 10px 10px 0;
      padding: 18px;
    }

    .outcome-number {
      font-size: 9pt;
      color: var(--accent);
      font-weight: 700;
      margin-bottom: 5px;
    }

    .outcome-text { font-size: 11pt; }

    /* References */
    .references-list {
      margin: 0;
      padding: 0;
      list-style: none;
    }

    .references-list li {
      padding: 10px 0 10px 25px;
      position: relative;
      border-bottom: 1px dashed var(--border);
      font-size: 10pt;
      line-height: 1.6;
    }

    .references-list li:last-child { border-bottom: none; }

    .references-list li::before {
      content: counter(ref);
      counter-increment: ref;
      position: absolute;
      left: 0;
      top: 10px;
      font-size: 9pt;
      font-weight: 700;
      color: var(--accent);
    }

    .references-list { counter-reset: ref; }

    /* Footer */
    .page-footer {
      padding: 20px 50px;
      background: var(--bg-light);
      border-top: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      font-size: 9pt;
      color: var(--text-muted);
    }

    @media print {
      body { background: white; }
      .document { box-shadow: none; }
    }
  </style>
</head>
<body>
  <div class="document">
    <!-- Cover Page -->
    {{#if showCoverPage}}
    <div class="cover-page">
      <div class="cover-top-bar"></div>

      <div class="cover-header">
        {{#if showLogo}}{{#if company.logo}}
        <div class="cover-logo"><img src="{{company.logo}}" alt="Logo"></div>
        {{else}}<div></div>{{/if}}{{else}}<div></div>{{/if}}
        <div class="cover-meta">
          {{proposalDate}}<br>
          {{#if proposalNumber}}Ref: {{proposalNumber}}{{/if}}
        </div>
      </div>

      <div class="cover-main">
        <span class="cover-badge">ðŸ”¬ Research Proposal</span>
        <h1 class="cover-title">{{proposalTitle}}</h1>
        <div class="cover-divider"></div>

        {{#if preparedBy}}
        <div class="cover-researcher">
          <div class="cover-researcher-label">Principal Investigator</div>
          <div class="cover-researcher-name">{{preparedBy.name}}</div>
          {{#if preparedBy.designation}}
          <div class="cover-researcher-title">{{preparedBy.designation}}</div>
          {{/if}}
        </div>
        {{/if}}

        <div class="cover-institution">
          <div class="cover-institution-name">{{company.name}}</div>
          {{#if company.address}}
          <div class="cover-institution-address">{{company.address}}</div>
          {{/if}}
        </div>
      </div>

      <div class="cover-footer">
        {{#if projectDuration}}
        <div class="cover-footer-item">
          <div class="cover-footer-label">Duration</div>
          <div class="cover-footer-value">{{projectDuration}}</div>
        </div>
        {{/if}}
        {{#if totalBudget}}
        <div class="cover-footer-item">
          <div class="cover-footer-label">Budget</div>
          <div class="cover-footer-value">â‚¹ {{formatNumber totalBudget}}</div>
        </div>
        {{/if}}
        {{#if fundingRequested}}
        <div class="cover-footer-item">
          <div class="cover-footer-label">Funding Requested</div>
          <div class="cover-footer-value">â‚¹ {{formatNumber fundingRequested}}</div>
        </div>
        {{/if}}
      </div>
    </div>
    {{/if}}

    <!-- Content -->
    <div class="content-page">
      <!-- Abstract -->
      {{#if executiveSummary}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">01</div>
          <div class="section-title">Abstract</div>
          <div class="section-line"></div>
        </div>
        <div class="abstract-box">
          <div class="abstract-label">Research Summary</div>
          <div class="abstract-text">{{{executiveSummary}}}</div>
        </div>
      </div>
      {{/if}}

      <!-- Hypothesis -->
      {{#if hypothesis}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">02</div>
          <div class="section-title">Hypothesis</div>
          <div class="section-line"></div>
        </div>
        <div class="hypothesis-box">
          <div class="hypothesis-label">Research Hypothesis</div>
          <div class="hypothesis-text">"{{hypothesis}}"</div>
        </div>
      </div>
      {{/if}}

      <!-- Literature Review -->
      {{#if literatureReview}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">03</div>
          <div class="section-title">Literature Review</div>
          <div class="section-line"></div>
        </div>
        <div class="literature-content">{{{literatureReview}}}</div>
      </div>
      {{/if}}

      <!-- Methodology -->
      {{#if researchMethodology}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">04</div>
          <div class="section-title">Research Methodology</div>
          <div class="section-line"></div>
        </div>
        <div class="methodology-content">{{{researchMethodology}}}</div>
      </div>
      {{/if}}

      <!-- Timeline -->
      {{#if timeline}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">05</div>
          <div class="section-title">Research Timeline</div>
          <div class="section-line"></div>
        </div>
        <table class="timeline-table">
          <thead>
            <tr>
              <th style="width: 30%;">Phase</th>
              <th style="width: 20%;">Duration</th>
              <th>Activities</th>
            </tr>
          </thead>
          <tbody>
            {{#each timeline}}
            <tr>
              <td><span class="phase-name">{{this.phase}}</span></td>
              <td><span class="phase-duration">{{this.duration}}</span></td>
              <td>
                {{#if this.activities}}
                {{#each this.activities}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
                {{/if}}
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        {{#if projectDuration}}
        <p style="text-align: center; margin-top: 15px; color: var(--text-muted);">
          <strong>Total Duration:</strong> {{projectDuration}}
        </p>
        {{/if}}
      </div>
      {{/if}}

      <!-- Budget -->
      {{#if budget}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">06</div>
          <div class="section-title">Budget</div>
          <div class="section-line"></div>
        </div>
        <table class="budget-table">
          <thead>
            <tr>
              <th>Category</th>
              <th>Description</th>
              <th>Amount (â‚¹)</th>
            </tr>
          </thead>
          <tbody>
            {{#each budget}}
            <tr>
              <td><strong>{{this.category}}</strong></td>
              <td>{{this.description}}</td>
              <td>{{formatNumber this.amount}}</td>
            </tr>
            {{/each}}
            {{#if totalBudget}}
            <tr class="budget-total">
              <td colspan="2">Total Budget</td>
              <td>â‚¹ {{formatNumber totalBudget}}</td>
            </tr>
            {{/if}}
          </tbody>
        </table>

        {{#if fundingRequested}}
        <div class="budget-summary">
          <div class="budget-card">
            <div class="budget-card-label">Total Budget</div>
            <div class="budget-card-value">â‚¹ {{formatNumber totalBudget}}</div>
          </div>
          <div class="budget-card">
            <div class="budget-card-label">Funding Requested</div>
            <div class="budget-card-value">â‚¹ {{formatNumber fundingRequested}}</div>
          </div>
        </div>
        {{/if}}
      </div>
      {{/if}}

      <!-- Expected Outcomes -->
      {{#if expectedOutcomes}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">07</div>
          <div class="section-title">Expected Outcomes</div>
          <div class="section-line"></div>
        </div>
        <div class="outcomes-grid">
          {{#each expectedOutcomes}}
          <div class="outcome-card">
            <div class="outcome-number">Outcome {{@indexPlusOne}}</div>
            <div class="outcome-text">{{this}}</div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- References -->
      {{#if references}}
      <div class="section">
        <div class="section-header">
          <div class="section-number">08</div>
          <div class="section-title">References</div>
          <div class="section-line"></div>
        </div>
        <ol class="references-list">
          {{#each references}}<li>{{this}}</li>{{/each}}
        </ol>
      </div>
      {{/if}}
    </div>

    <!-- Footer -->
    <div class="page-footer">
      <span>{{company.name}}</span>
      <span>{{#if proposalNumber}}{{proposalNumber}} | {{/if}}{{proposalDate}}</span>
    </div>
  </div>
</body>
</html>
