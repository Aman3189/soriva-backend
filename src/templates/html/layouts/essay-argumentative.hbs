    {{#each citations}}
    <div class="reference-item">
      {{#if this.authors}}{{#each this.authors}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}{{/if}}
      {{#if this.year}} ({{this.year}}).{{/if}}
      {{#if this.title}} {{this.title}}.{{/if}}
      {{#if this.journal}} <em>{{this.journal}}</em>{{#if this.volume}}, {{this.volume}}{{/if}}{{#if this.pages}}, {{this.pages}}{{/if}}.{{/if}}
      {{#if this.publisher}} {{this.publisher}}.{{/if}}
