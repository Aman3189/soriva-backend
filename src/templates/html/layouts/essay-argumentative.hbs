        <div class="evidence-box">
          <div class="evidence-label">ğŸ“Š Evidence</div>
          <div class="evidence-content">"{{this.content}}"</div>
          {{#if this.source}}
          <div class="evidence-source">â€” {{this.source}}</div>
          {{/if}}
        </div>
        {{/each}}
        
        {{#if this.analysis}}
        <div class="analysis">
          <div class="analysis-label">ğŸ” Analysis</div>
          <p>{{this.analysis}}</p>
        </div>
        {{/if}}
      </div>
