{{!-- 
  SORIVA - Certificate of Achievement Template
  Type: achievement
  Use: Awards, competitions, accomplishments, recognitions
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{certificateTitle}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Great+Vibes&family=Lora:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#b8860b{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}22{{else}}#b8860b22{{/if}};
      --secondary: {{#if secondaryColor}}{{secondaryColor}}{{else}}#1e3a5f{{/if}};
      --gold: #d4af37;
      --gold-light: #f4e4bc;
      --text-dark: #1a1a1a;
      --text-muted: #555;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'Lora', Georgia, serif;
      background: #f5f5f5;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .certificate {
      width: 900px;
      min-height: 650px;
      background: linear-gradient(145deg, #fffef9 0%, #fdfbf3 50%, #faf6e8 100%);
      position: relative;
      padding: 20px;
      {{#if showBorder}}
      border: 3px solid var(--gold);
      {{/if}}
    }

    /* Decorative Border */
    {{#if showBorder}}
    .certificate::before {
      content: '';
      position: absolute;
      inset: 8px;
      border: 2px solid var(--gold);
      pointer-events: none;
    }

    .certificate::after {
      content: '';
      position: absolute;
      inset: 14px;
      border: 1px solid var(--gold-light);
      pointer-events: none;
    }
    {{/if}}

    /* Corner Ornaments */
    .corner {
      position: absolute;
      width: 80px;
      height: 80px;
      opacity: 0.6;
    }

    .corner svg { width: 100%; height: 100%; fill: var(--gold); }
    .corner-tl { top: 20px; left: 20px; }
    .corner-tr { top: 20px; right: 20px; transform: rotate(90deg); }
    .corner-bl { bottom: 20px; left: 20px; transform: rotate(-90deg); }
    .corner-br { bottom: 20px; right: 20px; transform: rotate(180deg); }

    .content {
      position: relative;
      z-index: 1;
      padding: 30px 50px;
      text-align: center;
      min-height: 590px;
      display: flex;
      flex-direction: column;
    }

    /* Header */
    .header {
      margin-bottom: 15px;
    }

    {{#if showLogo}}
    .logo {
      width: 70px;
      height: 70px;
      margin: 0 auto 10px;
    }

    .logo img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    {{/if}}

    .org-name {
      font-family: 'Cinzel', serif;
      font-size: 18px;
      font-weight: 600;
      color: var(--secondary);
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    .org-address {
      font-size: 11px;
      color: var(--text-muted);
      margin-top: 3px;
    }

    /* Title Section */
    .title-section {
      margin: 20px 0;
    }

    .trophy-icon {
      font-size: 40px;
      margin-bottom: 5px;
    }

    .certificate-title {
      font-family: 'Cinzel', serif;
      font-size: 36px;
      font-weight: 700;
      color: var(--gold);
      text-transform: uppercase;
      letter-spacing: 6px;
      text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    .subtitle {
      font-family: 'Lora', serif;
      font-size: 14px;
      font-style: italic;
      color: var(--text-muted);
      margin-top: 5px;
      letter-spacing: 1px;
    }

    /* Presentation */
    .presentation {
      font-size: 13px;
      color: var(--text-muted);
      margin: 20px 0 10px;
      letter-spacing: 1px;
    }

    /* Recipient */
    .recipient-name {
      font-family: 'Great Vibes', cursive;
      font-size: 48px;
      color: var(--secondary);
      margin: 10px 0;
      line-height: 1.2;
    }

    .recipient-details {
      font-size: 12px;
      color: var(--text-muted);
      margin-bottom: 15px;
    }

    .recipient-details span {
      margin: 0 8px;
    }

    /* Achievement */
    .achievement-box {
      background: linear-gradient(135deg, var(--accent-light) 0%, transparent 100%);
      border-left: 3px solid var(--gold);
      padding: 15px 25px;
      margin: 15px auto;
      max-width: 600px;
      text-align: center;
    }

    .achievement-title {
      font-family: 'Cinzel', serif;
      font-size: 18px;
      font-weight: 600;
      color: var(--secondary);
      margin-bottom: 5px;
    }

    .achievement-rank {
      display: inline-block;
      background: linear-gradient(135deg, var(--gold) 0%, #c5a028 100%);
      color: white;
      padding: 4px 20px;
      border-radius: 20px;
      font-size: 14px;
      font-weight: 600;
      margin: 8px 0;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .achievement-details {
      font-size: 12px;
      color: var(--text-muted);
      margin-top: 8px;
    }

    .achievement-details span {
      display: inline-block;
      margin: 0 10px;
    }

    /* Description */
    .description {
      font-size: 14px;
      line-height: 1.8;
      color: var(--text-dark);
      max-width: 650px;
      margin: 15px auto;
      flex-grow: 1;
    }

    /* Date */
    .issue-date {
      font-size: 12px;
      color: var(--text-muted);
      margin: 15px 0;
    }

    /* Certificate Number */
    .cert-number {
      position: absolute;
      top: 25px;
      right: 35px;
      font-size: 10px;
      color: var(--text-muted);
      letter-spacing: 1px;
    }

    /* Signatories */
    .signatories {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      margin-top: auto;
      padding-top: 20px;
    }

    .signatory {
      text-align: center;
      min-width: 180px;
    }

    .signature-line {
      width: 160px;
      border-bottom: 1px solid var(--text-dark);
      margin: 0 auto 8px;
      height: 40px;
    }

    .signature-line img {
      max-width: 120px;
      max-height: 35px;
      object-fit: contain;
    }

    .signatory-name {
      font-size: 13px;
      font-weight: 600;
      color: var(--text-dark);
    }

    .signatory-designation {
      font-size: 11px;
      color: var(--text-muted);
    }

    /* Seal */
    {{#if showSeal}}
    .seal {
      position: absolute;
      bottom: 80px;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 80px;
      opacity: 0.8;
    }

    .seal-inner {
      width: 100%;
      height: 100%;
      border: 3px solid var(--gold);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: radial-gradient(circle, #fff9e6 0%, #f5e6c8 100%);
    }

    .seal-text {
      font-family: 'Cinzel', serif;
      font-size: 8px;
      text-transform: uppercase;
      color: var(--gold);
      text-align: center;
      letter-spacing: 1px;
    }
    {{/if}}

    /* Watermark */
    .watermark {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-30deg);
      font-family: 'Cinzel', serif;
      font-size: 80px;
      color: rgba(212, 175, 55, 0.05);
      text-transform: uppercase;
      letter-spacing: 10px;
      pointer-events: none;
      white-space: nowrap;
    }

    @media print {
      body { background: white; padding: 0; }
      .certificate { box-shadow: none; }
    }
  </style>
</head>
<body>
  <div class="certificate">
    <!-- Watermark -->
    <div class="watermark">{{#if watermark}}{{watermark}}{{else}}Achievement{{/if}}</div>

    <!-- Corner Ornaments -->
    <div class="corner corner-tl">
      <svg viewBox="0 0 100 100"><path d="M0,0 L100,0 L100,20 L20,20 L20,100 L0,100 Z"/></svg>
    </div>
    <div class="corner corner-tr">
      <svg viewBox="0 0 100 100"><path d="M0,0 L100,0 L100,20 L20,20 L20,100 L0,100 Z"/></svg>
    </div>
    <div class="corner corner-bl">
      <svg viewBox="0 0 100 100"><path d="M0,0 L100,0 L100,20 L20,20 L20,100 L0,100 Z"/></svg>
    </div>
    <div class="corner corner-br">
      <svg viewBox="0 0 100 100"><path d="M0,0 L100,0 L100,20 L20,20 L20,100 L0,100 Z"/></svg>
    </div>

    <!-- Certificate Number -->
    {{#if certificateNumber}}
    <div class="cert-number">{{certificateNumber}}</div>
    {{/if}}

    <div class="content">
      <!-- Header -->
      <div class="header">
        {{#if showLogo}}
        {{#if organizationLogo}}
        <div class="logo">
          <img src="{{organizationLogo}}" alt="Logo">
        </div>
        {{/if}}
        {{/if}}
        <div class="org-name">{{organizationName}}</div>
        {{#if organizationAddress}}
        <div class="org-address">{{organizationAddress}}</div>
        {{/if}}
      </div>

      <!-- Title -->
      <div class="title-section">
        <div class="trophy-icon">üèÜ</div>
        <h1 class="certificate-title">{{certificateTitle}}</h1>
        {{#if subtitle}}
        <div class="subtitle">{{subtitle}}</div>
        {{/if}}
      </div>

      <!-- Presentation Text -->
      <div class="presentation">
        {{#if presentationText}}{{presentationText}}{{else}}This is to certify that{{/if}}
      </div>

      <!-- Recipient -->
      <div class="recipient-name">{{#if recipientTitle}}{{recipientTitle}} {{/if}}{{recipientName}}</div>
      
      {{#if rollNumber}}
      <div class="recipient-details">
        {{#if rollNumber}}<span>Roll No: {{rollNumber}}</span>{{/if}}
        {{#if class}}<span>Class: {{class}}{{#if section}}-{{section}}{{/if}}</span>{{/if}}
      </div>
      {{/if}}

      <!-- Achievement Box -->
      {{#if achievement}}
      <div class="achievement-box">
        {{#if achievement.title}}
        <div class="achievement-title">{{achievement.title}}</div>
        {{/if}}
        {{#if achievement.rank}}
        <div class="achievement-rank">{{achievement.rank}}</div>
        {{/if}}
        <div class="achievement-details">
          {{#if achievement.competition}}<span>{{achievement.competition}}</span>{{/if}}
          {{#if achievement.score}}<span>Score: {{achievement.score}}</span>{{/if}}
          {{#if achievement.level}}<span>Level: {{achievement.level}}</span>{{/if}}
        </div>
      </div>
      {{/if}}

      <!-- Description -->
      <div class="description">{{description}}</div>

      <!-- Issue Date -->
      <div class="issue-date">
        Issued on: {{issueDate}}
      </div>

      <!-- Signatories -->
      <div class="signatories">
        {{#if secondarySignatory}}
        <div class="signatory">
          <div class="signature-line">
            {{#if secondarySignatory.signature}}
            <img src="{{secondarySignatory.signature}}" alt="Signature">
            {{/if}}
          </div>
          <div class="signatory-name">{{secondarySignatory.name}}</div>
          <div class="signatory-designation">{{secondarySignatory.designation}}</div>
        </div>
        {{/if}}

        {{#if showSeal}}
        <div class="seal">
          <div class="seal-inner">
            <div class="seal-text">Official<br>Seal</div>
          </div>
        </div>
        {{/if}}

        {{#if primarySignatory}}
        <div class="signatory">
          <div class="signature-line">
            {{#if primarySignatory.signature}}
            <img src="{{primarySignatory.signature}}" alt="Signature">
            {{/if}}
          </div>
          <div class="signatory-name">{{primarySignatory.name}}</div>
          <div class="signatory-designation">{{primarySignatory.designation}}</div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</body>
</html>
