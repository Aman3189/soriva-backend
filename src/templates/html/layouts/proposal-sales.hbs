{{!-- 
  SORIVA - Sales Proposal Template
  Type: sales
  Use: Product sales, service sales, client pitches
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{proposalTitle}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#dc2626{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}10{{else}}#dc262610{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#b91c1c{{/if}};
      --text-dark: #0f0f0f;
      --text-muted: #6b7280;
      --border: #e5e7eb;
      --bg-light: #f9fafb;
      --success: #10b981;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    @page { size: A4; margin: 0; }

    body {
      font-family: 'Montserrat', sans-serif;
      font-size: 11pt;
      line-height: 1.6;
      color: var(--text-dark);
      background: #f3f4f6;
    }

    .document {
      max-width: 210mm;
      margin: 0 auto;
      background: white;
      box-shadow: 0 4px 25px rgba(0,0,0,0.1);
    }

    /* Hero Section */
    .hero {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
      color: white;
      padding: 50px;
      position: relative;
      overflow: hidden;
    }

    .hero::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -20%;
      width: 500px;
      height: 500px;
      background: rgba(255,255,255,0.1);
      border-radius: 50%;
    }

    .hero-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 40px;
      position: relative;
      z-index: 1;
    }

    .hero-logo {
      width: 60px;
      height: 60px;
      background: white;
      border-radius: 10px;
      padding: 8px;
    }

    .hero-logo img { width: 100%; height: 100%; object-fit: contain; }

    .hero-meta {
      text-align: right;
      font-size: 10pt;
      opacity: 0.9;
    }

    .hero-content {
      position: relative;
      z-index: 1;
      max-width: 600px;
    }

    .hero-badge {
      display: inline-block;
      background: rgba(255,255,255,0.2);
      padding: 6px 16px;
      border-radius: 20px;
      font-size: 9pt;
      font-weight: 700;
      letter-spacing: 1px;
      text-transform: uppercase;
      margin-bottom: 15px;
    }

    .hero-title {
      font-size: 32pt;
      font-weight: 900;
      line-height: 1.1;
      margin-bottom: 15px;
    }

    .hero-subtitle {
      font-size: 13pt;
      opacity: 0.9;
      line-height: 1.6;
    }

    .hero-client {
      margin-top: 30px;
      padding-top: 20px;
      border-top: 1px solid rgba(255,255,255,0.2);
    }

    .hero-client-label { font-size: 9pt; opacity: 0.7; }
    .hero-client-name { font-size: 16pt; font-weight: 700; margin-top: 5px; }

    /* Content */
    .content { padding: 40px 50px; }

    /* Section */
    .section { margin-bottom: 40px; }

    .section-title {
      font-size: 20pt;
      font-weight: 800;
      color: var(--text-dark);
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .section-title::after {
      content: '';
      flex: 1;
      height: 3px;
      background: linear-gradient(90deg, var(--accent), transparent);
    }

    /* Problem Box */
    .problem-box {
      background: #fef2f2;
      border: 2px solid #fecaca;
      border-radius: 15px;
      padding: 30px;
      position: relative;
    }

    .problem-icon {
      position: absolute;
      top: -20px;
      left: 30px;
      width: 45px;
      height: 45px;
      background: var(--accent);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20pt;
    }

    .problem-title {
      font-size: 14pt;
      font-weight: 700;
      color: var(--accent);
      margin-bottom: 12px;
    }

    .problem-text {
      font-size: 11pt;
      line-height: 1.8;
      color: var(--text-muted);
    }

    /* Solution Box */
    .solution-box {
      background: #ecfdf5;
      border: 2px solid #a7f3d0;
      border-radius: 15px;
      padding: 30px;
      margin-top: 25px;
      position: relative;
    }

    .solution-icon {
      position: absolute;
      top: -20px;
      left: 30px;
      width: 45px;
      height: 45px;
      background: var(--success);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20pt;
    }

    .solution-title {
      font-size: 14pt;
      font-weight: 700;
      color: var(--success);
      margin-bottom: 12px;
    }

    .solution-text {
      font-size: 11pt;
      line-height: 1.8;
      color: var(--text-muted);
    }

    /* Pricing Cards */
    .pricing-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin: 25px 0;
    }

    .pricing-card {
      background: white;
      border: 2px solid var(--border);
      border-radius: 15px;
      padding: 25px;
      text-align: center;
      transition: all 0.3s;
    }

    .pricing-card.featured {
      border-color: var(--accent);
      transform: scale(1.02);
      box-shadow: 0 10px 30px rgba(220, 38, 38, 0.15);
    }

    .pricing-card.featured::before {
      content: '‚≠ê RECOMMENDED';
      display: block;
      background: var(--accent);
      color: white;
      font-size: 8pt;
      font-weight: 700;
      padding: 5px;
      margin: -25px -25px 20px;
      border-radius: 13px 13px 0 0;
    }

    .pricing-name {
      font-size: 12pt;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 5px;
    }

    .pricing-desc {
      font-size: 9pt;
      color: var(--text-muted);
      margin-bottom: 15px;
    }

    .pricing-amount {
      font-size: 28pt;
      font-weight: 900;
      color: var(--accent);
    }

    .pricing-currency {
      font-size: 14pt;
      font-weight: 600;
    }

    /* Pricing Table */
    .pricing-table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
      font-size: 10pt;
    }

    .pricing-table th {
      background: var(--text-dark);
      color: white;
      padding: 14px;
      text-align: left;
    }

    .pricing-table th:first-child { border-radius: 10px 0 0 0; }
    .pricing-table th:last-child { border-radius: 0 10px 0 0; text-align: right; }

    .pricing-table td {
      padding: 14px;
      border-bottom: 1px solid var(--border);
    }

    .pricing-table td:last-child {
      text-align: right;
      font-weight: 700;
      color: var(--accent);
    }

    .pricing-table tr:hover { background: var(--bg-light); }

    .total-strip {
      background: var(--accent);
      color: white;
      padding: 20px 25px;
      border-radius: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 15px;
    }

    .total-label { font-size: 14pt; font-weight: 600; }
    .total-amount { font-size: 28pt; font-weight: 900; }

    /* Why Us */
    .why-us-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .why-us-card {
      background: var(--bg-light);
      border-radius: 12px;
      padding: 25px;
      display: flex;
      gap: 15px;
    }

    .why-us-icon {
      width: 50px;
      height: 50px;
      background: var(--accent);
      color: white;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 22pt;
      flex-shrink: 0;
    }

    .why-us-text {
      font-size: 11pt;
      line-height: 1.6;
    }

    /* Testimonial */
    .testimonial-box {
      background: var(--bg-light);
      border-radius: 15px;
      padding: 30px;
      position: relative;
      margin: 25px 0;
    }

    .testimonial-quote {
      font-size: 40pt;
      color: var(--accent);
      opacity: 0.3;
      position: absolute;
      top: 10px;
      left: 20px;
    }

    .testimonial-text {
      font-size: 12pt;
      font-style: italic;
      line-height: 1.8;
      color: var(--text-muted);
      padding-left: 30px;
    }

    .testimonial-author {
      margin-top: 15px;
      padding-left: 30px;
      font-weight: 700;
    }

    /* CTA Section */
    .cta-section {
      background: linear-gradient(135deg, var(--text-dark), #1f2937);
      color: white;
      padding: 40px;
      text-align: center;
      border-radius: 20px;
      margin: 30px 0;
    }

    .cta-title {
      font-size: 24pt;
      font-weight: 900;
      margin-bottom: 15px;
    }

    .cta-text {
      font-size: 12pt;
      opacity: 0.9;
      max-width: 500px;
      margin: 0 auto 20px;
    }

    .cta-button {
      display: inline-block;
      background: var(--accent);
      color: white;
      padding: 15px 40px;
      border-radius: 30px;
      font-weight: 700;
      font-size: 12pt;
      text-decoration: none;
    }

    .cta-validity {
      margin-top: 15px;
      font-size: 10pt;
      opacity: 0.7;
    }

    /* Next Steps */
    .steps-row {
      display: flex;
      gap: 15px;
      margin: 20px 0;
    }

    .step-item {
      flex: 1;
      text-align: center;
      padding: 20px;
      background: var(--bg-light);
      border-radius: 12px;
      position: relative;
    }

    .step-number {
      width: 40px;
      height: 40px;
      background: var(--accent);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 16pt;
      font-weight: 900;
      margin: 0 auto 12px;
    }

    .step-text { font-size: 10pt; font-weight: 600; }

    .step-arrow {
      position: absolute;
      right: -15px;
      top: 50%;
      transform: translateY(-50%);
      color: var(--accent);
      font-size: 20pt;
      z-index: 1;
    }

    /* Contact Strip */
    .contact-strip {
      display: flex;
      justify-content: center;
      gap: 40px;
      padding: 25px;
      background: var(--bg-light);
      border-radius: 12px;
      margin-top: 30px;
    }

    .contact-item {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .contact-icon { font-size: 18pt; }
    .contact-value { font-weight: 600; }

    /* Footer */
    .footer {
      background: var(--text-dark);
      color: white;
      padding: 20px 50px;
      display: flex;
      justify-content: space-between;
      font-size: 9pt;
    }

    @media print {
      body { background: white; }
      .document { box-shadow: none; }
    }
  </style>
</head>
<body>
  <div class="document">
    <!-- Hero -->
    <div class="hero">
      <div class="hero-header">
        {{#if showLogo}}{{#if company.logo}}
        <div class="hero-logo"><img src="{{company.logo}}" alt="Logo"></div>
        {{else}}<div></div>{{/if}}{{else}}<div></div>{{/if}}
        <div class="hero-meta">
          {{proposalDate}}<br>
          {{#if proposalNumber}}Ref: {{proposalNumber}}{{/if}}
        </div>
      </div>

      <div class="hero-content">
        <div class="hero-badge">üéØ Sales Proposal</div>
        <h1 class="hero-title">{{proposalTitle}}</h1>
        {{#if company.tagline}}
        <p class="hero-subtitle">{{company.tagline}}</p>
        {{/if}}

        <div class="hero-client">
          <div class="hero-client-label">Prepared Exclusively For</div>
          <div class="hero-client-name">{{client.companyName}}</div>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="content">
      <!-- Executive Summary -->
      {{#if executiveSummary}}
      <div class="section">
        <div class="section-title">The Opportunity</div>
        <p style="font-size: 12pt; line-height: 1.9; color: var(--text-muted);">{{{executiveSummary}}}</p>
      </div>
      {{/if}}

      <!-- Problem & Solution -->
      {{#if problemStatement}}
      <div class="section">
        <div class="problem-box">
          <div class="problem-icon">‚ö†Ô∏è</div>
          <div class="problem-title">The Challenge You're Facing</div>
          <div class="problem-text">{{{problemStatement}}}</div>
        </div>

        {{#if proposedSolution}}
        <div class="solution-box">
          <div class="solution-icon">‚úì</div>
          <div class="solution-title">How We Solve It</div>
          <div class="solution-text">{{{proposedSolution}}}</div>
        </div>
        {{/if}}
      </div>
      {{/if}}

      <!-- Pricing -->
      {{#if pricing}}
      <div class="section">
        <div class="section-title">Your Investment</div>

        <table class="pricing-table">
          <thead>
            <tr>
              <th style="width: 50%;">Item / Service</th>
              <th>Description</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
            {{#each pricing}}
            <tr>
              <td><strong>{{this.item}}</strong></td>
              <td>{{this.description}}</td>
              <td>{{#if ../currency}}{{../currency}}{{else}}‚Çπ{{/if}} {{formatNumber this.amount}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>

        {{#if totalAmount}}
        <div class="total-strip">
          <div class="total-label">Total Investment</div>
          <div class="total-amount">{{#if currency}}{{currency}}{{else}}‚Çπ{{/if}} {{formatNumber totalAmount}}</div>
        </div>
        {{/if}}
      </div>
      {{/if}}

      <!-- Why Choose Us -->
      {{#if whyUs}}
      <div class="section">
        <div class="section-title">Why Choose Us</div>
        <div class="why-us-grid">
          {{#each whyUs}}
          <div class="why-us-card">
            <div class="why-us-icon">‚úì</div>
            <div class="why-us-text">{{this}}</div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- Testimonial -->
      {{#if clientTestimonials}}
      <div class="section">
        <div class="section-title">What Our Clients Say</div>
        {{#each clientTestimonials}}
        <div class="testimonial-box">
          <div class="testimonial-quote">"</div>
          <div class="testimonial-text">{{this}}</div>
        </div>
        {{/each}}
      </div>
      {{/if}}

      <!-- CTA -->
      {{#if callToAction}}
      <div class="cta-section">
        <div class="cta-title">Ready to Get Started?</div>
        <div class="cta-text">{{callToAction}}</div>
        <div class="cta-button">Let's Talk ‚Üí</div>
        {{#if validUntil}}
        <div class="cta-validity">‚è∞ This offer is valid until {{validUntil}}</div>
        {{/if}}
      </div>
      {{/if}}

      <!-- Next Steps -->
      {{#if nextSteps}}
      <div class="section">
        <div class="section-title">Next Steps</div>
        <div class="steps-row">
          {{#each nextSteps}}
          <div class="step-item">
            <div class="step-number">{{@indexPlusOne}}</div>
            <div class="step-text">{{this}}</div>
            {{#unless @last}}<div class="step-arrow">‚Üí</div>{{/unless}}
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- Contact -->
      {{#if preparedBy}}
      <div class="contact-strip">
        <div class="contact-item">
          <span class="contact-icon">üë§</span>
          <span class="contact-value">{{preparedBy.name}}</span>
        </div>
        {{#if preparedBy.email}}
        <div class="contact-item">
          <span class="contact-icon">üìß</span>
          <span class="contact-value">{{preparedBy.email}}</span>
        </div>
        {{/if}}
        {{#if preparedBy.phone}}
        <div class="contact-item">
          <span class="contact-icon">üìû</span>
          <span class="contact-value">{{preparedBy.phone}}</span>
        </div>
        {{/if}}
      </div>
      {{/if}}
    </div>

    <!-- Footer -->
    <div class="footer">
      <span>{{company.name}}</span>
      <span>{{#if proposalNumber}}{{proposalNumber}} | {{/if}}{{proposalDate}}</span>
    </div>
  </div>
</body>
</html>
