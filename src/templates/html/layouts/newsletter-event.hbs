{{!-- 
  SORIVA - Event Newsletter Template
  Type: event
  Use: Webinars, conferences, meetups, workshops
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{subject}}</title>
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#0891b2{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}12{{else}}#0891b212{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#0e7490{{/if}};
      --text-dark: #0f172a;
      --text-muted: #64748b;
      --border: #e2e8f0;
      --bg-light: #f8fafc;
      --bg-body: {{#if backgroundColor}}{{backgroundColor}}{{else}}#ecfeff{{/if}};
      --gold: #f59e0b;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      font-size: 16px;
      line-height: 1.6;
      color: var(--text-dark);
      background: var(--bg-body);
      padding: 20px;
    }

    .email-wrapper {
      max-width: 600px;
      margin: 0 auto;
      background: white;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 4px 20px rgba(8, 145, 178, 0.12);
    }

    /* Header */
    .header {
      background: var(--accent);
      color: white;
      padding: 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .logo {
      width: 36px;
      height: 36px;
      background: white;
      border-radius: 8px;
      padding: 4px;
    }

    .logo img { width: 100%; height: 100%; object-fit: contain; }

    .brand-name { font-size: 16px; font-weight: 700; }

    .header-date { font-size: 12px; opacity: 0.9; }

    /* Hero */
    .hero {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
      color: white;
      padding: 50px 30px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .hero::before {
      content: 'üé™';
      position: absolute;
      left: -20px;
      bottom: -20px;
      font-size: 120px;
      opacity: 0.08;
    }

    .hero::after {
      content: 'üé§';
      position: absolute;
      right: -10px;
      top: -10px;
      font-size: 80px;
      opacity: 0.08;
    }

    .hero-badge {
      display: inline-block;
      background: var(--gold);
      color: white;
      padding: 6px 18px;
      border-radius: 20px;
      font-size: 11px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 20px;
    }

    .hero-title {
      font-size: 30px;
      font-weight: 800;
      line-height: 1.2;
      margin-bottom: 15px;
      position: relative;
      z-index: 1;
    }

    .hero-subtitle {
      font-size: 15px;
      opacity: 0.9;
      max-width: 450px;
      margin: 0 auto;
      line-height: 1.6;
      position: relative;
      z-index: 1;
    }

    .hero-image {
      width: 100%;
      max-height: 200px;
      object-fit: cover;
      border-radius: 12px;
      margin-top: 25px;
      border: 3px solid rgba(255,255,255,0.2);
    }

    /* Event Details Card */
    .event-card {
      background: white;
      margin: -30px 30px 0;
      border-radius: 16px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.1);
      position: relative;
      z-index: 10;
      overflow: hidden;
    }

    .event-card-header {
      background: var(--accent);
      color: white;
      padding: 15px 20px;
      text-align: center;
      font-weight: 700;
      font-size: 14px;
    }

    .event-details-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1px;
      background: var(--border);
    }

    .event-detail {
      background: white;
      padding: 20px;
      text-align: center;
    }

    .event-detail-icon { font-size: 28px; margin-bottom: 8px; }

    .event-detail-label {
      font-size: 10px;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .event-detail-value {
      font-size: 14px;
      font-weight: 700;
      color: var(--text-dark);
      margin-top: 4px;
    }

    .cta-button {
      display: block;
      background: var(--accent);
      color: white;
      padding: 16px;
      text-align: center;
      font-size: 15px;
      font-weight: 700;
      text-decoration: none;
    }

    .cta-button:hover { background: var(--accent-dark); }

    /* Content */
    .content { padding: 30px; }

    /* Section */
    .section { margin-bottom: 30px; }

    .section-title {
      font-size: 18px;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .section-title::before {
      content: '';
      width: 4px;
      height: 20px;
      background: var(--accent);
      border-radius: 2px;
    }

    /* Agenda Items */
    .agenda-list {
      background: var(--bg-light);
      border-radius: 12px;
      overflow: hidden;
    }

    .agenda-item {
      padding: 20px;
      border-bottom: 1px solid var(--border);
      display: flex;
      gap: 15px;
    }

    .agenda-item:last-child { border-bottom: none; }

    .agenda-icon {
      width: 45px;
      height: 45px;
      background: var(--accent);
      color: white;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      flex-shrink: 0;
    }

    .agenda-content { flex: 1; }

    .agenda-title {
      font-size: 15px;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 5px;
    }

    .agenda-desc {
      font-size: 13px;
      color: var(--text-muted);
      line-height: 1.5;
    }

    /* Highlights */
    .highlights-strip {
      display: flex;
      background: var(--accent);
      border-radius: 12px;
      overflow: hidden;
      margin: 25px 0;
    }

    .highlight-item {
      flex: 1;
      padding: 20px;
      text-align: center;
      color: white;
      border-right: 1px solid rgba(255,255,255,0.15);
    }

    .highlight-item:last-child { border-right: none; }

    .highlight-icon { font-size: 24px; margin-bottom: 5px; }

    .highlight-value {
      font-size: 22px;
      font-weight: 800;
    }

    .highlight-label {
      font-size: 10px;
      opacity: 0.85;
      margin-top: 3px;
    }

    /* Register Box */
    .register-box {
      background: linear-gradient(135deg, var(--gold), #d97706);
      color: white;
      border-radius: 12px;
      padding: 30px;
      text-align: center;
      margin: 25px 0;
    }

    .register-title {
      font-size: 20px;
      font-weight: 800;
      margin-bottom: 10px;
    }

    .register-text {
      font-size: 14px;
      opacity: 0.95;
      margin-bottom: 20px;
    }

    .register-button {
      display: inline-block;
      background: white;
      color: var(--gold);
      padding: 14px 40px;
      border-radius: 30px;
      font-size: 15px;
      font-weight: 700;
      text-decoration: none;
    }

    /* Footer */
    .footer {
      background: var(--text-dark);
      color: white;
      padding: 30px;
      text-align: center;
    }

    .footer-brand {
      font-size: 16px;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .social-links {
      display: flex;
      justify-content: center;
      gap: 12px;
      margin: 15px 0;
    }

    .social-link {
      width: 36px;
      height: 36px;
      background: rgba(255,255,255,0.1);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      font-size: 13px;
      font-weight: 700;
    }

    .footer-links {
      font-size: 12px;
      opacity: 0.6;
    }

    .footer-links a { color: white; text-decoration: none; }

    /* Responsive */
    @media (max-width: 480px) {
      body { padding: 10px; }
      .hero { padding: 40px 20px; }
      .hero-title { font-size: 24px; }
      .event-card { margin: -20px 15px 0; }
      .event-details-grid { grid-template-columns: 1fr; }
      .content { padding: 20px; }
      .highlights-strip { flex-direction: column; }
      .highlight-item { border-right: none; border-bottom: 1px solid rgba(255,255,255,0.15); }
      .highlight-item:last-child { border-bottom: none; }
      .header { flex-direction: column; gap: 8px; text-align: center; }
    }
  </style>
</head>
<body>
  {{#if preheader}}
  <div style="display:none;max-height:0;overflow:hidden;">{{preheader}}</div>
  {{/if}}

  <div class="email-wrapper">
    <!-- Header -->
    <div class="header">
      <div class="header-left">
        {{#if showLogo}}{{#if brand.logo}}
        <div class="logo"><img src="{{brand.logo}}" alt="{{brand.name}}"></div>
        {{/if}}{{/if}}
        <div class="brand-name">{{brand.name}}</div>
      </div>
      <div class="header-date">{{issueDate}}</div>
    </div>

    <!-- Hero -->
    <div class="hero">
      <div class="hero-badge">üìÖ You're Invited</div>
      <h1 class="hero-title">{{#if heroTitle}}{{heroTitle}}{{else}}{{subject}}{{/if}}</h1>
      {{#if heroSubtitle}}
      <p class="hero-subtitle">{{heroSubtitle}}</p>
      {{/if}}
      {{#if heroImage}}
      <img src="{{heroImage}}" alt="Event" class="hero-image">
      {{/if}}
    </div>

    <!-- Event Details Card -->
    {{#if upcomingEvents}}
    {{#with (first upcomingEvents)}}
    <div class="event-card">
      <div class="event-card-header">üìç Event Details</div>
      <div class="event-details-grid">
        <div class="event-detail">
          <div class="event-detail-icon">üìÖ</div>
          <div class="event-detail-label">Date</div>
          <div class="event-detail-value">{{this.date}}</div>
        </div>
        {{#if this.time}}
        <div class="event-detail">
          <div class="event-detail-icon">üïê</div>
          <div class="event-detail-label">Time</div>
          <div class="event-detail-value">{{this.time}}</div>
        </div>
        {{/if}}
        {{#if this.venue}}
        <div class="event-detail">
          <div class="event-detail-icon">üìç</div>
          <div class="event-detail-label">Venue</div>
          <div class="event-detail-value">{{this.venue}}</div>
        </div>
        {{/if}}
        <div class="event-detail">
          <div class="event-detail-icon">üéüÔ∏è</div>
          <div class="event-detail-label">Entry</div>
          <div class="event-detail-value">Free Registration</div>
        </div>
      </div>
      {{#if this.registerUrl}}
      <a href="{{this.registerUrl}}" class="cta-button">Register Now ‚Üí</a>
      {{else}}
      {{#if ../heroCTA}}
      <a href="{{../heroCTA.url}}" class="cta-button">{{../heroCTA.text}}</a>
      {{/if}}
      {{/if}}
    </div>
    {{/with}}
    {{/if}}

    <!-- Content -->
    <div class="content">
      <!-- Agenda / Sections -->
      {{#if sections}}
      <div class="section">
        <div class="section-title">What to Expect</div>
        <div class="agenda-list">
          {{#each sections}}
          <div class="agenda-item">
            <div class="agenda-icon">
              {{#ifEquals @index 0}}üé§{{/ifEquals}}
              {{#ifEquals @index 1}}üõ†Ô∏è{{/ifEquals}}
              {{#ifEquals @index 2}}ü§ù{{/ifEquals}}
              {{#ifEquals @index 3}}üéÅ{{/ifEquals}}
            </div>
            <div class="agenda-content">
              <div class="agenda-title">{{this.title}}</div>
              <div class="agenda-desc">{{{this.content}}}</div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- Highlights -->
      {{#if highlights}}
      <div class="highlights-strip">
        {{#each highlights}}
        <div class="highlight-item">
          {{#if this.icon}}<div class="highlight-icon">{{this.icon}}</div>{{/if}}
          <div class="highlight-value">{{this.value}}</div>
          <div class="highlight-label">{{this.label}}</div>
        </div>
        {{/each}}
      </div>
      {{/if}}

      <!-- Register CTA -->
      {{#if heroCTA}}
      <div class="register-box">
        <div class="register-title">Don't Miss Out! üéâ</div>
        <div class="register-text">Limited seats available. Register now to secure your spot.</div>
        <a href="{{heroCTA.url}}" class="register-button">{{heroCTA.text}}</a>
      </div>
      {{/if}}
    </div>

    <!-- Footer -->
    <div class="footer">
      <div class="footer-brand">{{brand.name}}</div>

      {{#if showSocialLinks}}{{#if socialLinks}}
      <div class="social-links">
        {{#each socialLinks}}
        <a href="{{this.url}}" class="social-link">
          {{#ifEquals this.platform "LinkedIn"}}in{{/ifEquals}}
          {{#ifEquals this.platform "Twitter"}}X{{/ifEquals}}
          {{#ifEquals this.platform "Instagram"}}üì∑{{/ifEquals}}
          {{#ifEquals this.platform "YouTube"}}‚ñ∂{{/ifEquals}}
        </a>
        {{/each}}
      </div>
      {{/if}}{{/if}}

      <div class="footer-links">
        {{#if brand.website}}<a href="{{brand.website}}">Website</a> ‚Ä¢ {{/if}}
        {{#if unsubscribeUrl}}<a href="{{unsubscribeUrl}}">Unsubscribe</a>{{/if}}
      </div>
    </div>
  </div>
</body>
</html>
