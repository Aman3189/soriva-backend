      color: var(--text-light);
      font-style: italic;
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
       Print Styles
    â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    @media print {
      body {
        background: #ffffff;
        padding: 0;
      }

      .email-container {
        box-shadow: none;
        border-radius: 0;
        border: none;
        max-width: 100%;
      }

      .inquiry-header,
      .intro-context-box,
      .questions-box,
      .purpose-box {
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
      }

      @page {
        margin: 0.5in;
        size: A4;
      }
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
       Responsive Styles
    â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    @media screen and (max-width: 640px) {
      body {
        padding: 10px;
      }

      .inquiry-header,
      .inquiry-banner,
      .email-meta,
      .email-body,
      .email-footer {
        padding-left: 20px;
        padding-right: 20px;
      }

      .header-content {
        flex-direction: column;
        gap: 12px;
        align-items: flex-start;
      }

      .inquiry-banner {
        flex-direction: column;
        align-items: flex-start;
      }

      .urgency-response-info {
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
      }

      .meta-grid {
        grid-template-columns: 1fr;
      }

      .response-pref-box {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>
  <div class="email-container">
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         HEADER SECTION
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="inquiry-header">
      <div class="header-content">
        <div class="inquiry-badge">
          <svg class="inquiry-icon" viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10"/>
            <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" fill="none" stroke="#fff" stroke-width="2"/>
            <line x1="12" y1="17" x2="12.01" y2="17" stroke="#fff" stroke-width="2"/>
          </svg>
          <span class="inquiry-title">Formal Inquiry</span>
        </div>
        <div class="header-date">Date: {{emailDate}}</div>
      </div>
    </div>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         INQUIRY TYPE & URGENCY BANNER
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="inquiry-banner">
      {{#if inquiry.inquiryType}}
      <div class="inquiry-type-badge">
        <svg class="type-icon" viewBox="0 0 24 24" fill="currentColor">
          {{#ifEquals inquiry.inquiryType "product"}}
          <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
          {{/ifEquals}}
          {{#ifEquals inquiry.inquiryType "service"}}
          <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
          {{/ifEquals}}
          {{#ifEquals inquiry.inquiryType "admission"}}
          <path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c3 3 9 3 12 0v-5"/>
          {{/ifEquals}}
          {{#ifEquals inquiry.inquiryType "partnership"}}
          <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>
          {{/ifEquals}}
          {{#ifEquals inquiry.inquiryType "pricing"}}
          <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
          {{/ifEquals}}
          {{#ifEquals inquiry.inquiryType "general"}}
          <circle cx="12" cy="12" r="10"/><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/><line x1="12" y1="17" x2="12.01" y2="17"/>
          {{/ifEquals}}
          {{#ifEquals inquiry.inquiryType "job"}}
          <rect x="2" y="7" width="20" height="14" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>
          {{/ifEquals}}
        </svg>
        {{#ifEquals inquiry.inquiryType "product"}}Product Inquiry{{/ifEquals}}
        {{#ifEquals inquiry.inquiryType "service"}}Service Inquiry{{/ifEquals}}
        {{#ifEquals inquiry.inquiryType "admission"}}Admission Inquiry{{/ifEquals}}
        {{#ifEquals inquiry.inquiryType "partnership"}}Partnership Inquiry{{/ifEquals}}
        {{#ifEquals inquiry.inquiryType "pricing"}}Pricing Inquiry{{/ifEquals}}
        {{#ifEquals inquiry.inquiryType "general"}}General Inquiry{{/ifEquals}}
        {{#ifEquals inquiry.inquiryType "job"}}Job/Career Inquiry{{/ifEquals}}
      </div>
      {{/if}}

      <div class="urgency-response-info">
        {{#if inquiry.urgency}}
        <span class="urgency-badge {{inquiry.urgency}}">
          {{#ifEquals inquiry.urgency "normal"}}ğŸ“‹ Normal{{/ifEquals}}
          {{#ifEquals inquiry.urgency "soon"}}â³ Response Needed Soon{{/ifEquals}}
          {{#ifEquals inquiry.urgency "urgent"}}ğŸš¨ Urgent{{/ifEquals}}
        </span>
        {{/if}}

        {{#if inquiry.preferredResponseMethod}}
        <div class="response-method">
          <svg class="response-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            {{#ifEquals inquiry.preferredResponseMethod "email"}}
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
            {{/ifEquals}}
            {{#ifEquals inquiry.preferredResponseMethod "phone"}}
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
            {{/ifEquals}}
            {{#ifEquals inquiry.preferredResponseMethod "meeting"}}
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/>
            {{/ifEquals}}
            {{#ifEquals inquiry.preferredResponseMethod "any"}}
            <circle cx="12" cy="12" r="10"/><path d="M8 14s1.5 2 4 2 4-2 4-2"/><line x1="9" y1="9" x2="9.01" y2="9"/><line x1="15" y1="9" x2="15.01" y2="9"/>
            {{/ifEquals}}
          </svg>
          Prefer: 
          {{#ifEquals inquiry.preferredResponseMethod "email"}}Email{{/ifEquals}}
          {{#ifEquals inquiry.preferredResponseMethod "phone"}}Phone{{/ifEquals}}
          {{#ifEquals inquiry.preferredResponseMethod "meeting"}}Meeting{{/ifEquals}}
          {{#ifEquals inquiry.preferredResponseMethod "any"}}Any{{/ifEquals}}
        </div>
        {{/if}}
      </div>
    </div>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         META INFORMATION SECTION
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="email-meta">
      <div class="meta-grid">
        <!-- From -->
        <div class="meta-item">
          <span class="meta-label">From</span>
          <span class="meta-value">
            {{senderName}}{{#if senderDesignation}}, {{senderDesignation}}{{/if}}
            {{#if senderCompany}}<br>{{senderCompany}}{{/if}}
            {{#if senderEmail}}<br><a href="mailto:{{senderEmail}}">{{senderEmail}}</a>{{/if}}
          </span>
        </div>

        <!-- To -->
        <div class="meta-item">
          <span class="meta-label">To</span>
          <span class="meta-value">
            {{recipientName}}{{#if recipientDesignation}}, {{recipientDesignation}}{{/if}}
            {{#if recipientCompany}}<br>{{recipientCompany}}{{/if}}
            {{#if recipientEmail}}<br><a href="mailto:{{recipientEmail}}">{{recipientEmail}}</a>{{/if}}
          </span>
        </div>

        <!-- Subject -->
        <div class="meta-item full-width">
          <span class="meta-label">Subject</span>
          <span class="meta-value subject">{{emailSubject}}</span>
        </div>
      </div>
    </div>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         EMAIL BODY SECTION
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="email-body">
      <!-- Salutation -->
      <div class="salutation">
        {{salutation}} {{recipientName}},
      </div>

      <!-- Email Content -->
      <div class="email-content">
        {{{emailBody}}}
      </div>

      <!-- Introduction/Context Box -->
      {{#if inquiry.introContext}}
      <div class="intro-context-box">
        <div class="box-header">
          <svg class="box-icon" viewBox="0 0 24 24">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
          <span class="box-title">About Me / Background</span>
        </div>
        <div class="box-content">
          {{{inquiry.introContext}}}
        </div>
      </div>
      {{/if}}

      <!-- Specific Questions Box -->
      {{#if inquiry.specificQuestions}}
      <div class="questions-box">
        <div class="questions-header">
          <svg class="questions-icon" viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10"/>
            <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" fill="none" stroke="#0284c7" stroke-width="2"/>
            <line x1="12" y1="17" x2="12.01" y2="17" stroke="#0284c7" stroke-width="2"/>
          </svg>
          <span class="questions-title">Specific Questions / Information Requested</span>
        </div>
        <div class="questions-content">
          {{{inquiry.specificQuestions}}}
        </div>
      </div>
      {{/if}}

      <!-- Purpose of Inquiry Box -->
      {{#if inquiry.purposeOfInquiry}}
      <div class="purpose-box">
        <div class="purpose-header">
          <svg class="purpose-icon" viewBox="0 0 24 24">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
          <span class="purpose-title">Purpose of This Inquiry</span>
        </div>
        <div class="purpose-content">
          {{{inquiry.purposeOfInquiry}}}
        </div>
      </div>
      {{/if}}

      <!-- Response Preference Box -->
      {{#if inquiry.preferredResponseMethod}}
      <div class="response-pref-box">
        <div class="pref-item">
          <svg class="pref-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
          <div>
            <div class="pref-label">Preferred Response</div>
            <div class="pref-value">
              {{#ifEquals inquiry.preferredResponseMethod "email"}}Via Email{{/ifEquals}}
              {{#ifEquals inquiry.preferredResponseMethod "phone"}}Phone Call{{/ifEquals}}
              {{#ifEquals inquiry.preferredResponseMethod "meeting"}}In-Person/Virtual Meeting{{/ifEquals}}
              {{#ifEquals inquiry.preferredResponseMethod "any"}}Any Method is Fine{{/ifEquals}}
            </div>
          </div>
        </div>

        {{#if senderPhone}}
        <div class="pref-item">
          <svg class="pref-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
          </svg>
          <div>
            <div class="pref-label">Contact Number</div>
            <div class="pref-value">{{senderPhone}}</div>
          </div>
        </div>
        {{/if}}

        {{#if senderEmail}}
        <div class="pref-item">
          <svg class="pref-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
          <div>
            <div class="pref-label">Email</div>
            <div class="pref-value">{{senderEmail}}</div>
          </div>
        </div>
        {{/if}}
      </div>
      {{/if}}

      <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
           Closing & Signature
      â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
      <div class="email-closing">
        <div class="closing-phrase">{{closing}},</div>
        
        <div class="signature-block">
          <div class="sender-name">{{senderName}}</div>
          
          {{#if senderDesignation}}
          <div class="sender-designation">{{senderDesignation}}</div>
          {{/if}}
          
          {{#if senderCompany}}
          <div class="sender-company">{{senderCompany}}</div>
          {{/if}}

          {{#if includeSignature}}
          <div class="extended-signature">
            <div class="contact-info">
              {{#if senderEmail}}
              <div class="contact-item">
                <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
                <a href="mailto:{{senderEmail}}" class="contact-link">{{senderEmail}}</a>
              </div>
              {{/if}}
              
              {{#if senderPhone}}
              <div class="contact-item">
                <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
                <span>{{senderPhone}}</span>
              </div>
              {{/if}}
            </div>
          </div>
          {{/if}}
        </div>
      </div>
    </div>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         FOOTER
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <div class="email-footer">
      <p class="footer-note">This inquiry has been sent seeking information and awaits a helpful response.</p>
    </div>
  </div>
</body>
</html>
