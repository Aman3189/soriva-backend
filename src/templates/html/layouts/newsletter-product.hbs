{{!-- 
  SORIVA - Product Update Newsletter Template
  Type: product-update
  Use: Feature launches, version releases, product changelog
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{subject}}</title>
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#8b5cf6{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}12{{else}}#8b5cf612{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#7c3aed{{/if}};
      --text-dark: #1e1b4b;
      --text-muted: #64748b;
      --border: #e2e8f0;
      --bg-light: #f8fafc;
      --bg-body: {{#if backgroundColor}}{{backgroundColor}}{{else}}#f5f3ff{{/if}};
      --success: #10b981;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      font-size: 16px;
      line-height: 1.6;
      color: var(--text-dark);
      background: var(--bg-body);
      padding: 20px;
    }

    .email-wrapper {
      max-width: 600px;
      margin: 0 auto;
      background: white;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 4px 20px rgba(139, 92, 246, 0.1);
    }

    /* Header */
    .header {
      background: var(--accent);
      color: white;
      padding: 20px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .logo {
      width: 40px;
      height: 40px;
      background: white;
      border-radius: 10px;
      padding: 5px;
    }

    .logo img { width: 100%; height: 100%; object-fit: contain; }

    .brand-name {
      font-size: 18px;
      font-weight: 700;
    }

    .version-badge {
      background: rgba(255,255,255,0.2);
      padding: 6px 14px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
    }

    /* Hero */
    .hero {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
      color: white;
      padding: 40px 30px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .hero::before {
      content: 'ðŸš€';
      position: absolute;
      right: 20px;
      top: -10px;
      font-size: 100px;
      opacity: 0.1;
    }

    .hero-badge {
      display: inline-block;
      background: var(--success);
      color: white;
      padding: 5px 15px;
      border-radius: 20px;
      font-size: 11px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 15px;
    }

    .hero-title {
      font-size: 28px;
      font-weight: 800;
      line-height: 1.2;
      margin-bottom: 12px;
    }

    .hero-subtitle {
      font-size: 15px;
      opacity: 0.9;
      max-width: 450px;
      margin: 0 auto 20px;
      line-height: 1.6;
    }

    .hero-image {
      width: 100%;
      max-height: 200px;
      object-fit: cover;
      border-radius: 10px;
      margin-top: 20px;
      border: 3px solid rgba(255,255,255,0.2);
    }

    .cta-button {
      display: inline-block;
      background: white;
      color: var(--accent);
      padding: 14px 35px;
      border-radius: 30px;
      font-size: 15px;
      font-weight: 700;
      text-decoration: none;
      margin-top: 20px;
    }

    /* Content */
    .content { padding: 30px; }

    /* Section */
    .section { margin-bottom: 30px; }

    .section-header {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 20px;
    }

    .section-icon {
      width: 40px;
      height: 40px;
      background: var(--accent-light);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
    }

    .section-title {
      font-size: 18px;
      font-weight: 700;
      color: var(--text-dark);
    }

    /* Feature Cards */
    .feature-card {
      background: var(--bg-light);
      border-radius: 12px;
      padding: 25px;
      margin-bottom: 15px;
      border-left: 4px solid var(--accent);
    }

    .feature-title {
      font-size: 16px;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .feature-new {
      background: var(--success);
      color: white;
      padding: 2px 8px;
      border-radius: 10px;
      font-size: 10px;
      font-weight: 700;
    }

    .feature-content {
      font-size: 14px;
      color: var(--text-muted);
      line-height: 1.7;
    }

    .feature-image {
      width: 100%;
      border-radius: 8px;
      margin-top: 15px;
    }

    /* Highlights */
    .highlights-row {
      display: flex;
      gap: 15px;
      margin: 25px 0;
    }

    .highlight-box {
      flex: 1;
      background: var(--accent);
      color: white;
      border-radius: 12px;
      padding: 20px;
      text-align: center;
    }

    .highlight-icon { font-size: 24px; margin-bottom: 8px; }

    .highlight-value {
      font-size: 24px;
      font-weight: 800;
    }

    .highlight-label {
      font-size: 11px;
      opacity: 0.9;
      margin-top: 3px;
    }

    /* Quick Links */
    .links-grid {
      display: grid;
      gap: 12px;
    }

    .link-card {
      background: var(--bg-light);
      border-radius: 10px;
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      text-decoration: none;
      color: var(--text-dark);
      transition: background 0.2s;
    }

    .link-card:hover { background: var(--accent-light); }

    .link-info { display: flex; align-items: center; gap: 12px; }

    .link-icon {
      width: 36px;
      height: 36px;
      background: var(--accent);
      color: white;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 16px;
    }

    .link-title {
      font-weight: 600;
      font-size: 14px;
    }

    .link-desc {
      font-size: 12px;
      color: var(--text-muted);
    }

    .link-arrow {
      color: var(--accent);
      font-size: 18px;
    }

    /* Changelog */
    .changelog-item {
      display: flex;
      gap: 12px;
      padding: 12px 0;
      border-bottom: 1px dashed var(--border);
    }

    .changelog-item:last-child { border-bottom: none; }

    .changelog-type {
      padding: 3px 10px;
      border-radius: 12px;
      font-size: 10px;
      font-weight: 700;
      text-transform: uppercase;
      flex-shrink: 0;
    }

    .changelog-type.new { background: #dcfce7; color: #16a34a; }
    .changelog-type.improved { background: #dbeafe; color: #2563eb; }
    .changelog-type.fixed { background: #fef3c7; color: #d97706; }

    .changelog-text {
      font-size: 14px;
      color: var(--text-dark);
    }

    /* Footer */
    .footer {
      background: var(--text-dark);
      color: white;
      padding: 30px;
      text-align: center;
    }

    .footer-brand {
      font-size: 16px;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .footer-tagline {
      font-size: 13px;
      opacity: 0.7;
      margin-bottom: 20px;
    }

    .social-links {
      display: flex;
      justify-content: center;
      gap: 12px;
      margin-bottom: 20px;
    }

    .social-link {
      width: 36px;
      height: 36px;
      background: rgba(255,255,255,0.1);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      font-size: 13px;
      font-weight: 700;
    }

    .footer-links {
      font-size: 12px;
      opacity: 0.6;
    }

    .footer-links a { color: white; text-decoration: none; }

    /* Responsive */
    @media (max-width: 480px) {
      body { padding: 10px; }
      .hero { padding: 30px 20px; }
      .content { padding: 20px; }
      .highlights-row { flex-direction: column; }
      .header { flex-direction: column; gap: 10px; }
    }
  </style>
</head>
<body>
  {{#if preheader}}
  <div style="display:none;max-height:0;overflow:hidden;">{{preheader}}</div>
  {{/if}}

  <div class="email-wrapper">
    <!-- Header -->
    <div class="header">
      <div class="header-left">
        {{#if showLogo}}{{#if brand.logo}}
        <div class="logo"><img src="{{brand.logo}}" alt="{{brand.name}}"></div>
        {{/if}}{{/if}}
        <div class="brand-name">{{brand.name}}</div>
      </div>
      {{#if issueNumber}}
      <div class="version-badge">{{issueNumber}}</div>
      {{/if}}
    </div>

    <!-- Hero -->
    <div class="hero">
      <div class="hero-badge">ðŸŽ‰ New Release</div>
      <h1 class="hero-title">{{#if heroTitle}}{{heroTitle}}{{else}}{{subject}}{{/if}}</h1>
      {{#if heroSubtitle}}
      <p class="hero-subtitle">{{heroSubtitle}}</p>
      {{/if}}
      {{#if heroImage}}
      <img src="{{heroImage}}" alt="Product Update" class="hero-image">
      {{/if}}
      {{#if heroCTA}}
      <a href="{{heroCTA.url}}" class="cta-button">{{heroCTA.text}}</a>
      {{/if}}
    </div>

    <!-- Content -->
    <div class="content">
      <!-- Features/Sections -->
      {{#if sections}}
      <div class="section">
        <div class="section-header">
          <div class="section-icon">âœ¨</div>
          <div class="section-title">What's New</div>
        </div>

        {{#each sections}}
        <div class="feature-card">
          <div class="feature-title">
            {{this.title}}
            <span class="feature-new">NEW</span>
          </div>
          <div class="feature-content">{{{this.content}}}</div>
          {{#if this.image}}
          <img src="{{this.image}}" alt="{{this.title}}" class="feature-image">
          {{/if}}
        </div>
        {{/each}}
      </div>
      {{/if}}

      <!-- Highlights -->
      {{#if highlights}}
      <div class="highlights-row">
        {{#each highlights}}
        <div class="highlight-box">
          {{#if this.icon}}<div class="highlight-icon">{{this.icon}}</div>{{/if}}
          <div class="highlight-value">{{this.value}}</div>
          <div class="highlight-label">{{this.label}}</div>
        </div>
        {{/each}}
      </div>
      {{/if}}

      <!-- Quick Links -->
      {{#if quickLinks}}
      <div class="section">
        <div class="section-header">
          <div class="section-icon">ðŸ“š</div>
          <div class="section-title">Resources</div>
        </div>

        <div class="links-grid">
          {{#each quickLinks}}
          <a href="{{this.url}}" class="link-card">
            <div class="link-info">
              <div class="link-icon">ðŸ“„</div>
              <div>
                <div class="link-title">{{this.title}}</div>
                {{#if this.description}}<div class="link-desc">{{this.description}}</div>{{/if}}
              </div>
            </div>
            <span class="link-arrow">â†’</span>
          </a>
          {{/each}}
        </div>
      </div>
      {{/if}}
    </div>

    <!-- Footer -->
    <div class="footer">
      <div class="footer-brand">{{brand.name}}</div>
      {{#if brand.tagline}}<div class="footer-tagline">{{brand.tagline}}</div>{{/if}}

      {{#if showSocialLinks}}{{#if socialLinks}}
      <div class="social-links">
        {{#each socialLinks}}
        <a href="{{this.url}}" class="social-link">
          {{#ifEquals this.platform "LinkedIn"}}in{{/ifEquals}}
          {{#ifEquals this.platform "Twitter"}}X{{/ifEquals}}
          {{#ifEquals this.platform "GitHub"}}GH{{/ifEquals}}
          {{#ifEquals this.platform "Discord"}}DC{{/ifEquals}}
        </a>
        {{/each}}
      </div>
      {{/if}}{{/if}}

      <div class="footer-links">
        {{#if brand.website}}<a href="{{brand.website}}">Website</a> â€¢ {{/if}}
        {{#if unsubscribeUrl}}<a href="{{unsubscribeUrl}}">Unsubscribe</a>{{/if}}
      </div>
    </div>
  </div>
</body>
</html>
