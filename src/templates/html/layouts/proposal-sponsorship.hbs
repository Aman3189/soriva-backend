{{!-- 
  SORIVA - Sponsorship Proposal Template
  Type: sponsorship
  Use: Event sponsorship, sports sponsorship, cause marketing
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{proposalTitle}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#0891b2{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}10{{else}}#0891b210{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#0e7490{{/if}};
      --text-dark: #0f172a;
      --text-muted: #64748b;
      --border: #e2e8f0;
      --bg-light: #f8fafc;
      --gold: #f59e0b;
      --silver: #94a3b8;
      --bronze: #b45309;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    @page { size: A4; margin: 0; }

    body {
      font-family: 'Outfit', sans-serif;
      font-size: 11pt;
      line-height: 1.6;
      color: var(--text-dark);
      background: #f1f5f9;
    }

    .document {
      max-width: 210mm;
      margin: 0 auto;
      background: white;
      box-shadow: 0 4px 25px rgba(0,0,0,0.1);
    }

    /* Hero Section */
    .hero {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
      color: white;
      padding: 50px;
      position: relative;
      overflow: hidden;
      min-height: 320px;
    }

    .hero::before {
      content: '';
      position: absolute;
      top: -100px;
      right: -100px;
      width: 400px;
      height: 400px;
      background: rgba(255,255,255,0.05);
      border-radius: 50%;
    }

    .hero::after {
      content: '';
      position: absolute;
      bottom: -150px;
      left: -100px;
      width: 350px;
      height: 350px;
      background: rgba(255,255,255,0.03);
      border-radius: 50%;
    }

    .hero-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 30px;
      position: relative;
      z-index: 1;
    }

    .hero-logo {
      width: 70px;
      height: 70px;
      background: white;
      border-radius: 12px;
      padding: 8px;
    }

    .hero-logo img { width: 100%; height: 100%; object-fit: contain; }

    .hero-badge {
      background: var(--gold);
      color: white;
      padding: 8px 20px;
      border-radius: 20px;
      font-size: 10pt;
      font-weight: 700;
      letter-spacing: 1px;
    }

    .hero-content {
      position: relative;
      z-index: 1;
    }

    .hero-subtitle {
      font-size: 11pt;
      opacity: 0.85;
      margin-bottom: 10px;
      letter-spacing: 1px;
      text-transform: uppercase;
    }

    .hero-title {
      font-size: 32pt;
      font-weight: 800;
      line-height: 1.1;
      margin-bottom: 20px;
    }

    .hero-event {
      display: inline-flex;
      align-items: center;
      gap: 20px;
      background: rgba(255,255,255,0.15);
      padding: 15px 25px;
      border-radius: 12px;
    }

    .hero-event-item {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .hero-event-icon { font-size: 18pt; }
    .hero-event-text { font-weight: 600; }

    /* Content */
    .content { padding: 40px 50px; }

    /* Section */
    .section { margin-bottom: 40px; }

    .section-title {
      font-size: 18pt;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .section-title::before {
      content: '';
      width: 5px;
      height: 25px;
      background: var(--accent);
      border-radius: 3px;
    }

    /* Event Details */
    .event-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 15px;
      margin-bottom: 25px;
    }

    .event-card {
      background: var(--bg-light);
      border-radius: 12px;
      padding: 20px;
      text-align: center;
    }

    .event-card-icon {
      font-size: 28pt;
      margin-bottom: 10px;
    }

    .event-card-label {
      font-size: 9pt;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .event-card-value {
      font-size: 13pt;
      font-weight: 700;
      margin-top: 5px;
    }

    /* Audience Box */
    .audience-box {
      background: var(--accent-light);
      border: 2px solid var(--accent);
      border-radius: 15px;
      padding: 25px;
    }

    .audience-title {
      font-size: 13pt;
      font-weight: 700;
      color: var(--accent);
      margin-bottom: 12px;
    }

    .audience-text {
      font-size: 11pt;
      line-height: 1.8;
    }

    /* Sponsorship Tiers */
    .tiers-container {
      display: flex;
      gap: 20px;
      margin: 25px 0;
    }

    .tier-card {
      flex: 1;
      border: 2px solid var(--border);
      border-radius: 15px;
      overflow: hidden;
      position: relative;
    }

    .tier-card.platinum {
      border-color: #a855f7;
      transform: scale(1.02);
      box-shadow: 0 10px 30px rgba(168, 85, 247, 0.2);
    }

    .tier-card.gold { border-color: var(--gold); }
    .tier-card.silver { border-color: var(--silver); }

    .tier-header {
      padding: 20px;
      text-align: center;
      color: white;
    }

    .tier-card.platinum .tier-header { background: linear-gradient(135deg, #a855f7, #7c3aed); }
    .tier-card.gold .tier-header { background: linear-gradient(135deg, var(--gold), #d97706); }
    .tier-card.silver .tier-header { background: linear-gradient(135deg, var(--silver), #64748b); }

    .tier-badge {
      font-size: 9pt;
      text-transform: uppercase;
      letter-spacing: 2px;
      opacity: 0.9;
    }

    .tier-name {
      font-size: 18pt;
      font-weight: 800;
      margin: 8px 0;
    }

    .tier-amount {
      font-size: 24pt;
      font-weight: 800;
    }

    .tier-currency { font-size: 14pt; }

    .tier-body { padding: 20px; }

    .tier-benefits {
      margin: 0;
      padding: 0;
      list-style: none;
    }

    .tier-benefits li {
      padding: 10px 0;
      border-bottom: 1px dashed var(--border);
      display: flex;
      align-items: flex-start;
      gap: 10px;
      font-size: 10pt;
    }

    .tier-benefits li:last-child { border-bottom: none; }

    .tier-benefits li::before {
      content: '‚úì';
      color: var(--accent);
      font-weight: 700;
    }

    .tier-card.platinum .tier-benefits li::before { color: #a855f7; }
    .tier-card.gold .tier-benefits li::before { color: var(--gold); }

    /* Why Sponsor */
    .why-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .why-card {
      background: var(--bg-light);
      border-radius: 12px;
      padding: 25px;
      display: flex;
      gap: 15px;
    }

    .why-icon {
      width: 50px;
      height: 50px;
      background: var(--accent);
      color: white;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 22pt;
      flex-shrink: 0;
    }

    .why-content { flex: 1; }
    .why-text { font-size: 11pt; line-height: 1.6; }

    /* Past Events */
    .past-events-row {
      display: flex;
      gap: 20px;
      margin: 20px 0;
    }

    .past-event-card {
      flex: 1;
      background: var(--bg-light);
      border-radius: 12px;
      padding: 20px;
      text-align: center;
    }

    .past-event-stat {
      font-size: 28pt;
      font-weight: 800;
      color: var(--accent);
    }

    .past-event-label {
      font-size: 10pt;
      color: var(--text-muted);
      margin-top: 5px;
    }

    /* CTA Section */
    .cta-section {
      background: linear-gradient(135deg, var(--text-dark), #1e293b);
      color: white;
      border-radius: 20px;
      padding: 40px;
      text-align: center;
      margin: 30px 0;
      position: relative;
      overflow: hidden;
    }

    .cta-section::before {
      content: 'ü§ù';
      position: absolute;
      right: 30px;
      bottom: -20px;
      font-size: 100pt;
      opacity: 0.1;
    }

    .cta-title {
      font-size: 22pt;
      font-weight: 800;
      margin-bottom: 15px;
    }

    .cta-text {
      font-size: 12pt;
      opacity: 0.9;
      max-width: 500px;
      margin: 0 auto 25px;
    }

    .cta-button {
      display: inline-block;
      background: var(--accent);
      color: white;
      padding: 15px 40px;
      border-radius: 30px;
      font-weight: 700;
      font-size: 12pt;
      text-decoration: none;
    }

    /* Contact Strip */
    .contact-strip {
      display: flex;
      justify-content: center;
      gap: 40px;
      padding: 25px;
      background: var(--bg-light);
      border-radius: 12px;
      margin-top: 25px;
    }

    .contact-item {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .contact-icon { font-size: 18pt; }
    .contact-label { font-size: 9pt; color: var(--text-muted); }
    .contact-value { font-weight: 700; }

    /* Next Steps */
    .steps-timeline {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin: 25px 0;
      position: relative;
    }

    .steps-timeline::before {
      content: '';
      position: absolute;
      left: 50px;
      right: 50px;
      top: 25px;
      height: 3px;
      background: var(--border);
    }

    .step-item {
      text-align: center;
      position: relative;
      z-index: 1;
    }

    .step-number {
      width: 50px;
      height: 50px;
      background: var(--accent);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18pt;
      font-weight: 800;
      margin: 0 auto 12px;
    }

    .step-text {
      font-size: 10pt;
      font-weight: 600;
      max-width: 100px;
    }

    /* Footer */
    .footer {
      background: var(--accent);
      color: white;
      padding: 20px 50px;
      display: flex;
      justify-content: space-between;
      font-size: 9pt;
    }

    @media print {
      body { background: white; }
      .document { box-shadow: none; }
    }
  </style>
</head>
<body>
  <div class="document">
    <!-- Hero -->
    <div class="hero">
      <div class="hero-header">
        {{#if showLogo}}{{#if company.logo}}
        <div class="hero-logo"><img src="{{company.logo}}" alt="Logo"></div>
        {{else}}<div></div>{{/if}}{{else}}<div></div>{{/if}}
        <div class="hero-badge">‚≠ê Sponsorship Opportunity</div>
      </div>

      <div class="hero-content">
        <div class="hero-subtitle">Partnership Proposal</div>
        <h1 class="hero-title">{{proposalTitle}}</h1>

        {{#if eventName}}
        <div class="hero-event">
          {{#if eventDate}}
          <div class="hero-event-item">
            <span class="hero-event-icon">üìÖ</span>
            <span class="hero-event-text">{{eventDate}}</span>
          </div>
          {{/if}}
          {{#if eventVenue}}
          <div class="hero-event-item">
            <span class="hero-event-icon">üìç</span>
            <span class="hero-event-text">{{eventVenue}}</span>
          </div>
          {{/if}}
          {{#if expectedAttendees}}
          <div class="hero-event-item">
            <span class="hero-event-icon">üë•</span>
            <span class="hero-event-text">{{expectedAttendees}}+ Attendees</span>
          </div>
          {{/if}}
        </div>
        {{/if}}
      </div>
    </div>

    <!-- Content -->
    <div class="content">
      <!-- Event Details -->
      {{#if eventName}}
      <div class="section">
        <div class="section-title">Event Overview</div>
        <div class="event-grid">
          <div class="event-card">
            <div class="event-card-icon">üé™</div>
            <div class="event-card-label">Event</div>
            <div class="event-card-value">{{eventName}}</div>
          </div>
          {{#if eventDate}}
          <div class="event-card">
            <div class="event-card-icon">üìÖ</div>
            <div class="event-card-label">Date</div>
            <div class="event-card-value">{{eventDate}}</div>
          </div>
          {{/if}}
          {{#if eventVenue}}
          <div class="event-card">
            <div class="event-card-icon">üìç</div>
            <div class="event-card-label">Venue</div>
            <div class="event-card-value">{{eventVenue}}</div>
          </div>
          {{/if}}
          {{#if expectedAttendees}}
          <div class="event-card">
            <div class="event-card-icon">üë•</div>
            <div class="event-card-label">Expected</div>
            <div class="event-card-value">{{expectedAttendees}}+</div>
          </div>
          {{/if}}
        </div>

        {{#if executiveSummary}}
        <p style="font-size: 11pt; line-height: 1.9; color: var(--text-muted);">{{{executiveSummary}}}</p>
        {{/if}}
      </div>
      {{/if}}

      <!-- Target Audience -->
      {{#if targetAudience}}
      <div class="section">
        <div class="section-title">Target Audience</div>
        <div class="audience-box">
          <div class="audience-title">üë• Who Will Be There?</div>
          <div class="audience-text">{{targetAudience}}</div>
        </div>
      </div>
      {{/if}}

      <!-- Sponsorship Tiers -->
      {{#if sponsorshipTiers}}
      <div class="section">
        <div class="section-title">Sponsorship Packages</div>
        <div class="tiers-container">
          {{#each sponsorshipTiers}}
          <div class="tier-card {{#ifEquals @index 0}}platinum{{/ifEquals}}{{#ifEquals @index 1}}gold{{/ifEquals}}{{#ifEquals @index 2}}silver{{/ifEquals}}">
            <div class="tier-header">
              <div class="tier-badge">{{#ifEquals @index 0}}‚≠ê Featured{{/ifEquals}}{{#ifEquals @index 1}}Popular{{/ifEquals}}{{#ifEquals @index 2}}Starter{{/ifEquals}}</div>
              <div class="tier-name">{{this.name}}</div>
              <div class="tier-amount"><span class="tier-currency">‚Çπ</span>{{formatNumber this.amount}}</div>
            </div>
            <div class="tier-body">
              <ul class="tier-benefits">
                {{#each this.benefits}}<li>{{this}}</li>{{/each}}
              </ul>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- Why Sponsor -->
      {{#if whyUs}}
      <div class="section">
        <div class="section-title">Why Partner With Us?</div>
        <div class="why-grid">
          {{#each whyUs}}
          <div class="why-card">
            <div class="why-icon">‚úì</div>
            <div class="why-content">
              <div class="why-text">{{this}}</div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- Past Events Stats -->
      {{#if pastProjects}}
      <div class="section">
        <div class="section-title">Our Track Record</div>
        <div class="past-events-row">
          {{#each pastProjects}}
          <div class="past-event-card">
            <div class="past-event-stat">{{this}}</div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- Next Steps -->
      {{#if nextSteps}}
      <div class="section">
        <div class="section-title">How to Get Started</div>
        <div class="steps-timeline">
          {{#each nextSteps}}
          <div class="step-item">
            <div class="step-number">{{@indexPlusOne}}</div>
            <div class="step-text">{{this}}</div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- CTA -->
      {{#if callToAction}}
      <div class="cta-section">
        <div class="cta-title">Become a Sponsor Today!</div>
        <div class="cta-text">{{callToAction}}</div>
        <div class="cta-button">Get in Touch ‚Üí</div>
      </div>
      {{/if}}

      <!-- Contact -->
      {{#if preparedBy}}
      <div class="contact-strip">
        <div class="contact-item">
          <span class="contact-icon">üë§</span>
          <div>
            <div class="contact-label">Contact Person</div>
            <div class="contact-value">{{preparedBy.name}}</div>
          </div>
        </div>
        {{#if preparedBy.email}}
        <div class="contact-item">
          <span class="contact-icon">üìß</span>
          <div>
            <div class="contact-label">Email</div>
            <div class="contact-value">{{preparedBy.email}}</div>
          </div>
        </div>
        {{/if}}
        {{#if preparedBy.phone}}
        <div class="contact-item">
          <span class="contact-icon">üìû</span>
          <div>
            <div class="contact-label">Phone</div>
            <div class="contact-value">{{preparedBy.phone}}</div>
          </div>
        </div>
        {{/if}}
      </div>
      {{/if}}
    </div>

    <!-- Footer -->
    <div class="footer">
      <span>{{company.name}}</span>
      <span>{{#if proposalNumber}}{{proposalNumber}} | {{/if}}{{proposalDate}}</span>
    </div>
  </div>
</body>
</html>
