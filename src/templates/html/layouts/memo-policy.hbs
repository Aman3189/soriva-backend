{{!-- 
  SORIVA - Policy Update Template
  Type: policy-update
  Use: New policies, policy amendments, compliance updates
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{subject}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600;700&family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#b45309{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}08{{else}}#b4530908{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#92400e{{/if}};
      --text-dark: #1c1917;
      --text-muted: #78716c;
      --border: #e7e5e4;
      --bg-light: #fafaf9;
      --warning: #f59e0b;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    @page { size: A4; margin: 18mm; }

    body {
      font-family: 'Open Sans', sans-serif;
      font-size: 11pt;
      line-height: 1.7;
      color: var(--text-dark);
      background: #f5f5f4;
      padding: 20px;
    }

    .document {
      max-width: 210mm;
      margin: 0 auto;
      background: white;
      {{#if showBorder}}border: 2px solid var(--accent);{{/if}}
      box-shadow: 0 2px 15px rgba(0,0,0,0.1);
    }

    /* Header */
    .header {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
      color: white;
      padding: 25px 40px;
    }

    .header-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }

    .header-left { display: flex; align-items: center; gap: 15px; }

    {{#if showLogo}}
    .logo {
      width: 55px; height: 55px;
      background: white; border-radius: 8px; padding: 5px;
    }
    .logo img { width: 100%; height: 100%; object-fit: contain; }
    {{/if}}

    .org-name { font-size: 14pt; font-weight: 700; }
    .dept-name { font-size: 10pt; opacity: 0.9; }

    .policy-badge {
      background: white;
      color: var(--accent);
      padding: 8px 20px;
      border-radius: 20px;
      font-size: 10pt;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .header-subject {
      font-family: 'Source Serif Pro', serif;
      font-size: 20pt;
      font-weight: 700;
      line-height: 1.3;
    }

    /* Policy Info Strip */
    .policy-strip {
      display: flex;
      background: var(--text-dark);
      color: white;
    }

    .policy-strip-item {
      flex: 1;
      padding: 12px 20px;
      text-align: center;
      border-right: 1px solid rgba(255,255,255,0.1);
    }

    .policy-strip-item:last-child { border-right: none; }

    .strip-label {
      font-size: 8pt;
      text-transform: uppercase;
      letter-spacing: 1px;
      opacity: 0.7;
    }

    .strip-value {
      font-size: 11pt;
      font-weight: 700;
      margin-top: 3px;
    }

    /* Content */
    .content { padding: 30px 40px; }

    /* Distribution */
    .distribution {
      display: flex;
      gap: 30px;
      padding: 15px 20px;
      background: var(--bg-light);
      border-radius: 8px;
      margin-bottom: 25px;
      font-size: 10pt;
    }

    .dist-item { display: flex; gap: 8px; }
    .dist-label { font-weight: 700; color: var(--accent); }

    /* Policy Details Card */
    .policy-card {
      border: 2px solid var(--accent);
      border-radius: 10px;
      overflow: hidden;
      margin: 25px 0;
    }

    .policy-card-header {
      background: var(--accent);
      color: white;
      padding: 12px 20px;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .policy-card-icon { font-size: 16pt; }

    .policy-card-body {
      padding: 20px;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .policy-detail {
      padding: 12px;
      background: var(--bg-light);
      border-radius: 6px;
    }

    .policy-detail-label {
      font-size: 9pt;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .policy-detail-value {
      font-size: 12pt;
      font-weight: 700;
      color: var(--text-dark);
      margin-top: 3px;
    }

    .policy-detail.full-width {
      grid-column: span 2;
    }

    /* Body */
    .policy-body {
      text-align: justify;
      line-height: 1.9;
      margin-bottom: 25px;
    }

    .policy-body p { margin-bottom: 15px; }

    /* Key Changes */
    .key-changes {
      background: var(--accent-light);
      border: 1px solid var(--accent);
      border-radius: 10px;
      padding: 20px;
      margin: 25px 0;
    }

    .key-changes-title {
      font-family: 'Source Serif Pro', serif;
      font-size: 13pt;
      font-weight: 700;
      color: var(--accent);
      margin-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .key-changes-list {
      margin: 0;
      padding: 0;
      list-style: none;
    }

    .key-changes-list li {
      padding: 10px 0 10px 30px;
      position: relative;
      border-bottom: 1px dashed var(--border);
    }

    .key-changes-list li:last-child { border-bottom: none; }

    .key-changes-list li::before {
      content: '‚úì';
      position: absolute;
      left: 0;
      top: 10px;
      width: 20px;
      height: 20px;
      background: var(--accent);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 10pt;
    }

    /* Compliance Box */
    .compliance-box {
      background: #fef3c7;
      border: 2px solid var(--warning);
      border-radius: 10px;
      padding: 20px;
      margin: 25px 0;
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .compliance-icon { font-size: 30pt; }

    .compliance-content { flex: 1; }

    .compliance-title {
      font-weight: 700;
      color: #92400e;
      margin-bottom: 5px;
    }

    .compliance-text {
      font-size: 10pt;
      color: #78350f;
    }

    .compliance-deadline {
      background: var(--warning);
      color: white;
      padding: 10px 20px;
      border-radius: 8px;
      text-align: center;
    }

    .deadline-label { font-size: 9pt; opacity: 0.9; }
    .deadline-date { font-size: 14pt; font-weight: 700; }

    /* Closing */
    .closing {
      margin: 25px 0;
      padding: 15px 20px;
      background: var(--bg-light);
      border-left: 4px solid var(--accent);
    }

    /* Disclaimer */
    .disclaimer {
      font-size: 9pt;
      color: var(--text-muted);
      padding: 15px;
      background: var(--bg-light);
      border-radius: 6px;
      margin: 20px 0;
      font-style: italic;
    }

    /* Signature */
    .signature-section {
      margin-top: 35px;
      padding-top: 20px;
      border-top: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
    }

    .contact-box {
      font-size: 10pt;
      color: var(--text-muted);
    }

    .contact-box strong { color: var(--text-dark); }

    .signature-block { text-align: center; min-width: 200px; }

    .signature-line {
      border-bottom: 1px solid var(--text-dark);
      height: 50px;
      margin-bottom: 8px;
      display: flex;
      align-items: flex-end;
      justify-content: center;
    }

    .signature-line img { max-height: 45px; max-width: 150px; object-fit: contain; }
    .signature-name { font-weight: 700; }
    .signature-designation { font-size: 10pt; color: var(--text-muted); }

    /* Footer */
    .footer {
      background: var(--accent);
      color: white;
      padding: 12px 40px;
      font-size: 9pt;
      display: flex;
      justify-content: space-between;
    }

    /* Watermark */
    {{#if showWatermark}}
    .watermark {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-30deg);
      font-size: 50pt;
      color: var(--accent);
      opacity: 0.04;
      pointer-events: none;
      white-space: nowrap;
    }
    {{/if}}

    @media print {
      body { background: white; padding: 0; }
      .document { box-shadow: none; border: 1px solid var(--border); }
    }
  </style>
</head>
<body>
  <div class="document">
    {{#if showWatermark}}<div class="watermark">{{#if watermark}}{{watermark}}{{else}}POLICY UPDATE{{/if}}</div>{{/if}}

    <!-- Header -->
    <div class="header">
      <div class="header-top">
        <div class="header-left">
          {{#if showLogo}}{{#if organizationLogo}}
          <div class="logo"><img src="{{organizationLogo}}" alt="Logo"></div>
          {{/if}}{{/if}}
          <div>
            <div class="org-name">{{organizationName}}</div>
            {{#if department}}<div class="dept-name">{{department}}</div>{{/if}}
          </div>
        </div>
        <div class="policy-badge">üìã Policy Update</div>
      </div>
      <div class="header-subject">{{subject}}</div>
    </div>

    <!-- Policy Info Strip -->
    <div class="policy-strip">
      <div class="policy-strip-item">
        <div class="strip-label">Document No.</div>
        <div class="strip-value">{{#if memoNumber}}{{memoNumber}}{{else}}‚Äî{{/if}}</div>
      </div>
      <div class="policy-strip-item">
        <div class="strip-label">Issue Date</div>
        <div class="strip-value">{{date}}</div>
      </div>
      <div class="policy-strip-item">
        <div class="strip-label">Effective From</div>
        <div class="strip-value">{{#if policy.effectiveDate}}{{policy.effectiveDate}}{{else}}Immediate{{/if}}</div>
      </div>
      <div class="policy-strip-item">
        <div class="strip-label">Version</div>
        <div class="strip-value">{{#if referenceNumber}}{{referenceNumber}}{{else}}1.0{{/if}}</div>
      </div>
    </div>

    <!-- Content -->
    <div class="content">
      <!-- Distribution -->
      <div class="distribution">
        <div class="dist-item">
          <span class="dist-label">To:</span>
          <span>
            {{#ifEquals to.type "all-employees"}}All Employees{{/ifEquals}}
            {{#ifEquals to.type "department"}}{{to.department}}{{/ifEquals}}
            {{#ifEquals to.type "management"}}Management{{/ifEquals}}
          </span>
        </div>
        {{#if to.cc}}
        <div class="dist-item">
          <span class="dist-label">CC:</span>
          <span>{{to.cc}}</span>
        </div>
        {{/if}}
        <div class="dist-item">
          <span class="dist-label">From:</span>
          <span>{{from.name}}, {{from.designation}}</span>
        </div>
      </div>

      <!-- Policy Details Card -->
      {{#if policy}}
      <div class="policy-card">
        <div class="policy-card-header">
          <span class="policy-card-icon">üìë</span>
          Policy Details
        </div>
        <div class="policy-card-body">
          {{#if policy.policyNumber}}
          <div class="policy-detail">
            <div class="policy-detail-label">Policy Number</div>
            <div class="policy-detail-value">{{policy.policyNumber}}</div>
          </div>
          {{/if}}
          {{#if policy.effectiveDate}}
          <div class="policy-detail">
            <div class="policy-detail-label">Effective Date</div>
            <div class="policy-detail-value">{{policy.effectiveDate}}</div>
          </div>
          {{/if}}
          {{#if policy.previousPolicy}}
          <div class="policy-detail">
            <div class="policy-detail-label">Supersedes</div>
            <div class="policy-detail-value">{{policy.previousPolicy}}</div>
          </div>
          {{/if}}
          {{#if policy.reviewDate}}
          <div class="policy-detail">
            <div class="policy-detail-label">Next Review</div>
            <div class="policy-detail-value">{{policy.reviewDate}}</div>
          </div>
          {{/if}}
        </div>
      </div>
      {{/if}}

      <!-- Body -->
      <div class="policy-body">
        {{{body}}}
      </div>

      <!-- Key Changes -->
      {{#if keyPoints}}
      <div class="key-changes">
        <div class="key-changes-title">
          <span>üìå</span>
          Key Changes / Highlights
        </div>
        <ul class="key-changes-list">
          {{#each keyPoints}}<li>{{this}}</li>{{/each}}
        </ul>
      </div>
      {{/if}}

      <!-- Compliance Box -->
      {{#if policy.complianceDeadline}}
      <div class="compliance-box">
        <div class="compliance-icon">‚ö†Ô∏è</div>
        <div class="compliance-content">
          <div class="compliance-title">Compliance Required</div>
          <div class="compliance-text">All employees are required to acknowledge and comply with this policy by the deadline mentioned.</div>
        </div>
        <div class="compliance-deadline">
          <div class="deadline-label">Deadline</div>
          <div class="deadline-date">{{policy.complianceDeadline}}</div>
        </div>
      </div>
      {{/if}}

      <!-- Closing -->
      {{#if closingParagraph}}
      <div class="closing">
        {{closingParagraph}}
      </div>
      {{/if}}

      <!-- Disclaimer -->
      {{#if disclaimer}}
      <div class="disclaimer">
        <strong>Disclaimer:</strong> {{disclaimer}}
      </div>
      {{/if}}

      <!-- Signature -->
      <div class="signature-section">
        <div class="contact-box">
          {{#if contactInfo}}
          <strong>For Queries:</strong><br>
          {{contactInfo}}
          {{/if}}
        </div>
        <div class="signature-block">
          <div class="signature-line">
            {{#if from.signature}}<img src="{{from.signature}}" alt="Signature">{{/if}}
          </div>
          <div class="signature-name">{{from.name}}</div>
          <div class="signature-designation">{{from.designation}}</div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="footer">
      <span>{{organizationName}} | {{#if department}}{{department}}{{/if}}</span>
      <span>{{#if memoNumber}}{{memoNumber}}{{/if}} | {{date}}</span>
    </div>
  </div>
</body>
</html>
