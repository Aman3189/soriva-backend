{{!-- 
  SORIVA - Business Proposal Template
  Type: business
  Use: B2B proposals, partnerships, collaborations
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{proposalTitle}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#2563eb{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}10{{else}}#2563eb10{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#1d4ed8{{/if}};
      --text-dark: #0f172a;
      --text-muted: #64748b;
      --border: #e2e8f0;
      --bg-light: #f8fafc;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    @page { size: A4; margin: 15mm; }

    body {
      font-family: 'Plus Jakarta Sans', sans-serif;
      font-size: 11pt;
      line-height: 1.7;
      color: var(--text-dark);
      background: #f1f5f9;
    }

    .document {
      max-width: 210mm;
      margin: 0 auto;
      background: white;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    /* Cover Page */
    {{#if showCoverPage}}
    .cover-page {
      min-height: 297mm;
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
      color: white;
      padding: 50px;
      display: flex;
      flex-direction: column;
      position: relative;
      overflow: hidden;
      page-break-after: always;
    }

    .cover-page::before {
      content: '';
      position: absolute;
      top: -100px;
      right: -100px;
      width: 400px;
      height: 400px;
      background: rgba(255,255,255,0.05);
      border-radius: 50%;
    }

    .cover-page::after {
      content: '';
      position: absolute;
      bottom: -150px;
      left: -150px;
      width: 500px;
      height: 500px;
      background: rgba(255,255,255,0.03);
      border-radius: 50%;
    }

    .cover-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      position: relative;
      z-index: 1;
    }

    .cover-logo {
      width: 80px;
      height: 80px;
      background: white;
      border-radius: 12px;
      padding: 10px;
    }

    .cover-logo img { width: 100%; height: 100%; object-fit: contain; }

    .cover-badge {
      background: rgba(255,255,255,0.2);
      padding: 8px 20px;
      border-radius: 20px;
      font-size: 10pt;
      font-weight: 600;
      letter-spacing: 1px;
    }

    .cover-main {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      position: relative;
      z-index: 1;
    }

    .cover-title {
      font-size: 36pt;
      font-weight: 800;
      line-height: 1.2;
      margin-bottom: 20px;
    }

    .cover-subtitle {
      font-size: 14pt;
      opacity: 0.9;
      max-width: 500px;
    }

    .cover-meta {
      margin-top: 40px;
      display: flex;
      gap: 40px;
    }

    .cover-meta-item {
      border-left: 2px solid rgba(255,255,255,0.3);
      padding-left: 15px;
    }

    .cover-meta-label { font-size: 10pt; opacity: 0.7; }
    .cover-meta-value { font-size: 12pt; font-weight: 600; margin-top: 3px; }

    .cover-footer {
      position: relative;
      z-index: 1;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
    }

    .cover-company {
      font-size: 12pt;
      font-weight: 600;
    }

    .cover-company-tagline {
      font-size: 10pt;
      opacity: 0.8;
    }

    .cover-client {
      text-align: right;
    }

    .cover-client-label { font-size: 9pt; opacity: 0.7; }
    .cover-client-name { font-size: 14pt; font-weight: 700; }
    {{/if}}

    /* Content Pages */
    .content-page { padding: 40px 50px; }

    /* Section */
    .section {
      margin-bottom: 35px;
      page-break-inside: avoid;
    }

    .section-header {
      display: flex;
      align-items: center;
      gap: 15px;
      margin-bottom: 20px;
    }

    .section-icon {
      width: 45px;
      height: 45px;
      background: var(--accent);
      color: white;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20pt;
    }

    .section-title {
      font-size: 18pt;
      font-weight: 700;
      color: var(--text-dark);
    }

    .section-line {
      flex: 1;
      height: 2px;
      background: linear-gradient(90deg, var(--accent), transparent);
    }

    /* Summary Box */
    .summary-box {
      background: var(--accent-light);
      border-left: 4px solid var(--accent);
      padding: 25px;
      border-radius: 0 12px 12px 0;
      font-size: 12pt;
      line-height: 1.9;
    }

    /* Problem/Solution Cards */
    .twin-cards {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      margin: 20px 0;
    }

    .info-card {
      background: var(--bg-light);
      border-radius: 12px;
      padding: 25px;
      border: 1px solid var(--border);
    }

    .info-card.problem { border-top: 4px solid #ef4444; }
    .info-card.solution { border-top: 4px solid #22c55e; }

    .info-card-title {
      font-size: 13pt;
      font-weight: 700;
      margin-bottom: 12px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .info-card-content {
      font-size: 11pt;
      line-height: 1.8;
      color: var(--text-muted);
    }

    /* Approach List */
    .approach-list {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      margin: 20px 0;
    }

    .approach-item {
      background: var(--accent);
      color: white;
      padding: 10px 20px;
      border-radius: 25px;
      font-size: 10pt;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .approach-number {
      background: rgba(255,255,255,0.2);
      width: 22px;
      height: 22px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 10pt;
    }

    /* Deliverables */
    .deliverables-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
      margin: 20px 0;
    }

    .deliverable-card {
      background: white;
      border: 1px solid var(--border);
      border-radius: 10px;
      padding: 20px;
      position: relative;
    }

    .deliverable-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--accent);
      border-radius: 10px 10px 0 0;
    }

    .deliverable-name {
      font-weight: 700;
      font-size: 12pt;
      margin-bottom: 8px;
    }

    .deliverable-desc {
      font-size: 10pt;
      color: var(--text-muted);
      margin-bottom: 10px;
    }

    .deliverable-timeline {
      font-size: 9pt;
      color: var(--accent);
      font-weight: 600;
    }

    /* Pricing Table */
    .pricing-table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
      font-size: 10pt;
    }

    .pricing-table th {
      background: var(--accent);
      color: white;
      padding: 14px 15px;
      text-align: left;
      font-weight: 600;
    }

    .pricing-table th:first-child { border-radius: 10px 0 0 0; }
    .pricing-table th:last-child { border-radius: 0 10px 0 0; text-align: right; }

    .pricing-table td {
      padding: 14px 15px;
      border-bottom: 1px solid var(--border);
    }

    .pricing-table td:last-child { text-align: right; font-weight: 600; }

    .pricing-table tr:last-child td { border-bottom: none; }

    .pricing-table .item-name { font-weight: 600; }
    .pricing-table .item-desc { font-size: 9pt; color: var(--text-muted); }

    .pricing-total {
      background: var(--bg-light);
      display: flex;
      justify-content: space-between;
      padding: 20px;
      border-radius: 10px;
      margin-top: 15px;
    }

    .pricing-total-label { font-size: 14pt; font-weight: 600; }
    .pricing-total-amount {
      font-size: 24pt;
      font-weight: 800;
      color: var(--accent);
    }

    /* Why Us */
    .why-us-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
      margin: 20px 0;
    }

    .why-us-item {
      display: flex;
      align-items: flex-start;
      gap: 12px;
      padding: 15px;
      background: var(--bg-light);
      border-radius: 10px;
    }

    .why-us-icon {
      width: 35px;
      height: 35px;
      background: var(--accent);
      color: white;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14pt;
      flex-shrink: 0;
    }

    .why-us-text { font-size: 11pt; line-height: 1.5; }

    /* Terms List */
    .terms-list {
      margin: 0;
      padding: 0;
      list-style: none;
    }

    .terms-list li {
      padding: 10px 0 10px 25px;
      position: relative;
      border-bottom: 1px dashed var(--border);
      font-size: 10pt;
    }

    .terms-list li:last-child { border-bottom: none; }

    .terms-list li::before {
      content: '‚Ä¢';
      position: absolute;
      left: 0;
      color: var(--accent);
      font-size: 14pt;
    }

    /* CTA Box */
    .cta-box {
      background: linear-gradient(135deg, var(--accent), var(--accent-dark));
      color: white;
      border-radius: 15px;
      padding: 30px;
      text-align: center;
      margin: 30px 0;
    }

    .cta-title {
      font-size: 18pt;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .cta-text {
      font-size: 12pt;
      opacity: 0.9;
      max-width: 500px;
      margin: 0 auto;
    }

    .cta-validity {
      margin-top: 15px;
      font-size: 10pt;
      opacity: 0.8;
    }

    /* Next Steps */
    .next-steps {
      display: flex;
      gap: 15px;
      margin: 20px 0;
    }

    .next-step {
      flex: 1;
      background: var(--bg-light);
      border-radius: 10px;
      padding: 20px;
      text-align: center;
    }

    .next-step-number {
      width: 35px;
      height: 35px;
      background: var(--accent);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      margin: 0 auto 10px;
    }

    .next-step-text { font-size: 10pt; }

    /* Footer */
    .page-footer {
      padding: 20px 50px;
      background: var(--bg-light);
      border-top: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      font-size: 9pt;
      color: var(--text-muted);
    }

    /* Contact Block */
    .contact-block {
      display: flex;
      gap: 30px;
      padding: 25px;
      background: var(--bg-light);
      border-radius: 12px;
      margin-top: 30px;
    }

    .contact-item { display: flex; align-items: center; gap: 10px; }
    .contact-icon { font-size: 16pt; }
    .contact-label { font-size: 9pt; color: var(--text-muted); }
    .contact-value { font-weight: 600; }

    @media print {
      body { background: white; }
      .document { box-shadow: none; }
      .cover-page { page-break-after: always; }
    }
  </style>
</head>
<body>
  <div class="document">
    <!-- Cover Page -->
    {{#if showCoverPage}}
    <div class="cover-page">
      <div class="cover-header">
        {{#if showLogo}}{{#if company.logo}}
        <div class="cover-logo"><img src="{{company.logo}}" alt="Logo"></div>
        {{else}}<div></div>{{/if}}{{else}}<div></div>{{/if}}
        <div class="cover-badge">Business Proposal</div>
      </div>

      <div class="cover-main">
        <h1 class="cover-title">{{proposalTitle}}</h1>
        {{#if executiveSummary}}
        <p class="cover-subtitle">{{truncate executiveSummary 150}}</p>
        {{/if}}

        <div class="cover-meta">
          <div class="cover-meta-item">
            <div class="cover-meta-label">Date</div>
            <div class="cover-meta-value">{{proposalDate}}</div>
          </div>
          {{#if validUntil}}
          <div class="cover-meta-item">
            <div class="cover-meta-label">Valid Until</div>
            <div class="cover-meta-value">{{validUntil}}</div>
          </div>
          {{/if}}
          {{#if proposalNumber}}
          <div class="cover-meta-item">
            <div class="cover-meta-label">Proposal #</div>
            <div class="cover-meta-value">{{proposalNumber}}</div>
          </div>
          {{/if}}
        </div>
      </div>

      <div class="cover-footer">
        <div>
          <div class="cover-company">{{company.name}}</div>
          {{#if company.tagline}}<div class="cover-company-tagline">{{company.tagline}}</div>{{/if}}
        </div>
        <div class="cover-client">
          <div class="cover-client-label">Prepared For</div>
          <div class="cover-client-name">{{client.companyName}}</div>
        </div>
      </div>
    </div>
    {{/if}}

    <!-- Content Pages -->
    <div class="content-page">
      <!-- Executive Summary -->
      {{#if executiveSummary}}
      <div class="section">
        <div class="section-header">
          <div class="section-icon">üìã</div>
          <div class="section-title">Executive Summary</div>
          <div class="section-line"></div>
        </div>
        <div class="summary-box">{{{executiveSummary}}}</div>
      </div>
      {{/if}}

      <!-- Problem & Solution -->
      {{#if problemStatement}}
      <div class="section">
        <div class="section-header">
          <div class="section-icon">üéØ</div>
          <div class="section-title">Challenge & Solution</div>
          <div class="section-line"></div>
        </div>
        <div class="twin-cards">
          <div class="info-card problem">
            <div class="info-card-title">‚ö†Ô∏è The Challenge</div>
            <div class="info-card-content">{{{problemStatement}}}</div>
          </div>
          <div class="info-card solution">
            <div class="info-card-title">‚úÖ Our Solution</div>
            <div class="info-card-content">{{{proposedSolution}}}</div>
          </div>
        </div>
      </div>
      {{/if}}

      <!-- Approach -->
      {{#if approach}}
      <div class="section">
        <div class="section-header">
          <div class="section-icon">üîÑ</div>
          <div class="section-title">Our Approach</div>
          <div class="section-line"></div>
        </div>
        <div class="approach-list">
          {{#each approach}}
          <div class="approach-item">
            <span class="approach-number">{{@indexPlusOne}}</span>
            {{this}}
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- Deliverables -->
      {{#if deliverables}}
      <div class="section">
        <div class="section-header">
          <div class="section-icon">üì¶</div>
          <div class="section-title">Deliverables</div>
          <div class="section-line"></div>
        </div>
        <div class="deliverables-grid">
          {{#each deliverables}}
          <div class="deliverable-card">
            <div class="deliverable-name">{{this.name}}</div>
            {{#if this.description}}<div class="deliverable-desc">{{this.description}}</div>{{/if}}
            {{#if this.timeline}}<div class="deliverable-timeline">üìÖ {{this.timeline}}</div>{{/if}}
          </div>
          {{/each}}
        </div>
        {{#if projectDuration}}
        <div style="text-align: center; margin-top: 15px; color: var(--text-muted);">
          <strong>Total Project Duration:</strong> {{projectDuration}}
        </div>
        {{/if}}
      </div>
      {{/if}}

      <!-- Pricing -->
      {{#if pricing}}
      <div class="section">
        <div class="section-header">
          <div class="section-icon">üí∞</div>
          <div class="section-title">Investment</div>
          <div class="section-line"></div>
        </div>
        <table class="pricing-table">
          <thead>
            <tr>
              <th style="width: 50%;">Item</th>
              <th style="width: 30%;">Description</th>
              <th style="width: 20%;">Amount</th>
            </tr>
          </thead>
          <tbody>
            {{#each pricing}}
            <tr>
              <td>
                <div class="item-name">{{this.item}}</div>
              </td>
              <td><span class="item-desc">{{this.description}}</span></td>
              <td>{{#if ../currency}}{{../currency}}{{else}}‚Çπ{{/if}} {{formatNumber this.amount}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        {{#if totalAmount}}
        <div class="pricing-total">
          <div class="pricing-total-label">Total Investment</div>
          <div class="pricing-total-amount">{{#if currency}}{{currency}}{{else}}‚Çπ{{/if}} {{formatNumber totalAmount}}</div>
        </div>
        {{/if}}
        {{#if paymentTerms}}
        <p style="margin-top: 15px; font-size: 10pt; color: var(--text-muted);"><strong>Payment Terms:</strong> {{paymentTerms}}</p>
        {{/if}}
      </div>
      {{/if}}

      <!-- Why Choose Us -->
      {{#if whyUs}}
      <div class="section">
        <div class="section-header">
          <div class="section-icon">‚≠ê</div>
          <div class="section-title">Why Choose Us</div>
          <div class="section-line"></div>
        </div>
        <div class="why-us-grid">
          {{#each whyUs}}
          <div class="why-us-item">
            <div class="why-us-icon">‚úì</div>
            <div class="why-us-text">{{this}}</div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- Terms & Conditions -->
      {{#if termsAndConditions}}
      <div class="section">
        <div class="section-header">
          <div class="section-icon">üìú</div>
          <div class="section-title">Terms & Conditions</div>
          <div class="section-line"></div>
        </div>
        <ul class="terms-list">
          {{#each termsAndConditions}}<li>{{this}}</li>{{/each}}
        </ul>
      </div>
      {{/if}}

      <!-- Call to Action -->
      {{#if callToAction}}
      <div class="cta-box">
        <div class="cta-title">Ready to Get Started?</div>
        <div class="cta-text">{{callToAction}}</div>
        {{#if validUntil}}
        <div class="cta-validity">This proposal is valid until {{validUntil}}</div>
        {{/if}}
      </div>
      {{/if}}

      <!-- Next Steps -->
      {{#if nextSteps}}
      <div class="section">
        <div class="section-header">
          <div class="section-icon">üë£</div>
          <div class="section-title">Next Steps</div>
          <div class="section-line"></div>
        </div>
        <div class="next-steps">
          {{#each nextSteps}}
          <div class="next-step">
            <div class="next-step-number">{{@indexPlusOne}}</div>
            <div class="next-step-text">{{this}}</div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}

      <!-- Contact -->
      {{#if preparedBy}}
      <div class="contact-block">
        <div class="contact-item">
          <span class="contact-icon">üë§</span>
          <div>
            <div class="contact-label">Prepared By</div>
            <div class="contact-value">{{preparedBy.name}}{{#if preparedBy.designation}}, {{preparedBy.designation}}{{/if}}</div>
          </div>
        </div>
        {{#if preparedBy.email}}
        <div class="contact-item">
          <span class="contact-icon">üìß</span>
          <div>
            <div class="contact-label">Email</div>
            <div class="contact-value">{{preparedBy.email}}</div>
          </div>
        </div>
        {{/if}}
        {{#if preparedBy.phone}}
        <div class="contact-item">
          <span class="contact-icon">üìû</span>
          <div>
            <div class="contact-label">Phone</div>
            <div class="contact-value">{{preparedBy.phone}}</div>
          </div>
        </div>
        {{/if}}
      </div>
      {{/if}}
    </div>

    <!-- Footer -->
    <div class="page-footer">
      <span>{{company.name}} | {{#if proposalNumber}}{{proposalNumber}}{{/if}}</span>
      <span>{{proposalDate}}</span>
    </div>
  </div>
</body>
</html>
