{{!-- 
  SORIVA - Certificate of Participation Template
  Type: participation
  Use: Events, workshops, seminars, conferences, webinars, hackathons
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{certificateTitle}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700&family=Cormorant+Garamond:ital,wght@0,500;0,600;0,700;1,500&family=Great+Vibes&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#059669{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}10{{else}}#05966910{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#047857{{/if}};
      --secondary: {{#if secondaryColor}}{{secondaryColor}}{{else}}#1e293b{{/if}};
      --text-dark: #1e293b;
      --text-muted: #64748b;
      --cream: #fafaf9;
      --border-light: #e7e5e4;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'Raleway', sans-serif;
      background: #f1f5f9;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .certificate {
      width: 900px;
      min-height: 650px;
      background: white;
      position: relative;
      {{#if showBorder}}
      border: 2px solid var(--accent);
      {{/if}}
    }

    /* Decorative Top Banner */
    .top-banner {
      height: 50px;
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
    }

    .top-banner::before,
    .top-banner::after {
      content: '';
      position: absolute;
      bottom: -10px;
      width: 0;
      height: 0;
      border-style: solid;
    }

    .top-banner::before {
      left: 0;
      border-width: 10px 15px 0 0;
      border-color: var(--accent-dark) transparent transparent transparent;
    }

    .top-banner::after {
      right: 0;
      border-width: 10px 0 0 15px;
      border-color: var(--accent-dark) transparent transparent transparent;
    }

    .banner-text {
      color: white;
      font-size: 11px;
      letter-spacing: 6px;
      text-transform: uppercase;
      font-weight: 600;
    }

    /* Inner Border */
    {{#if showBorder}}
    .inner-frame {
      position: absolute;
      inset: 60px 15px 15px 15px;
      border: 1px solid var(--border-light);
      pointer-events: none;
    }
    {{/if}}

    .content {
      padding: 30px 50px 40px;
      text-align: center;
      min-height: 580px;
      display: flex;
      flex-direction: column;
    }

    /* Header */
    .header {
      margin-bottom: 15px;
    }

    {{#if showLogo}}
    .logo {
      width: 60px;
      height: 60px;
      margin: 0 auto 10px;
    }

    .logo img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    {{/if}}

    .org-name {
      font-family: 'Cormorant Garamond', serif;
      font-size: 20px;
      font-weight: 700;
      color: var(--secondary);
      letter-spacing: 2px;
    }

    .org-address {
      font-size: 10px;
      color: var(--text-muted);
      margin-top: 3px;
      font-weight: 300;
    }

    /* Title Section */
    .title-section {
      margin: 20px 0;
    }

    .event-icon {
      font-size: 32px;
      margin-bottom: 8px;
    }

    .certificate-title {
      font-family: 'Cormorant Garamond', serif;
      font-size: 36px;
      font-weight: 700;
      color: var(--accent);
      text-transform: uppercase;
      letter-spacing: 4px;
    }

    .subtitle {
      font-size: 12px;
      color: var(--text-muted);
      margin-top: 5px;
      font-style: italic;
    }

    /* Decorative Line */
    .decorative-line {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 18px 0;
    }

    .decorative-line::before,
    .decorative-line::after {
      content: '';
      width: 80px;
      height: 1px;
      background: linear-gradient(90deg, transparent, var(--accent), transparent);
    }

    .decorative-dot {
      width: 8px;
      height: 8px;
      background: var(--accent);
      border-radius: 50%;
      margin: 0 15px;
    }

    /* Presentation Text */
    .presentation {
      font-size: 13px;
      color: var(--text-muted);
      letter-spacing: 1px;
    }

    /* Recipient */
    .recipient-name {
      font-family: 'Great Vibes', cursive;
      font-size: 50px;
      color: var(--secondary);
      margin: 12px 0;
      line-height: 1.2;
    }

    .recipient-details {
      font-size: 12px;
      color: var(--text-muted);
    }

    .recipient-details span {
      margin: 0 8px;
    }

    .recipient-details strong {
      color: var(--text-dark);
      font-weight: 500;
    }

    /* Event Box */
    .event-box {
      background: var(--cream);
      border: 1px solid var(--border-light);
      border-radius: 8px;
      padding: 18px 25px;
      margin: 20px auto;
      max-width: 600px;
      position: relative;
    }

    .event-box::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 4px;
      height: 60%;
      background: var(--accent);
      border-radius: 0 2px 2px 0;
    }

    .event-label {
      font-size: 9px;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: var(--accent);
      font-weight: 600;
      margin-bottom: 6px;
    }

    .event-name {
      font-family: 'Cormorant Garamond', serif;
      font-size: 20px;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 12px;
    }

    .event-details {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
      font-size: 11px;
      color: var(--text-muted);
    }

    .event-detail {
      display: flex;
      align-items: center;
      gap: 5px;
      background: white;
      padding: 4px 10px;
      border-radius: 4px;
      border: 1px solid var(--border-light);
    }

    .event-detail-icon {
      font-size: 12px;
    }

    /* Description */
    .description {
      font-size: 14px;
      line-height: 1.8;
      color: var(--text-dark);
      max-width: 620px;
      margin: 18px auto;
      flex-grow: 1;
    }

    /* Date */
    .issue-date {
      font-size: 12px;
      color: var(--text-muted);
      margin: 15px 0;
    }

    /* Certificate Number */
    .cert-number {
      position: absolute;
      top: 65px;
      right: 30px;
      font-size: 9px;
      color: var(--text-muted);
      letter-spacing: 1px;
    }

    /* Signatories */
    .signatories {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      margin-top: auto;
      padding-top: 15px;
    }

    .signatory {
      text-align: center;
      min-width: 170px;
    }

    .signature-line {
      width: 150px;
      border-bottom: 1px solid var(--text-dark);
      margin: 0 auto 6px;
      height: 38px;
      display: flex;
      align-items: flex-end;
      justify-content: center;
    }

    .signature-line img {
      max-width: 110px;
      max-height: 32px;
      object-fit: contain;
    }

    .signatory-name {
      font-family: 'Cormorant Garamond', serif;
      font-size: 14px;
      font-weight: 600;
      color: var(--text-dark);
    }

    .signatory-designation {
      font-size: 10px;
      color: var(--text-muted);
    }

    /* Seal */
    {{#if showSeal}}
    .seal {
      width: 70px;
      height: 70px;
    }

    .seal-inner {
      width: 100%;
      height: 100%;
      border: 2px solid var(--accent);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
      position: relative;
    }

    .seal-inner::before {
      content: '';
      position: absolute;
      inset: 5px;
      border: 1px dashed var(--accent);
      border-radius: 50%;
      opacity: 0.5;
    }

    .seal-icon {
      font-size: 24px;
    }
    {{/if}}

    /* Watermark */
    .watermark {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-20deg);
      font-family: 'Cormorant Garamond', serif;
      font-size: 100px;
      color: var(--accent);
      opacity: 0.03;
      text-transform: uppercase;
      letter-spacing: 10px;
      pointer-events: none;
      white-space: nowrap;
    }

    /* Footer */
    .footer-text {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 8px;
      color: var(--text-muted);
      letter-spacing: 1px;
    }

    @media print {
      body { background: white; padding: 0; }
      .certificate { box-shadow: none; border: 2px solid var(--accent); }
    }
  </style>
</head>
<body>
  <div class="certificate">
    <!-- Top Banner -->
    <div class="top-banner">
      <span class="banner-text">Certificate of Participation</span>
    </div>

    <!-- Watermark -->
    <div class="watermark">{{#if watermark}}{{watermark}}{{else}}Participated{{/if}}</div>

    {{#if showBorder}}
    <!-- Inner Frame -->
    <div class="inner-frame"></div>
    {{/if}}

    <!-- Certificate Number -->
    {{#if certificateNumber}}
    <div class="cert-number">No: {{certificateNumber}}</div>
    {{/if}}

    <div class="content">
      <!-- Header -->
      <div class="header">
        {{#if showLogo}}
        {{#if organizationLogo}}
        <div class="logo">
          <img src="{{organizationLogo}}" alt="Logo">
        </div>
        {{/if}}
        {{/if}}
        <div class="org-name">{{organizationName}}</div>
        {{#if organizationAddress}}
        <div class="org-address">{{organizationAddress}}</div>
        {{/if}}
      </div>

      <!-- Title -->
      <div class="title-section">
        <div class="event-icon">üé™</div>
        <h1 class="certificate-title">{{certificateTitle}}</h1>
        {{#if subtitle}}
        <div class="subtitle">{{subtitle}}</div>
        {{/if}}
      </div>

      <!-- Decorative Line -->
      <div class="decorative-line">
        <div class="decorative-dot"></div>
      </div>

      <!-- Presentation Text -->
      <div class="presentation">
        {{#if presentationText}}{{presentationText}}{{else}}This certificate is awarded to{{/if}}
      </div>

      <!-- Recipient -->
      <div class="recipient-name">{{#if recipientTitle}}{{recipientTitle}} {{/if}}{{recipientName}}</div>
      
      {{#if rollNumber}}
      <div class="recipient-details">
        {{#if rollNumber}}<span>Roll No: <strong>{{rollNumber}}</strong></span>{{/if}}
        {{#if class}}<span>Class: <strong>{{class}}{{#if section}}-{{section}}{{/if}}</strong></span>{{/if}}
      </div>
      {{/if}}

      <!-- Event Box -->
      {{#if event}}
      <div class="event-box">
        <div class="event-label">For Active Participation In</div>
        <div class="event-name">{{event.eventName}}</div>
        <div class="event-details">
          {{#if event.eventType}}
          <div class="event-detail">
            <span class="event-detail-icon">üìå</span>
            <span>{{event.eventType}}</span>
          </div>
          {{/if}}
          {{#if event.date}}
          <div class="event-detail">
            <span class="event-detail-icon">üìÖ</span>
            <span>{{event.date}}</span>
          </div>
          {{/if}}
          {{#if event.duration}}
          <div class="event-detail">
            <span class="event-detail-icon">‚è±Ô∏è</span>
            <span>{{event.duration}}</span>
          </div>
          {{/if}}
          {{#if event.venue}}
          <div class="event-detail">
            <span class="event-detail-icon">üìç</span>
            <span>{{event.venue}}</span>
          </div>
          {{/if}}
          {{#if event.organizer}}
          <div class="event-detail">
            <span class="event-detail-icon">üè¢</span>
            <span>{{event.organizer}}</span>
          </div>
          {{/if}}
        </div>
      </div>
      {{/if}}

      <!-- Description -->
      {{#if description}}
      <div class="description">{{description}}</div>
      {{/if}}

      <!-- Issue Date -->
      <div class="issue-date">
        Issued on: {{issueDate}}
      </div>

      <!-- Signatories -->
      <div class="signatories">
        {{#if secondarySignatory}}
        <div class="signatory">
          <div class="signature-line">
            {{#if secondarySignatory.signature}}
            <img src="{{secondarySignatory.signature}}" alt="Signature">
            {{/if}}
          </div>
          <div class="signatory-name">{{secondarySignatory.name}}</div>
          <div class="signatory-designation">{{secondarySignatory.designation}}</div>
        </div>
        {{/if}}

        {{#if showSeal}}
        <div class="seal">
          <div class="seal-inner">
            <span class="seal-icon">üé™</span>
          </div>
        </div>
        {{/if}}

        {{#if primarySignatory}}
        <div class="signatory">
          <div class="signature-line">
            {{#if primarySignatory.signature}}
            <img src="{{primarySignatory.signature}}" alt="Signature">
            {{/if}}
          </div>
          <div class="signatory-name">{{primarySignatory.name}}</div>
          <div class="signatory-designation">{{primarySignatory.designation}}</div>
        </div>
        {{/if}}
      </div>
    </div>

    <!-- Footer -->
    {{#if footerText}}
    <div class="footer-text">{{footerText}}</div>
    {{/if}}
  </div>
</body>
</html>
