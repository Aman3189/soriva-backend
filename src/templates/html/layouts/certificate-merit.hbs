{{!-- 
  SORIVA - Certificate of Merit Template
  Type: merit
  Use: Academic excellence, toppers, scholarships, board exam rankers
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{certificateTitle}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Great+Vibes&family=Lora:ital,wght@0,400;0,600;1,400&family=Noto+Sans+Devanagari:wght@400;500;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#b91c1c{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}15{{else}}#b91c1c15{{/if}};
      --secondary: {{#if secondaryColor}}{{secondaryColor}}{{else}}#d4af37{{/if}};
      --gold: #d4af37;
      --gold-light: #f5e6b3;
      --maroon: #7f1d1d;
      --text-dark: #1a1a1a;
      --text-muted: #555;
      --cream: #fffef7;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'Lora', Georgia, serif;
      background: #f5f5f5;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .certificate {
      width: 900px;
      min-height: 650px;
      background: var(--cream);
      position: relative;
      padding: 12px;
      {{#if showBorder}}
      border: 4px solid var(--gold);
      box-shadow: inset 0 0 0 2px var(--accent), 0 4px 20px rgba(0,0,0,0.15);
      {{/if}}
    }

    /* Ornate Border Pattern */
    {{#if showBorder}}
    .ornate-border {
      position: absolute;
      inset: 18px;
      border: 2px solid var(--gold);
      pointer-events: none;
    }

    .ornate-border::before {
      content: '';
      position: absolute;
      inset: 6px;
      border: 1px solid var(--secondary);
      opacity: 0.5;
    }
    {{/if}}

    /* Corner Flourishes */
    .corner-flourish {
      position: absolute;
      width: 70px;
      height: 70px;
      opacity: 0.7;
    }

    .corner-flourish svg {
      width: 100%;
      height: 100%;
      fill: var(--gold);
    }

    .corner-tl { top: 25px; left: 25px; }
    .corner-tr { top: 25px; right: 25px; transform: scaleX(-1); }
    .corner-bl { bottom: 25px; left: 25px; transform: scaleY(-1); }
    .corner-br { bottom: 25px; right: 25px; transform: scale(-1); }

    .content {
      position: relative;
      z-index: 1;
      padding: 25px 45px;
      text-align: center;
      min-height: 600px;
      display: flex;
      flex-direction: column;
    }

    /* Header */
    .header {
      margin-bottom: 10px;
    }

    {{#if showLogo}}
    .logo {
      width: 65px;
      height: 65px;
      margin: 0 auto 8px;
    }

    .logo img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    {{/if}}

    .org-name {
      font-family: 'Cinzel', serif;
      font-size: 18px;
      font-weight: 700;
      color: var(--maroon);
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    .org-name-hindi {
      font-family: 'Noto Sans Devanagari', sans-serif;
      font-size: 14px;
      color: var(--accent);
      margin-top: 2px;
    }

    .org-address {
      font-size: 10px;
      color: var(--text-muted);
      margin-top: 4px;
    }

    /* Title Section */
    .title-section {
      margin: 15px 0;
    }

    .star-icon {
      font-size: 36px;
      margin-bottom: 5px;
    }

    .certificate-title {
      font-family: 'Cinzel', serif;
      font-size: 38px;
      font-weight: 700;
      color: var(--accent);
      text-transform: uppercase;
      letter-spacing: 5px;
    }

    .certificate-title-hindi {
      font-family: 'Noto Sans Devanagari', sans-serif;
      font-size: 22px;
      color: var(--maroon);
      margin-top: 3px;
    }

    .subtitle {
      font-size: 12px;
      font-style: italic;
      color: var(--text-muted);
      margin-top: 5px;
      letter-spacing: 1px;
    }

    /* Royal Divider */
    .royal-divider {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 15px 0;
    }

    .royal-divider::before,
    .royal-divider::after {
      content: '';
      width: 100px;
      height: 2px;
      background: linear-gradient(90deg, transparent, var(--gold), transparent);
    }

    .royal-emblem {
      width: 30px;
      height: 30px;
      margin: 0 15px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
    }

    /* Presentation */
    .presentation {
      font-size: 13px;
      color: var(--text-muted);
      letter-spacing: 1px;
    }

    /* Recipient */
    .recipient-section {
      margin: 12px 0;
    }

    .recipient-name {
      font-family: 'Great Vibes', cursive;
      font-size: 52px;
      color: var(--maroon);
      line-height: 1.2;
    }

    .recipient-name-hindi {
      font-family: 'Noto Sans Devanagari', sans-serif;
      font-size: 20px;
      color: var(--accent);
      margin-top: 3px;
    }

    .recipient-details {
      font-size: 12px;
      color: var(--text-muted);
      margin-top: 8px;
    }

    .recipient-details span {
      margin: 0 10px;
      padding: 3px 12px;
      background: var(--accent-light);
      border-radius: 3px;
    }

    /* Achievement Section */
    .achievement-section {
      background: linear-gradient(135deg, var(--gold-light) 0%, var(--cream) 100%);
      border: 1px solid var(--gold);
      border-radius: 8px;
      padding: 18px 25px;
      margin: 18px auto;
      max-width: 550px;
      position: relative;
    }

    .achievement-section::before {
      content: '‚òÖ';
      position: absolute;
      top: -12px;
      left: 50%;
      transform: translateX(-50%);
      background: var(--cream);
      padding: 0 10px;
      color: var(--gold);
      font-size: 20px;
    }

    .achievement-title {
      font-family: 'Cinzel', serif;
      font-size: 16px;
      font-weight: 600;
      color: var(--maroon);
      margin-bottom: 8px;
    }

    .rank-badge {
      display: inline-block;
      background: linear-gradient(135deg, var(--accent) 0%, var(--maroon) 100%);
      color: white;
      padding: 6px 25px;
      border-radius: 25px;
      font-family: 'Cinzel', serif;
      font-size: 14px;
      font-weight: 600;
      letter-spacing: 2px;
      text-transform: uppercase;
      margin: 8px 0;
      box-shadow: 0 2px 8px rgba(185, 28, 28, 0.3);
    }

    .score-display {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 10px;
    }

    .score-item {
      text-align: center;
    }

    .score-value {
      font-family: 'Cinzel', serif;
      font-size: 24px;
      font-weight: 700;
      color: var(--accent);
    }

    .score-label {
      font-size: 10px;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    /* Description */
    .description {
      font-size: 14px;
      line-height: 1.8;
      color: var(--text-dark);
      max-width: 600px;
      margin: 15px auto;
      flex-grow: 1;
    }

    /* Date */
    .issue-date {
      font-size: 12px;
      color: var(--text-muted);
      margin: 12px 0;
    }

    .issue-date-hindi {
      font-family: 'Noto Sans Devanagari', sans-serif;
      font-size: 11px;
      color: var(--text-muted);
    }

    /* Certificate Number */
    .cert-number {
      position: absolute;
      top: 30px;
      right: 35px;
      font-size: 9px;
      color: var(--text-muted);
      letter-spacing: 1px;
    }

    /* Signatory Section */
    .signatory-section {
      display: flex;
      justify-content: center;
      align-items: flex-end;
      margin-top: auto;
      padding-top: 15px;
      gap: 80px;
    }

    .signatory {
      text-align: center;
      min-width: 160px;
    }

    .signature-line {
      width: 140px;
      border-bottom: 1px solid var(--text-dark);
      margin: 0 auto 6px;
      height: 35px;
      display: flex;
      align-items: flex-end;
      justify-content: center;
    }

    .signature-line img {
      max-width: 100px;
      max-height: 30px;
      object-fit: contain;
    }

    .signatory-name {
      font-family: 'Cinzel', serif;
      font-size: 13px;
      font-weight: 600;
      color: var(--text-dark);
    }

    .signatory-designation {
      font-size: 10px;
      color: var(--text-muted);
    }

    /* Seal */
    {{#if showSeal}}
    .seal {
      width: 75px;
      height: 75px;
    }

    .seal-inner {
      width: 100%;
      height: 100%;
      border: 3px solid var(--gold);
      border-radius: 50%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: radial-gradient(circle, #fffef7 0%, var(--gold-light) 100%);
      position: relative;
    }

    .seal-inner::before {
      content: '';
      position: absolute;
      inset: 4px;
      border: 1px solid var(--gold);
      border-radius: 50%;
    }

    .seal-star {
      font-size: 22px;
      color: var(--accent);
    }

    .seal-text {
      font-family: 'Cinzel', serif;
      font-size: 6px;
      text-transform: uppercase;
      color: var(--maroon);
      letter-spacing: 1px;
      margin-top: 2px;
    }
    {{/if}}

    /* Watermark */
    .watermark {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-25deg);
      font-family: 'Cinzel', serif;
      font-size: 120px;
      color: var(--gold);
      opacity: 0.04;
      text-transform: uppercase;
      pointer-events: none;
    }

    @media print {
      body { background: white; padding: 0; }
      .certificate { box-shadow: none; }
    }
  </style>
</head>
<body>
  <div class="certificate">
    <!-- Watermark -->
    <div class="watermark">{{#if watermark}}{{watermark}}{{else}}Merit{{/if}}</div>

    {{#if showBorder}}
    <!-- Ornate Border -->
    <div class="ornate-border"></div>
    {{/if}}

    <!-- Corner Flourishes -->
    <div class="corner-flourish corner-tl">
      <svg viewBox="0 0 100 100">
        <path d="M0,0 Q50,0 50,50 Q50,25 75,25 Q50,25 50,0 Q50,25 25,25 Q50,25 50,50 Q0,50 0,0 Z"/>
      </svg>
    </div>
    <div class="corner-flourish corner-tr">
      <svg viewBox="0 0 100 100">
        <path d="M0,0 Q50,0 50,50 Q50,25 75,25 Q50,25 50,0 Q50,25 25,25 Q50,25 50,50 Q0,50 0,0 Z"/>
      </svg>
    </div>
    <div class="corner-flourish corner-bl">
      <svg viewBox="0 0 100 100">
        <path d="M0,0 Q50,0 50,50 Q50,25 75,25 Q50,25 50,0 Q50,25 25,25 Q50,25 50,50 Q0,50 0,0 Z"/>
      </svg>
    </div>
    <div class="corner-flourish corner-br">
      <svg viewBox="0 0 100 100">
        <path d="M0,0 Q50,0 50,50 Q50,25 75,25 Q50,25 50,0 Q50,25 25,25 Q50,25 50,50 Q0,50 0,0 Z"/>
      </svg>
    </div>

    <!-- Certificate Number -->
    {{#if certificateNumber}}
    <div class="cert-number">{{certificateNumber}}</div>
    {{/if}}

    <div class="content">
      <!-- Header -->
      <div class="header">
        {{#if showLogo}}
        {{#if organizationLogo}}
        <div class="logo">
          <img src="{{organizationLogo}}" alt="Logo">
        </div>
        {{/if}}
        {{/if}}
        <div class="org-name">{{organizationName}}</div>
        {{#if organizationNameHindi}}
        <div class="org-name-hindi">{{organizationNameHindi}}</div>
        {{/if}}
        {{#if organizationAddress}}
        <div class="org-address">{{organizationAddress}}</div>
        {{/if}}
      </div>

      <!-- Title -->
      <div class="title-section">
        <div class="star-icon">‚≠ê</div>
        <h1 class="certificate-title">{{certificateTitle}}</h1>
        {{#if certificateTitleHindi}}
        <div class="certificate-title-hindi">{{certificateTitleHindi}}</div>
        {{/if}}
        {{#if subtitle}}
        <div class="subtitle">{{subtitle}}</div>
        {{/if}}
      </div>

      <!-- Royal Divider -->
      <div class="royal-divider">
        <div class="royal-emblem">üëë</div>
      </div>

      <!-- Presentation -->
      <div class="presentation">
        {{#if presentationText}}{{presentationText}}{{else}}This is to certify that{{/if}}
      </div>

      <!-- Recipient -->
      <div class="recipient-section">
        <div class="recipient-name">{{#if recipientTitle}}{{recipientTitle}} {{/if}}{{recipientName}}</div>
        {{#if recipientNameHindi}}
        <div class="recipient-name-hindi">{{recipientNameHindi}}</div>
        {{/if}}
        
        {{#if rollNumber}}
        <div class="recipient-details">
          {{#if rollNumber}}<span>Roll No: {{rollNumber}}</span>{{/if}}
          {{#if class}}<span>Class: {{class}}{{#if section}}-{{section}}{{/if}}</span>{{/if}}
        </div>
        {{/if}}
      </div>

      <!-- Achievement Section -->
      {{#if achievement}}
      <div class="achievement-section">
        {{#if achievement.title}}
        <div class="achievement-title">{{achievement.title}}</div>
        {{/if}}
        
        {{#if achievement.rank}}
        <div class="rank-badge">{{achievement.rank}}</div>
        {{/if}}

        {{#if achievement.score}}
        <div class="score-display">
          <div class="score-item">
            <div class="score-value">{{achievement.score}}</div>
            <div class="score-label">Score</div>
          </div>
          {{#if achievement.level}}
          <div class="score-item">
            <div class="score-value" style="font-size: 16px; text-transform: capitalize;">{{achievement.level}}</div>
            <div class="score-label">Level</div>
          </div>
          {{/if}}
        </div>
        {{/if}}
      </div>
      {{/if}}

      <!-- Description -->
      {{#if description}}
      <div class="description">{{description}}</div>
      {{/if}}

      <!-- Issue Date -->
      <div class="issue-date">
        Date: {{issueDate}}
        {{#if issueDateHindi}}
        <div class="issue-date-hindi">‡§¶‡§ø‡§®‡§æ‡§Ç‡§ï: {{issueDateHindi}}</div>
        {{/if}}
      </div>

      <!-- Signatory Section -->
      <div class="signatory-section">
        {{#if showSeal}}
        <div class="seal">
          <div class="seal-inner">
            <span class="seal-star">‚≠ê</span>
            <span class="seal-text">Excellence</span>
          </div>
        </div>
        {{/if}}

        {{#if primarySignatory}}
        <div class="signatory">
          <div class="signature-line">
            {{#if primarySignatory.signature}}
            <img src="{{primarySignatory.signature}}" alt="Signature">
            {{/if}}
          </div>
          <div class="signatory-name">{{primarySignatory.name}}</div>
          <div class="signatory-designation">{{primarySignatory.designation}}</div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</body>
</html>
