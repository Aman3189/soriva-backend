{{!-- 
  ═══════════════════════════════════════════════════════════════════════════════
  SORIVA - PROJECT REPORT TEMPLATE: ACADEMIC
  Style: Standard academic project report format
  Best For: College/University project submissions, semester projects
  Features: Title page, Certificate, Abstract, TOC, Chapters, References
  ═══════════════════════════════════════════════════════════════════════════════
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{projectTitle}} - Project Report</title>
  <style>
    /* ═══════════════════════════════════════════════════════════════
       CSS RESET & BASE STYLES
    ═══════════════════════════════════════════════════════════════ */
    *, *::before, *::after {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    :root {
      --primary-color: {{#if accentColor}}{{accentColor}}{{else}}#1e40af{{/if}};
      --secondary-color: #1e3a8a;
      --text-color: #1f2937;
      --text-light: #6b7280;
      --text-muted: #9ca3af;
      --border-color: #e5e7eb;
      --bg-light: #f9fafb;
      --font-serif: 'Times New Roman', 'Georgia', serif;
      --font-sans: 'Arial', 'Helvetica', sans-serif;
    }

    /* ═══════════════════════════════════════════════════════════════
       PAGE SETUP
    ═══════════════════════════════════════════════════════════════ */
    @page {
      size: A4;
      margin: 1in;
    }

    @media print {
      body { -webkit-print-color-adjust: exact; print-color-adjust: exact; }
      .page-break { page-break-before: always; }
      .no-break { page-break-inside: avoid; }
    }

    html {
      font-size: 12pt;
    }

    body {
      font-family: var(--font-serif);
      line-height: 1.8;
      color: var(--text-color);
      background: #fff;
      max-width: 8.27in;
      margin: 0 auto;
      padding: 0;
    }

    /* ═══════════════════════════════════════════════════════════════
       TITLE PAGE
    ═══════════════════════════════════════════════════════════════ */
    .title-page {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
      text-align: center;
      padding: 1rem 0;
      border: 3px double var(--primary-color);
      margin-bottom: 0;
    }

    .title-page-header {
      width: 100%;
    }

    .university-name {
      font-size: 1.1rem;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--primary-color);
      margin-bottom: 0.25rem;
    }

    .institution-name {
      font-size: 1.3rem;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 0.25rem;
    }

    .institution-address {
      font-size: 0.9rem;
      color: var(--text-light);
      margin-bottom: 0.5rem;
    }

    .institution-logo {
      width: 80px;
      height: 80px;
      margin: 0.75rem auto;
    }

    .institution-logo img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    .department-name {
      font-size: 1rem;
      font-weight: bold;
      margin-top: 0.5rem;
    }

    .title-page-middle {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 1rem 2rem;
    }

    .report-label {
      font-size: 1rem;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 3px;
      margin-bottom: 0.5rem;
      color: var(--text-light);
    }

    .project-title {
      font-size: 1.5rem;
      font-weight: bold;
      text-transform: uppercase;
      line-height: 1.4;
      margin-bottom: 0.5rem;
      color: var(--primary-color);
    }

    .project-subtitle {
      font-size: 1rem;
      font-style: italic;
      color: var(--text-light);
      margin-bottom: 1.5rem;
    }

    .submitted-label {
      font-size: 0.95rem;
      margin-bottom: 0.5rem;
    }

    .course-info {
      font-size: 1rem;
      font-weight: bold;
      margin-bottom: 1.5rem;
    }

    .submitted-by-section {
      margin-top: 1rem;
    }

    .submitted-by-label {
      font-size: 0.9rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 0.5rem;
    }

    .student-info {
      font-size: 1rem;
      line-height: 1.6;
    }

    .student-name {
      font-weight: bold;
      font-size: 1.1rem;
    }

    .team-members-list {
      margin-top: 0.5rem;
    }

    .team-member {
      margin: 0.25rem 0;
    }

    .title-page-footer {
      width: 100%;
      padding-top: 1rem;
      border-top: 1px solid var(--border-color);
    }

    .guide-section {
      margin-bottom: 0.75rem;
    }

    .guide-label {
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--text-light);
    }

    .guide-name {
      font-size: 1rem;
      font-weight: bold;
    }

    .guide-designation {
      font-size: 0.9rem;
      color: var(--text-light);
    }

    .academic-year {
      font-size: 1rem;
      font-weight: bold;
      margin-top: 0.75rem;
    }

    /* ═══════════════════════════════════════════════════════════════
       CERTIFICATE PAGE
    ═══════════════════════════════════════════════════════════════ */
    .certificate-page {
      min-height: 100vh;
      padding: 2rem 0;
    }

    .certificate-title {
      font-size: 1.3rem;
      font-weight: bold;
      text-transform: uppercase;
      text-align: center;
      letter-spacing: 3px;
      margin-bottom: 2rem;
      text-decoration: underline;
    }

    .certificate-content {
      text-align: justify;
      line-height: 2;
      margin-bottom: 3rem;
    }

    .certificate-signatures {
      display: flex;
      justify-content: space-between;
      margin-top: 4rem;
    }

    .signature-block {
      text-align: center;
      min-width: 150px;
    }

    .signature-line {
      border-top: 1px solid var(--text-color);
      padding-top: 0.5rem;
      margin-top: 3rem;
    }

    .signature-name {
      font-weight: bold;
    }

    .signature-designation {
      font-size: 0.9rem;
      color: var(--text-light);
    }

    /* ═══════════════════════════════════════════════════════════════
       DECLARATION PAGE
    ═══════════════════════════════════════════════════════════════ */
    .declaration-page {
      min-height: 100vh;
      padding: 2rem 0;
    }

    .declaration-title {
      font-size: 1.3rem;
      font-weight: bold;
      text-transform: uppercase;
      text-align: center;
      letter-spacing: 3px;
      margin-bottom: 2rem;
      text-decoration: underline;
    }

    .declaration-content {
      text-align: justify;
      line-height: 2;
    }

    .declaration-footer {
      margin-top: 4rem;
    }

    .declaration-place-date {
      margin-bottom: 3rem;
    }

    .declaration-signature {
      text-align: right;
    }

    /* ═══════════════════════════════════════════════════════════════
       ACKNOWLEDGEMENT PAGE
    ═══════════════════════════════════════════════════════════════ */
    .acknowledgement-page {
      min-height: 100vh;
      padding: 2rem 0;
    }

    .acknowledgement-title {
      font-size: 1.3rem;
      font-weight: bold;
      text-transform: uppercase;
      text-align: center;
      letter-spacing: 3px;
      margin-bottom: 2rem;
      text-decoration: underline;
    }

    .acknowledgement-content {
      text-align: justify;
      line-height: 2;
    }

    .acknowledgement-signature {
      text-align: right;
      margin-top: 3rem;
    }

    /* ═══════════════════════════════════════════════════════════════
       ABSTRACT PAGE
    ═══════════════════════════════════════════════════════════════ */
    .abstract-page {
      min-height: 100vh;
      padding: 2rem 0;
    }

    .abstract-title {
      font-size: 1.3rem;
      font-weight: bold;
      text-transform: uppercase;
      text-align: center;
      letter-spacing: 3px;
      margin-bottom: 2rem;
      text-decoration: underline;
    }

    .abstract-content {
      text-align: justify;
      line-height: 2;
    }

    .keywords-section {
      margin-top: 2rem;
    }

    .keywords-label {
      font-weight: bold;
    }

    .keywords-list {
      font-style: italic;
    }

    /* ═══════════════════════════════════════════════════════════════
       TABLE OF CONTENTS
    ═══════════════════════════════════════════════════════════════ */
    .toc-page {
      min-height: 100vh;
      padding: 2rem 0;
    }

    .toc-title {
      font-size: 1.3rem;
      font-weight: bold;
      text-transform: uppercase;
      text-align: center;
      letter-spacing: 3px;
      margin-bottom: 2rem;
      text-decoration: underline;
    }

    .toc-list {
      list-style: none;
    }

    .toc-item {
      display: flex;
      justify-content: space-between;
      padding: 0.4rem 0;
      border-bottom: 1px dotted var(--border-color);
    }

    .toc-item.chapter {
      font-weight: bold;
      margin-top: 0.5rem;
    }

    .toc-item.sub-section {
      padding-left: 1.5rem;
      font-size: 0.95rem;
    }

    /* ═══════════════════════════════════════════════════════════════
       CHAPTER STYLING
    ═══════════════════════════════════════════════════════════════ */
    .chapter {
      margin-bottom: 2rem;
    }

    .chapter-header {
      text-align: center;
      margin-bottom: 1.5rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid var(--primary-color);
    }

    .chapter-number {
      font-size: 1rem;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: var(--text-light);
      margin-bottom: 0.25rem;
    }

    .chapter-title {
      font-size: 1.4rem;
      font-weight: bold;
      text-transform: uppercase;
      color: var(--primary-color);
    }

    .chapter-content {
      text-align: justify;
    }

    .chapter-content p {
      margin-bottom: 1rem;
      text-indent: 2em;
    }

    .chapter-content p.no-indent {
      text-indent: 0;
    }

    /* ═══════════════════════════════════════════════════════════════
       SECTION HEADINGS
    ═══════════════════════════════════════════════════════════════ */
    .section-heading {
      font-size: 1.15rem;
      font-weight: bold;
      margin: 1.5rem 0 1rem;
      color: var(--primary-color);
    }

    .subsection-heading {
      font-size: 1.05rem;
      font-weight: bold;
      margin: 1rem 0 0.75rem;
    }

    /* ═══════════════════════════════════════════════════════════════
       LISTS
    ═══════════════════════════════════════════════════════════════ */
    .content-list {
      margin: 1rem 0;
      padding-left: 2rem;
    }

    .content-list li {
      margin-bottom: 0.5rem;
      line-height: 1.6;
    }

    .objectives-list {
      list-style: none;
      padding-left: 0;
    }

    .objectives-list li {
      padding-left: 1.5rem;
      position: relative;
      margin-bottom: 0.5rem;
    }

    .objectives-list li::before {
      content: "▪";
      position: absolute;
      left: 0;
      color: var(--primary-color);
    }

    /* ═══════════════════════════════════════════════════════════════
       TABLES
    ═══════════════════════════════════════════════════════════════ */
    .content-table {
      width: 100%;
      border-collapse: collapse;
      margin: 1rem 0;
      font-size: 0.95rem;
    }

    .content-table caption {
      font-weight: bold;
      margin-bottom: 0.5rem;
      text-align: left;
    }

    .content-table th,
    .content-table td {
      border: 1px solid var(--border-color);
      padding: 0.5rem;
      text-align: left;
    }

    .content-table th {
      background: var(--bg-light);
      font-weight: bold;
    }

    .table-caption {
      font-size: 0.9rem;
      text-align: center;
      margin-top: 0.5rem;
      color: var(--text-light);
    }

    /* ═══════════════════════════════════════════════════════════════
       FIGURES
    ═══════════════════════════════════════════════════════════════ */
    .figure {
      margin: 1.5rem 0;
      text-align: center;
    }

    .figure img {
      max-width: 100%;
      max-height: 400px;
      border: 1px solid var(--border-color);
    }

    .figure-caption {
      font-size: 0.9rem;
      margin-top: 0.5rem;
      color: var(--text-light);
    }

    /* ═══════════════════════════════════════════════════════════════
       REFERENCES
    ═══════════════════════════════════════════════════════════════ */
    .references-section {
      margin-top: 2rem;
    }

    .references-title {
      font-size: 1.3rem;
      font-weight: bold;
      text-transform: uppercase;
      text-align: center;
      letter-spacing: 3px;
      margin-bottom: 1.5rem;
      text-decoration: underline;
    }

    .reference-item {
      margin-bottom: 0.75rem;
      padding-left: 2rem;
      text-indent: -2rem;
      line-height: 1.6;
    }

    .reference-number {
      font-weight: bold;
      color: var(--primary-color);
    }

    /* ═══════════════════════════════════════════════════════════════
       APPENDIX
    ═══════════════════════════════════════════════════════════════ */
    .appendix-section {
      margin-top: 2rem;
    }

    .appendix-title {
      font-size: 1.3rem;
      font-weight: bold;
      text-transform: uppercase;
      text-align: center;
      letter-spacing: 3px;
      margin-bottom: 1.5rem;
      text-decoration: underline;
    }

    .appendix-item {
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--border-color);
    }

    .appendix-item-title {
      font-weight: bold;
      margin-bottom: 0.5rem;
      color: var(--primary-color);
    }

    /* ═══════════════════════════════════════════════════════════════
       PAGE NUMBERS & HEADERS
    ═══════════════════════════════════════════════════════════════ */
    .page-header {
      text-align: center;
      font-size: 0.85rem;
      color: var(--text-light);
      padding-bottom: 0.5rem;
      border-bottom: 1px solid var(--border-color);
      margin-bottom: 1rem;
    }

    .page-footer {
      text-align: center;
      font-size: 0.85rem;
      color: var(--text-light);
      padding-top: 0.5rem;
      border-top: 1px solid var(--border-color);
      margin-top: 2rem;
    }
  </style>
</head>
<body>

  <!-- ═══════════════════════════════════════════════════════════════
       TITLE PAGE
  ═══════════════════════════════════════════════════════════════ -->
  <div class="title-page">
    <div class="title-page-header">
      {{#if university}}
      <div class="university-name">{{university}}</div>
      {{/if}}
      <div class="institution-name">{{institution}}</div>
      {{#if institutionAddress}}
      <div class="institution-address">{{institutionAddress}}</div>
      {{/if}}
      
      {{#if institutionLogo}}
      <div class="institution-logo">
        <img src="{{institutionLogo}}" alt="Institution Logo">
      </div>
      {{/if}}
      
      <div class="department-name">Department of {{department}}</div>
    </div>
    
    <div class="title-page-middle">
      <div class="report-label">A Project Report</div>
      <div class="report-label" style="margin-bottom: 1rem;">On</div>
      
      <h1 class="project-title">{{projectTitle}}</h1>
      {{#if projectSubtitle}}
      <div class="project-subtitle">{{projectSubtitle}}</div>
      {{/if}}
      
      <div class="submitted-label">Submitted in partial fulfillment of the requirements for the award of degree of</div>
      <div class="course-info">{{course}} in {{department}}</div>
      
      <div class="submitted-by-section">
        <div class="submitted-by-label">Submitted By</div>
        
        {{#if teamMembers}}
        <div class="team-members-list">
          {{#each teamMembers}}
          <div class="team-member">
            <span class="student-name">{{this.name}}</span>
            {{#if this.rollNumber}} ({{this.rollNumber}}){{/if}}
          </div>
          {{/each}}
        </div>
        {{else}}
        <div class="student-info">
          <div class="student-name">{{studentName}}</div>
          <div>Roll No: {{rollNumber}}</div>
          {{#if enrollmentNumber}}
          <div>Enrollment No: {{enrollmentNumber}}</div>
          {{/if}}
        </div>
        {{/if}}
      </div>
    </div>
    
    <div class="title-page-footer">
      {{#if guide}}
      <div class="guide-section">
        <div class="guide-label">Under the Guidance of</div>
        <div class="guide-name">{{guide.name}}</div>
        <div class="guide-designation">{{guide.designation}}, {{guide.department}}</div>
      </div>
      {{/if}}
      
      <div class="academic-year">{{academicYear}}</div>
    </div>
  </div>

  <!-- ═══════════════════════════════════════════════════════════════
       CERTIFICATE PAGE
  ═══════════════════════════════════════════════════════════════ -->
  {{#if certificate}}
  <div class="certificate-page page-break">
    <h2 class="certificate-title">Certificate</h2>
    <div class="certificate-content">
      {{certificate}}
    </div>
    
    <div class="certificate-signatures">
      {{#if guide}}
      <div class="signature-block">
        <div class="signature-line">
          <div class="signature-name">{{guide.name}}</div>
          <div class="signature-designation">{{guide.designation}}</div>
          <div class="signature-designation">(Project Guide)</div>
        </div>
      </div>
      {{/if}}
      
      {{#if hodName}}
      <div class="signature-block">
        <div class="signature-line">
          <div class="signature-name">{{hodName}}</div>
          <div class="signature-designation">{{hodDesignation}}</div>
          <div class="signature-designation">(Head of Department)</div>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
  {{/if}}

  <!-- ═══════════════════════════════════════════════════════════════
       DECLARATION PAGE
  ═══════════════════════════════════════════════════════════════ -->
  {{#if declaration}}
  <div class="declaration-page page-break">
    <h2 class="declaration-title">Declaration</h2>
    <div class="declaration-content">
      {{declaration}}
    </div>
    
    <div class="declaration-footer">
      <div class="declaration-place-date">
        <div>Place: _______________</div>
        <div>Date: {{formatDate submissionDate}}</div>
      </div>
      
      <div class="declaration-signature">
        {{#if teamMembers}}
        {{#each teamMembers}}
        <div style="margin-bottom: 0.5rem;">{{this.name}}</div>
        {{/each}}
        {{else}}
        <div>{{studentName}}</div>
        {{/if}}
      </div>
    </div>
  </div>
  {{/if}}

  <!-- ═══════════════════════════════════════════════════════════════
       ACKNOWLEDGEMENT PAGE
  ═══════════════════════════════════════════════════════════════ -->
  {{#if acknowledgement}}
  <div class="acknowledgement-page page-break">
    <h2 class="acknowledgement-title">Acknowledgement</h2>
    <div class="acknowledgement-content">
      {{acknowledgement}}
    </div>
    
    <div class="acknowledgement-signature">
      {{#if teamMembers}}
      {{#each teamMembers}}
      <div>{{this.name}}</div>
      {{/each}}
      {{else}}
      <div>{{studentName}}</div>
      {{/if}}
    </div>
  </div>
  {{/if}}

  <!-- ═══════════════════════════════════════════════════════════════
       ABSTRACT PAGE
  ═══════════════════════════════════════════════════════════════ -->
  <div class="abstract-page page-break">
    <h2 class="abstract-title">Abstract</h2>
    <div class="abstract-content">
      {{abstract}}
    </div>
    
    {{#if keywords}}
    <div class="keywords-section">
      <span class="keywords-label">Keywords: </span>
      <span class="keywords-list">
        {{#each keywords}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
      </span>
    </div>
    {{/if}}
  </div>

  <!-- ═══════════════════════════════════════════════════════════════
       TABLE OF CONTENTS
  ═══════════════════════════════════════════════════════════════ -->
  {{#if showTableOfContents}}
  <div class="toc-page page-break">
    <h2 class="toc-title">Table of Contents</h2>
    <ul class="toc-list">
      <li class="toc-item">Certificate</li>
      <li class="toc-item">Declaration</li>
      <li class="toc-item">Acknowledgement</li>
      <li class="toc-item">Abstract</li>
      {{#if introduction}}
      <li class="toc-item chapter">Chapter 1: Introduction</li>
      {{/if}}
      {{#if literatureReview}}
      <li class="toc-item chapter">Chapter 2: Literature Review</li>
      {{/if}}
      {{#if methodology}}
      <li class="toc-item chapter">Chapter 3: Methodology</li>
      {{/if}}
      {{#if implementation}}
      <li class="toc-item chapter">Chapter 4: Implementation</li>
      {{/if}}
      {{#if results}}
      <li class="toc-item chapter">Chapter 5: Results & Discussion</li>
      {{/if}}
      {{#if conclusion}}
      <li class="toc-item chapter">Chapter 6: Conclusion</li>
      {{/if}}
      {{#if references}}
      <li class="toc-item">References</li>
      {{/if}}
      {{#if appendix}}
      <li class="toc-item">Appendix</li>
      {{/if}}
    </ul>
  </div>
  {{/if}}

  <!-- ═══════════════════════════════════════════════════════════════
       CHAPTER 1: INTRODUCTION
  ═══════════════════════════════════════════════════════════════ -->
  {{#if introduction}}
  <div class="chapter page-break">
    <div class="chapter-header">
      <div class="chapter-number">Chapter 1</div>
      <h2 class="chapter-title">Introduction</h2>
    </div>
    
    <div class="chapter-content">
      <p>{{introduction}}</p>
      
      {{#if problemStatement}}
      <h3 class="section-heading">1.1 Problem Statement</h3>
      <p>{{problemStatement}}</p>
      {{/if}}
      
      {{#if objectives}}
      <h3 class="section-heading">1.2 Objectives</h3>
      <p class="no-indent">The main objectives of this project are:</p>
      <ul class="objectives-list">
        {{#each objectives}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      {{/if}}
      
      {{#if scope}}
      <h3 class="section-heading">1.3 Scope</h3>
      <p>{{scope}}</p>
      {{/if}}
      
      {{#if limitations}}
      <h3 class="section-heading">1.4 Limitations</h3>
      <ul class="content-list">
        {{#each limitations}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
  </div>
  {{/if}}

  <!-- ═══════════════════════════════════════════════════════════════
       CHAPTER 2: LITERATURE REVIEW
  ═══════════════════════════════════════════════════════════════ -->
  {{#if literatureReview}}
  <div class="chapter page-break">
    <div class="chapter-header">
      <div class="chapter-number">Chapter 2</div>
      <h2 class="chapter-title">Literature Review</h2>
    </div>
    
    <div class="chapter-content">
      <p>{{literatureReview}}</p>
      
      {{#if existingSystems}}
      <h3 class="section-heading">2.1 Existing Systems</h3>
      {{#each existingSystems}}
      <h4 class="subsection-heading">{{this.name}}</h4>
      <p>{{this.description}}</p>
      {{#if this.limitations}}
      <p class="no-indent"><strong>Limitations:</strong></p>
      <ul class="content-list">
        {{#each this.limitations}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      {{/if}}
      {{/each}}
      {{/if}}
    </div>
  </div>
  {{/if}}

  <!-- ═══════════════════════════════════════════════════════════════
       CHAPTER 3: METHODOLOGY
  ═══════════════════════════════════════════════════════════════ -->
  {{#if methodology}}
  <div class="chapter page-break">
    <div class="chapter-header">
      <div class="chapter-number">Chapter 3</div>
      <h2 class="chapter-title">Methodology</h2>
    </div>
    
    <div class="chapter-content">
      <p>{{methodology}}</p>
      
      {{#if developmentModel}}
      <h3 class="section-heading">3.1 Development Model</h3>
      <p>This project follows the <strong>{{developmentModel}}</strong> development methodology.</p>
      {{/if}}
      
      {{#if systemRequirements}}
      <h3 class="section-heading">3.2 System Requirements</h3>
      
      {{#if systemRequirements.hardware}}
      <h4 class="subsection-heading">Hardware Requirements</h4>
      <ul class="content-list">
        {{#each systemRequirements.hardware}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      {{/if}}
      
      {{#if systemRequirements.software}}
      <h4 class="subsection-heading">Software Requirements</h4>
      <ul class="content-list">
        {{#each systemRequirements.software}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      {{/if}}
      {{/if}}
    </div>
  </div>
  {{/if}}

  <!-- ═══════════════════════════════════════════════════════════════
       CHAPTER 4: IMPLEMENTATION
  ═══════════════════════════════════════════════════════════════ -->
  {{#if implementation}}
  <div class="chapter page-break">
    <div class="chapter-header">
      <div class="chapter-number">Chapter 4</div>
      <h2 class="chapter-title">Implementation</h2>
    </div>
    
    <div class="chapter-content">
      <p>{{implementation}}</p>
      
      {{#if techStack}}
      <h3 class="section-heading">4.1 Technology Stack</h3>
      <table class="content-table">
        <thead>
          <tr>
            <th>Category</th>
            <th>Technologies</th>
          </tr>
        </thead>
        <tbody>
          {{#each techStack}}
          <tr>
            <td>{{this.category}}</td>
            <td>{{#each this.technologies}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{/if}}
      
      {{#if modules}}
      <h3 class="section-heading">4.2 Modules</h3>
      {{#each modules}}
      <h4 class="subsection-heading">{{this.name}}</h4>
      <p>{{this.description}}</p>
      {{#if this.features}}
      <ul class="content-list">
        {{#each this.features}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      {{/if}}
      {{/each}}
      {{/if}}
      
      {{#if screenshots}}
      <h3 class="section-heading">4.3 Screenshots</h3>
      {{#each screenshots}}
      <div class="figure">
        <img src="{{this.imageUrl}}" alt="{{this.caption}}">
        <div class="figure-caption">Figure {{this.number}}: {{this.caption}}</div>
      </div>
      {{/each}}
      {{/if}}
    </div>
  </div>
  {{/if}}

  <!-- ═══════════════════════════════════════════════════════════════
       CHAPTER 5: RESULTS & DISCUSSION
  ═══════════════════════════════════════════════════════════════ -->
  {{#if results}}
  <div class="chapter page-break">
    <div class="chapter-header">
      <div class="chapter-number">Chapter 5</div>
      <h2 class="chapter-title">Results & Discussion</h2>
    </div>
    
    <div class="chapter-content">
      <p>{{results}}</p>
      
      {{#if findings}}
      <h3 class="section-heading">5.1 Key Findings</h3>
      <ul class="objectives-list">
        {{#each findings}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      {{/if}}
      
      {{#if discussion}}
      <h3 class="section-heading">5.2 Discussion</h3>
      <p>{{discussion}}</p>
      {{/if}}
      
      {{#if challengesFaced}}
      <h3 class="section-heading">5.3 Challenges Faced</h3>
      <ul class="content-list">
        {{#each challengesFaced}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
  </div>
  {{/if}}

  <!-- ═══════════════════════════════════════════════════════════════
       CHAPTER 6: CONCLUSION
  ═══════════════════════════════════════════════════════════════ -->
  {{#if conclusion}}
  <div class="chapter page-break">
    <div class="chapter-header">
      <div class="chapter-number">Chapter 6</div>
      <h2 class="chapter-title">Conclusion & Future Scope</h2>
    </div>
    
    <div class="chapter-content">
      <h3 class="section-heading">6.1 Conclusion</h3>
      <p>{{conclusion}}</p>
      
      {{#if futureScope}}
      <h3 class="section-heading">6.2 Future Scope</h3>
      <p class="no-indent">The project can be extended in the following ways:</p>
      <ul class="objectives-list">
        {{#each futureScope}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      {{/if}}
      
      {{#if recommendations}}
      <h3 class="section-heading">6.3 Recommendations</h3>
      <ul class="content-list">
        {{#each recommendations}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
  </div>
  {{/if}}

  <!-- ═══════════════════════════════════════════════════════════════
       REFERENCES
  ═══════════════════════════════════════════════════════════════ -->
  {{#if references}}
  <div class="references-section page-break">
    <h2 class="references-title">References</h2>
    
    {{#each references}}
    <div class="reference-item">
      <span class="reference-number">[{{math @index "+" 1}}]</span>
      {{#if this.authors}}
        {{#each this.authors}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
      {{/if}}
      {{#if this.year}} ({{this.year}}).{{/if}}
      {{#if this.title}} "{{this.title}}".{{/if}}
      {{#if this.publisher}} {{this.publisher}}.{{/if}}
      {{#if this.url}} Available at: {{this.url}}{{/if}}
    </div>
    {{/each}}
  </div>
  {{else if bibliography}}
  <div class="references-section page-break">
    <h2 class="references-title">Bibliography</h2>
    
    {{#each bibliography}}
    <div class="reference-item">
      <span class="reference-number">[{{math @index "+" 1}}]</span> {{this}}
    </div>
    {{/each}}
  </div>
  {{/if}}

  <!-- ═══════════════════════════════════════════════════════════════
       APPENDIX
  ═══════════════════════════════════════════════════════════════ -->
  {{#if appendix}}
  <div class="appendix-section page-break">
    <h2 class="appendix-title">Appendix</h2>
    
    {{#each appendix}}
    <div class="appendix-item">
      <div class="appendix-item-title">{{this.label}}: {{this.title}}</div>
      {{#if this.content}}
      <p>{{this.content}}</p>
      {{/if}}
      {{#if this.imageUrl}}
      <div class="figure">
        <img src="{{this.imageUrl}}" alt="{{this.title}}">
      </div>
      {{/if}}
    </div>
    {{/each}}
  </div>
  {{/if}}

</body>
</html>
