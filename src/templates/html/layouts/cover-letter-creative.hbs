      padding: 6px 14px;
      border-radius: 30px;
      backdrop-filter: blur(10px);
    }

    .contact-item i {
      font-size: 12px;
    }

    .contact-item a {
      color: rgba(255,255,255,0.95);
      text-decoration: none;
    }

