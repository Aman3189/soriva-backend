                        {{#ifEquals incidentInfo.type 'environmental'}}Environmental Incident{{/ifEquals}}
                        {{#ifEquals incidentInfo.type 'health'}}Health Incident{{/ifEquals}}
                        {{#ifEquals incidentInfo.type 'fire'}}Fire Incident{{/ifEquals}}
                        {{#ifEquals incidentInfo.type 'chemical'}}Chemical Incident{{/ifEquals}}
                        {{#ifEquals incidentInfo.type 'vehicle'}}Vehicle Incident{{/ifEquals}}
                        {{#ifEquals incidentInfo.type 'theft'}}Theft/Loss{{/ifEquals}}
                        {{#ifEquals incidentInfo.type 'cyber'}}Cyber Incident{{/ifEquals}}
                        {{#ifEquals incidentInfo.type 'near_miss'}}Near Miss{{/ifEquals}}
                        {{#ifEquals incidentInfo.type 'other'}}Other{{/ifEquals}}
                    </span>
                    <h1 class="incident-title">{{details.title}}</h1>
                    <div class="incident-number">Incident #{{incidentInfo.number}}</div>
                    <div style="margin-top: 8px;">
                        <span class="status-badge status-{{incidentInfo.status}}">{{incidentInfo.status}}</span>
                        {{#if incidentInfo.classification}}
                        <span style="margin-left: 8px; font-size: 8pt; opacity: 0.8;">
                            Classification: {{incidentInfo.classification}}
                        </span>
                        {{/if}}
                    </div>
                </div>
                <div class="banner-right">
                    <div class="severity-indicator {{incidentInfo.severity}}">
                        <span class="severity-level">{{incidentInfo.severity}}</span>
                        <span class="severity-label">Severity</span>
                    </div>
                </div>
            </div>

            <!-- Date & Time Info -->
            <div class="section">
                <div class="section-title">
                    <span class="section-icon">üìÖ</span>
                    Date & Time
                    <span class="section-title-hindi">‡§¶‡§ø‡§®‡§æ‡§Ç‡§ï ‡§î‡§∞ ‡§∏‡§Æ‡§Ø</span>
                </div>
                <div class="info-grid info-grid-4">
                    <div class="info-card highlight">
                        <div class="info-label">Incident Date / ‡§ò‡§ü‡§®‡§æ ‡§§‡§ø‡§•‡§ø</div>
                        <div class="info-value">{{incidentDateTime.date}}</div>
                        <div class="info-subtext">{{incidentDateTime.time}} {{#if incidentDateTime.shift}}({{incidentDateTime.shift}} shift){{/if}}</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Discovered / ‡§ñ‡•ã‡§ú‡§æ ‡§ó‡§Ø‡§æ</div>
                        <div class="info-value">{{incidentDateTime.discoveredDate}}</div>
                        {{#if incidentDateTime.discoveredTime}}
                        <div class="info-subtext">{{incidentDateTime.discoveredTime}}</div>
                        {{/if}}
