{{!-- 
  SORIVA - Experience Certificate Template
  Type: experience
  Use: Work experience, internship, employment verification
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{certificateTitle}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,400;0,700;1,400&family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#0f766e{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}08{{else}}#0f766e08{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#115e59{{/if}};
      --secondary: {{#if secondaryColor}}{{secondaryColor}}{{else}}#1e293b{{/if}};
      --text-dark: #1e293b;
      --text-muted: #64748b;
      --border: #e2e8f0;
      --bg-light: #f8fafc;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'Open Sans', sans-serif;
      background: #f1f5f9;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .certificate {
      width: 800px;
      min-height: 1000px;
      background: white;
      position: relative;
      {{#if showBorder}}
      border: 1px solid var(--border);
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
      {{/if}}
    }

    /* Header Bar */
    .header-bar {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
      padding: 25px 40px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .org-section {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    {{#if showLogo}}
    .logo {
      width: 60px;
      height: 60px;
      background: white;
      border-radius: 8px;
      padding: 5px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .logo img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    {{/if}}

    .org-info {
      color: white;
    }

    .org-name {
      font-family: 'Merriweather', serif;
      font-size: 20px;
      font-weight: 700;
    }

    .org-tagline {
      font-size: 11px;
      opacity: 0.9;
      margin-top: 2px;
    }

    .cert-number {
      color: white;
      font-size: 10px;
      text-align: right;
      opacity: 0.9;
    }

    .cert-number strong {
      display: block;
      font-size: 11px;
      margin-top: 2px;
    }

    /* Content */
    .content {
      padding: 35px 50px;
    }

    /* Title */
    .title-section {
      text-align: center;
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 2px solid var(--accent);
    }

    .certificate-title {
      font-family: 'Merriweather', serif;
      font-size: 28px;
      font-weight: 700;
      color: var(--accent);
      text-transform: uppercase;
      letter-spacing: 4px;
    }

    .title-underline {
      width: 60px;
      height: 3px;
      background: var(--accent);
      margin: 10px auto 0;
    }

    /* Reference Line */
    .reference-line {
      display: flex;
      justify-content: space-between;
      font-size: 11px;
      color: var(--text-muted);
      margin-bottom: 25px;
      padding-bottom: 15px;
      border-bottom: 1px dashed var(--border);
    }

    /* Body Text */
    .body-text {
      font-size: 14px;
      line-height: 2;
      color: var(--text-dark);
      text-align: justify;
    }

    .body-text p {
      margin-bottom: 18px;
    }

    /* Employee Highlight */
    .employee-name {
      font-family: 'Merriweather', serif;
      font-weight: 700;
      color: var(--accent);
      font-size: 16px;
    }

    .highlight {
      font-weight: 600;
      color: var(--secondary);
    }

    /* Experience Details Box */
    .experience-box {
      background: var(--bg-light);
      border: 1px solid var(--border);
      border-left: 4px solid var(--accent);
      border-radius: 0 8px 8px 0;
      padding: 20px 25px;
      margin: 25px 0;
    }

    .experience-box-title {
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: var(--accent);
      font-weight: 600;
      margin-bottom: 12px;
    }

    .experience-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }

    .exp-item {
      display: flex;
      align-items: flex-start;
      gap: 8px;
    }

    .exp-icon {
      font-size: 14px;
      margin-top: 2px;
    }

    .exp-content {
      flex: 1;
    }

    .exp-label {
      font-size: 10px;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .exp-value {
      font-size: 13px;
      font-weight: 600;
      color: var(--text-dark);
      margin-top: 2px;
    }

    /* Responsibilities Section */
    {{#if experience.responsibilities}}
    .responsibilities-section {
      margin: 25px 0;
    }

    .section-title {
      font-family: 'Merriweather', serif;
      font-size: 14px;
      font-weight: 700;
      color: var(--secondary);
      margin-bottom: 12px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .section-title::before {
      content: '';
      width: 4px;
      height: 18px;
      background: var(--accent);
      border-radius: 2px;
    }

    .responsibilities-list {
      list-style: none;
      padding-left: 15px;
    }

    .responsibilities-list li {
      font-size: 13px;
      line-height: 1.8;
      color: var(--text-dark);
      margin-bottom: 8px;
      padding-left: 20px;
      position: relative;
    }

    .responsibilities-list li::before {
      content: '‚úì';
      position: absolute;
      left: 0;
      color: var(--accent);
      font-weight: 700;
    }
    {{/if}}

    /* Performance Section */
    {{#if experience.performance}}
    .performance-section {
      background: linear-gradient(135deg, var(--accent-light) 0%, white 100%);
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 20px 25px;
      margin: 25px 0;
    }

    .performance-title {
      font-family: 'Merriweather', serif;
      font-size: 13px;
      font-weight: 700;
      color: var(--accent);
      margin-bottom: 10px;
    }

    .performance-text {
      font-size: 13px;
      line-height: 1.8;
      color: var(--text-dark);
      font-style: italic;
    }
    {{/if}}

    /* Closing Text */
    .closing-text {
      font-size: 14px;
      line-height: 2;
      color: var(--text-dark);
      margin-top: 20px;
    }

    /* Footer Section */
    .footer-section {
      margin-top: 40px;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
    }

    /* Date & Place */
    .date-place {
      font-size: 12px;
      color: var(--text-muted);
    }

    .date-place p {
      margin-bottom: 5px;
    }

    .date-place strong {
      color: var(--text-dark);
    }

    /* Signatory */
    .signatory-block {
      display: flex;
      gap: 50px;
    }

    .signatory {
      text-align: center;
      min-width: 150px;
    }

    .signature-line {
      width: 140px;
      border-bottom: 1px solid var(--text-dark);
      margin: 0 auto 8px;
      height: 45px;
      display: flex;
      align-items: flex-end;
      justify-content: center;
    }

    .signature-line img {
      max-width: 110px;
      max-height: 40px;
      object-fit: contain;
    }

    .signatory-name {
      font-size: 13px;
      font-weight: 600;
      color: var(--text-dark);
    }

    .signatory-designation {
      font-size: 11px;
      color: var(--text-muted);
    }

    /* Seal */
    {{#if showSeal}}
    .seal {
      position: absolute;
      bottom: 120px;
      right: 60px;
      width: 80px;
      height: 80px;
    }

    .seal-inner {
      width: 100%;
      height: 100%;
      border: 2px solid var(--accent);
      border-radius: 50%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: white;
      transform: rotate(-15deg);
    }

    .seal-icon {
      font-size: 24px;
    }

    .seal-text {
      font-size: 7px;
      text-transform: uppercase;
      color: var(--accent);
      letter-spacing: 1px;
      margin-top: 2px;
      font-weight: 600;
    }
    {{/if}}

    /* Company Footer */
    .company-footer {
      margin-top: 40px;
      padding-top: 20px;
      border-top: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 10px;
      color: var(--text-muted);
    }

    .company-contact span {
      margin-right: 15px;
    }

    .company-contact span::before {
      margin-right: 5px;
    }

    /* Watermark */
    .watermark {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-30deg);
      font-family: 'Merriweather', serif;
      font-size: 80px;
      color: var(--accent);
      opacity: 0.03;
      text-transform: uppercase;
      pointer-events: none;
      white-space: nowrap;
    }

    @media print {
      body { background: white; padding: 0; }
      .certificate { box-shadow: none; }
    }
  </style>
</head>
<body>
  <div class="certificate">
    <!-- Watermark -->
    <div class="watermark">{{#if watermark}}{{watermark}}{{else}}Experience{{/if}}</div>

    <!-- Header Bar -->
    <div class="header-bar">
      <div class="org-section">
        {{#if showLogo}}
        {{#if organizationLogo}}
        <div class="logo">
          <img src="{{organizationLogo}}" alt="Logo">
        </div>
        {{/if}}
        {{/if}}
        <div class="org-info">
          <div class="org-name">{{organizationName}}</div>
          {{#if organizationWebsite}}
          <div class="org-tagline">{{organizationWebsite}}</div>
          {{/if}}
        </div>
      </div>
      {{#if certificateNumber}}
      <div class="cert-number">
        Reference No.<br>
        <strong>{{certificateNumber}}</strong>
      </div>
      {{/if}}
    </div>

    <!-- Content -->
    <div class="content">
      <!-- Title -->
      <div class="title-section">
        <h1 class="certificate-title">{{certificateTitle}}</h1>
        <div class="title-underline"></div>
      </div>

      <!-- Reference Line -->
      <div class="reference-line">
        <span>To Whomsoever It May Concern</span>
        <span>Date: {{issueDate}}</span>
      </div>

      <!-- Body -->
      <div class="body-text">
        <p>
          {{#if presentationText}}
          {{presentationText}}
          {{else}}
          This is to certify that <span class="employee-name">{{#if recipientTitle}}{{recipientTitle}} {{/if}}{{recipientName}}</span>
          {{#if employeeId}}(Employee ID: <span class="highlight">{{employeeId}}</span>){{/if}}
          was employed with <span class="highlight">{{organizationName}}</span>
          {{#if experience}}
          as <span class="highlight">{{experience.position}}</span>
          {{#if experience.department}}in the <span class="highlight">{{experience.department}}</span> department{{/if}}
          from <span class="highlight">{{experience.startDate}}</span> to <span class="highlight">{{experience.endDate}}</span>.
          {{/if}}
          {{/if}}
        </p>
      </div>

      <!-- Experience Details Box -->
      {{#if experience}}
      <div class="experience-box">
        <div class="experience-box-title">Employment Details</div>
        <div class="experience-grid">
          <div class="exp-item">
            <span class="exp-icon">üë§</span>
            <div class="exp-content">
              <div class="exp-label">Employee Name</div>
              <div class="exp-value">{{recipientName}}</div>
            </div>
          </div>
          {{#if employeeId}}
          <div class="exp-item">
            <span class="exp-icon">üÜî</span>
            <div class="exp-content">
              <div class="exp-label">Employee ID</div>
              <div class="exp-value">{{employeeId}}</div>
            </div>
          </div>
          {{/if}}
          <div class="exp-item">
            <span class="exp-icon">üíº</span>
            <div class="exp-content">
              <div class="exp-label">Designation</div>
              <div class="exp-value">{{experience.position}}</div>
            </div>
          </div>
          {{#if experience.department}}
          <div class="exp-item">
            <span class="exp-icon">üè¢</span>
            <div class="exp-content">
              <div class="exp-label">Department</div>
              <div class="exp-value">{{experience.department}}</div>
            </div>
          </div>
          {{/if}}
          <div class="exp-item">
            <span class="exp-icon">üìÖ</span>
            <div class="exp-content">
              <div class="exp-label">Duration</div>
              <div class="exp-value">{{experience.startDate}} - {{experience.endDate}}</div>
            </div>
          </div>
          {{#if experience.duration}}
          <div class="exp-item">
            <span class="exp-icon">‚è±Ô∏è</span>
            <div class="exp-content">
              <div class="exp-label">Total Tenure</div>
              <div class="exp-value">{{experience.duration}}</div>
            </div>
          </div>
          {{/if}}
        </div>
      </div>
      {{/if}}

      <!-- Responsibilities -->
      {{#if experience.responsibilities}}
      <div class="responsibilities-section">
        <div class="section-title">Key Responsibilities</div>
        <ul class="responsibilities-list">
          {{#each experience.responsibilities}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
      {{/if}}

      <!-- Performance -->
      {{#if experience.performance}}
      <div class="performance-section">
        <div class="performance-title">Performance & Conduct</div>
        <div class="performance-text">{{experience.performance}}</div>
      </div>
      {{/if}}

      <!-- Description/Closing -->
      {{#if description}}
      <div class="closing-text">
        <p>{{description}}</p>
      </div>
      {{/if}}

      <div class="closing-text">
        <p>We wish {{#if recipientTitle}}{{recipientTitle}} {{/if}}{{recipientName}} all the best in future endeavors.</p>
      </div>

      <!-- Footer Section -->
      <div class="footer-section">
        <div class="date-place">
          <p>Place: <strong>{{#if organizationAddress}}{{organizationAddress}}{{else}}________________{{/if}}</strong></p>
          <p>Date: <strong>{{issueDate}}</strong></p>
        </div>

        <div class="signatory-block">
          {{#if secondarySignatory}}
          <div class="signatory">
            <div class="signature-line">
              {{#if secondarySignatory.signature}}
              <img src="{{secondarySignatory.signature}}" alt="Signature">
              {{/if}}
            </div>
            <div class="signatory-name">{{secondarySignatory.name}}</div>
            <div class="signatory-designation">{{secondarySignatory.designation}}</div>
          </div>
          {{/if}}

          {{#if primarySignatory}}
          <div class="signatory">
            <div class="signature-line">
              {{#if primarySignatory.signature}}
              <img src="{{primarySignatory.signature}}" alt="Signature">
              {{/if}}
            </div>
            <div class="signatory-name">{{primarySignatory.name}}</div>
            <div class="signatory-designation">{{primarySignatory.designation}}</div>
          </div>
          {{/if}}
        </div>
      </div>

      <!-- Company Footer -->
      <div class="company-footer">
        <div class="company-contact">
          {{#if organizationAddress}}<span>üìç {{organizationAddress}}</span>{{/if}}
          {{#if organizationWebsite}}<span>üåê {{organizationWebsite}}</span>{{/if}}
        </div>
        <div>This is a computer-generated document</div>
      </div>
    </div>

    <!-- Seal -->
    {{#if showSeal}}
    <div class="seal">
      <div class="seal-inner">
        <span class="seal-icon">üíº</span>
        <span class="seal-text">Verified</span>
      </div>
    </div>
    {{/if}}
  </div>
</body>
</html>
