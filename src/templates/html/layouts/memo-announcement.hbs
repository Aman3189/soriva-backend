{{!-- 
  SORIVA - Announcement Template
  Type: announcement
  Use: Events, achievements, celebrations, news
--}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{subject}}</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    :root {
      --accent: {{#if accentColor}}{{accentColor}}{{else}}#7c3aed{{/if}};
      --accent-light: {{#if accentColor}}{{accentColor}}15{{else}}#7c3aed15{{/if}};
      --accent-dark: {{#if accentColor}}{{accentColor}}{{else}}#6d28d9{{/if}};
      --text-dark: #1e1b4b;
      --text-muted: #64748b;
      --border: #e2e8f0;
      --bg-light: #f8fafc;
      --gold: #f59e0b;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    @page { size: A4; margin: 18mm; }

    body {
      font-family: 'Poppins', sans-serif;
      font-size: 11pt;
      line-height: 1.7;
      color: var(--text-dark);
      background: #f1f5f9;
      padding: 20px;
    }

    .document {
      max-width: 210mm;
      margin: 0 auto;
      background: white;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    /* Header */
    .header {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
      color: white;
      padding: 30px 40px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .header::before {
      content: 'üéâ';
      position: absolute;
      font-size: 100pt;
      opacity: 0.1;
      left: -20px;
      top: -20px;
    }

    .header::after {
      content: '‚ú®';
      position: absolute;
      font-size: 80pt;
      opacity: 0.1;
      right: -10px;
      bottom: -20px;
    }

    .header-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      position: relative;
      z-index: 1;
    }

    {{#if showLogo}}
    .logo {
      width: 55px; height: 55px;
      background: white; border-radius: 10px; padding: 5px;
    }
    .logo img { width: 100%; height: 100%; object-fit: contain; }
    {{/if}}

    .org-name { font-size: 12pt; font-weight: 600; opacity: 0.95; }
    .announce-date { font-size: 10pt; opacity: 0.85; }

    .announce-badge {
      display: inline-block;
      background: var(--gold);
      color: white;
      padding: 10px 35px;
      border-radius: 30px;
      font-size: 11pt;
      font-weight: 700;
      letter-spacing: 3px;
      text-transform: uppercase;
      margin-bottom: 15px;
      position: relative;
      z-index: 1;
    }

    .announce-title {
      font-size: 24pt;
      font-weight: 800;
      line-height: 1.3;
      position: relative;
      z-index: 1;
    }

    /* Content */
    .content { padding: 35px 40px; }

    /* Greeting */
    .greeting {
      font-size: 13pt;
      color: var(--accent);
      font-weight: 600;
      margin-bottom: 20px;
    }

    /* Body */
    .announce-body {
      font-size: 12pt;
      line-height: 1.9;
      margin-bottom: 30px;
    }

    .announce-body p { margin-bottom: 15px; }

    .highlight-text {
      background: linear-gradient(120deg, var(--accent-light) 0%, var(--accent-light) 100%);
      padding: 2px 8px;
      border-radius: 4px;
      font-weight: 600;
    }

    /* Achievement Card */
    .achievement-card {
      background: linear-gradient(135deg, var(--gold) 0%, #d97706 100%);
      color: white;
      border-radius: 16px;
      padding: 30px;
      margin: 30px 0;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .achievement-card::before {
      content: 'üèÜ';
      position: absolute;
      font-size: 80pt;
      opacity: 0.15;
      right: -10px;
      top: -20px;
    }

    .achievement-icon { font-size: 40pt; margin-bottom: 10px; }
    .achievement-label {
      font-size: 10pt;
      text-transform: uppercase;
      letter-spacing: 2px;
      opacity: 0.9;
    }
    .achievement-name {
      font-size: 22pt;
      font-weight: 800;
      margin: 8px 0;
    }
    .achievement-desc {
      font-size: 11pt;
      opacity: 0.95;
    }

    /* Event Card */
    .event-card {
      background: var(--accent-light);
      border: 2px solid var(--accent);
      border-radius: 16px;
      padding: 25px;
      margin: 30px 0;
    }

    .event-card-title {
      font-size: 14pt;
      font-weight: 700;
      color: var(--accent);
      margin-bottom: 20px;
      text-align: center;
    }

    .event-details {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .event-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 15px;
      background: white;
      border-radius: 10px;
    }

    .event-icon {
      width: 45px;
      height: 45px;
      background: var(--accent);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18pt;
    }

    .event-label {
      font-size: 9pt;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .event-value {
      font-weight: 700;
      color: var(--text-dark);
      font-size: 12pt;
    }

    /* CTA Box */
    .cta-box {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
      color: white;
      border-radius: 12px;
      padding: 20px 30px;
      margin: 25px 0;
      text-align: center;
    }

    .cta-text {
      font-size: 14pt;
      font-weight: 700;
    }

    .cta-subtext {
      font-size: 11pt;
      opacity: 0.9;
      margin-top: 5px;
    }

    /* From Section */
    .from-section {
      margin-top: 35px;
      padding-top: 20px;
      border-top: 1px dashed var(--border);
    }

    .from-label {
      font-size: 10pt;
      color: var(--text-muted);
      margin-bottom: 5px;
    }

    .from-name {
      font-weight: 700;
      font-size: 12pt;
    }

    .from-designation {
      font-size: 10pt;
      color: var(--text-muted);
    }

    /* Footer */
    .footer {
      background: var(--bg-light);
      padding: 15px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 9pt;
      color: var(--text-muted);
    }

    .footer-org { font-weight: 600; color: var(--accent); }

    /* Decorative Elements */
    .confetti {
      position: absolute;
      width: 10px;
      height: 10px;
      border-radius: 2px;
      opacity: 0.6;
    }

    /* Watermark */
    {{#if showWatermark}}
    .watermark {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-25deg);
      font-size: 60pt;
      color: var(--accent);
      opacity: 0.03;
      pointer-events: none;
    }
    {{/if}}

    @media print {
      body { background: white; padding: 0; }
      .document { box-shadow: none; border-radius: 0; }
    }
  </style>
</head>
<body>
  <div class="document">
    {{#if showWatermark}}<div class="watermark">{{#if watermark}}{{watermark}}{{else}}ANNOUNCEMENT{{/if}}</div>{{/if}}

    <!-- Header -->
    <div class="header">
      <div class="header-top">
        {{#if showLogo}}{{#if organizationLogo}}
        <div class="logo"><img src="{{organizationLogo}}" alt="Logo"></div>
        {{else}}<div></div>{{/if}}{{else}}<div></div>{{/if}}
        <div class="org-name">{{organizationName}}</div>
        <div class="announce-date">{{date}}</div>
      </div>
      <div class="announce-badge">üì£ Announcement</div>
      <div class="announce-title">{{subject}}</div>
    </div>

    <!-- Content -->
    <div class="content">
      <!-- Greeting -->
      {{#if greeting}}
      <div class="greeting">{{greeting}}</div>
      {{/if}}

      <!-- Body -->
      <div class="announce-body">
        {{{body}}}
      </div>

      <!-- Achievement Card (if it's about a person/achievement) -->
      {{#if event.eventName}}
      {{#unless event.eventDate}}
      <div class="achievement-card">
        <div class="achievement-icon">üåü</div>
        <div class="achievement-label">Congratulations</div>
        <div class="achievement-name">{{event.eventName}}</div>
        {{#if event.venue}}
        <div class="achievement-desc">{{event.venue}}</div>
        {{/if}}
      </div>
      {{/unless}}
      {{/if}}

      <!-- Event Card -->
      {{#if event.eventDate}}
      <div class="event-card">
        {{#if event.eventName}}
        <div class="event-card-title">üéä {{event.eventName}}</div>
        {{/if}}
        <div class="event-details">
          <div class="event-item">
            <div class="event-icon">üìÖ</div>
            <div>
              <div class="event-label">Date</div>
              <div class="event-value">{{event.eventDate}}</div>
            </div>
          </div>
          {{#if event.eventTime}}
          <div class="event-item">
            <div class="event-icon">üïê</div>
            <div>
              <div class="event-label">Time</div>
              <div class="event-value">{{event.eventTime}}</div>
            </div>
          </div>
          {{/if}}
          {{#if event.venue}}
          <div class="event-item">
            <div class="event-icon">üìç</div>
            <div>
              <div class="event-label">Venue</div>
              <div class="event-value">{{event.venue}}</div>
            </div>
          </div>
          {{/if}}
          <div class="event-item">
            <div class="event-icon">üë•</div>
            <div>
              <div class="event-label">For</div>
              <div class="event-value">
                {{#ifEquals to.type "all-employees"}}All Employees{{/ifEquals}}
                {{#ifEquals to.type "department"}}{{to.department}}{{/ifEquals}}
                {{#ifEquals to.type "management"}}Management{{/ifEquals}}
                {{#unless to.type}}Everyone{{/unless}}
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/if}}

      <!-- Call to Action -->
      {{#if callToAction}}
      <div class="cta-box">
        <div class="cta-text">{{callToAction}}</div>
        <div class="cta-subtext">We look forward to seeing you there! üéâ</div>
      </div>
      {{/if}}

      <!-- From Section -->
      <div class="from-section">
        <div class="from-label">Warm Regards,</div>
        <div class="from-name">{{from.name}}</div>
        <div class="from-designation">{{from.designation}}{{#if from.department}}, {{from.department}}{{/if}}</div>
      </div>
    </div>

    <!-- Footer -->
    <div class="footer">
      <div class="footer-org">{{organizationName}}</div>
      <div>{{#if memoNumber}}Ref: {{memoNumber}}{{/if}}</div>
    </div>
  </div>
</body>
</html>
