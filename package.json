{
  "name": "soriva-backend",
  "version": "1.0.0",
  "description": "Soriva Lumos Backend - AI-powered platform with chat and video studio",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "build:secure": "node scripts/build-secure.js",
    "build:secure:fast": "node scripts/build-secure.js --fast",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "start:secure": "cd dist-secure && node server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check:types": "tsc --noEmit",
    "check:all": "npm run format:check && npm run lint && npm run check:types"
  },
  "keywords": [
    "ai",
    "backend",
    "typescript",
    "express",
    "prisma"
  ],
  "author": "Soriva Team",
  "license": "ISC",
